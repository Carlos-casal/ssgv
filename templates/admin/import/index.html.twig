{% extends 'base.html.twig' %}

{% block title %}Import Volunteer Hours{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Import Volunteer Hours from CSV</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="card">
            <div class="card-body">
                <p>Please upload a CSV file with the following columns:</p>
                <code>NÂº;VOLUNTARIO;TOTAL;HORAS_1;FECHA_1;COMENTARIO_1;HORAS_2;FECHA_2;COMENTARIO_2;...</code>
                <p class="text-muted mt-2">The 'VOLUNTARIO' and 'TOTAL' columns will be ignored.</p>

                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary mt-3">Upload and Import</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
