{# templates/volunteer/registration_success.html.twig #}
{% extends 'layout/public.html.twig' %}

{% block page_title %}Registro Completado con Éxito{% endblock %}

{% block content %}
<div class="bg-gray-50 py-20 flex items-center justify-center">
    <div class="max-w-md w-full bg-white p-8 rounded-xl shadow-lg text-center">
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-6">
            <svg class="h-10 w-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-800 mb-2">¡Registro completado!</h1>
        <p class="text-gray-600 mb-6">Tu cuenta de voluntario ha sido creada con éxito.</p>

        {% set success_messages = app.flashes('registration_success') %}
        {% set generated_password = app.flashes('generated_password')|first %}

        {% if generated_password %}
            <div class="bg-blue-50 border-l-4 border-blue-400 p-4 rounded-r-lg mb-6">
                <div class="flex">
                    <div class="py-1"><svg class="h-6 w-6 text-blue-500 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg></div>
                    <div>
                        <p class="font-bold">Guarda tu contraseña</p>
                        <p class="text-sm">Esta es la única vez que te la mostraremos.</p>
                    </div>
                </div>
            </div>

            <div class="mb-6 text-center">
                <p class="text-gray-600 mb-2">Tu contraseña generada es:</p>
                <div class="bg-gray-100 text-gray-800 font-mono text-lg py-3 px-4 rounded-lg border border-gray-300 inline-block">
                    {{ generated_password }}
                </div>
            </div>
        {% endif %}

        <a href="{{ path('app_login') }}" class="w-full inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors shadow-md">
            Ir a Iniciar Sesión
        </a>
    </div>
</div>
{% endblock %}