{% extends 'layout/app.html.twig' %}

{% block page_title %}Editando a Voluntari@{% endblock %}

{% block content %}
<div class="container mx-auto p-4 lg:p-6">
    {{ form_start(form, {'attr': {'class': 'space-y-8', 'novalidate': 'novalidate', 'data-controller': 'form-validation'}}) }}

    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">
            Editando a Voluntari@: <span class="text-blue-600">{{ volunteer.name }} {{ volunteer.lastName }}</span>
        </h1>
    </div>

    {# --- Section: Profile Picture --- #}
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 text-center">
        <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Foto de Perfil</h2>
        <img id="preview-element" src="{{ volunteer.profilePicture ? asset('uploads/profile_pictures/' ~ volunteer.profilePicture) : asset('images/placeholder-avatar.png') }}" alt="Vista previa" class="w-32 h-32 rounded-full object-cover mb-4 border-2 border-gray-200 shadow-sm mx-auto">
        {{ form_widget(form.profilePicture, {'attr': {'data-action': 'change->form-validation#previewImage'}}) }}
        <p class="text-xs text-gray-500 mt-2">JPG o PNG, máx 1MB.</p>
    </div>

    {# --- Section: Datos Personales --- #}
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Datos Personales</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-x-8 gap-y-6">
            <div class="relative">{{ form_row(form.name, {'attr': {'data-action': 'input->form-validation#validate'}}) }}</div>
            <div class="relative">{{ form_row(form.lastName, {'attr': {'data-action': 'input->form-validation#validate'}}) }}</div>
            <div class="relative">{{ form_row(form.dni, {'attr': {'data-action': 'input->form-validation#validate'}}) }}</div>
            <div class="relative">{{ form_row(form.dateOfBirth, {'attr': {'data-action': 'change->form-validation#validate'}}) }}</div>
            <div class="relative">{{ form_row(form.phone, {'attr': {'data-action': 'input->form-validation#validate'}}) }}</div>
            <div class="relative">{{ form_row(form.email, {'attr': {'data-action': 'input->form-validation#validate'}}) }}</div>
        </div>
    </div>

    {# --- Section: Dirección --- #}
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Dirección</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
            <div class="md:col-span-2 grid grid-cols-1 md:grid-cols-3 gap-x-8">
                <div class="relative md:col-span-1">{{ form_row(form.streetType, {'attr': {'data-action': 'change->form-validation#validate'}}) }}</div>
                <div class="relative md:col-span-2">{{ form_row(form.address, {'attr': {'data-action': 'input->form-validation#validate'}}) }}</div>
            </div>
            <div class="md:col-span-2 grid grid-cols-1 md:grid-cols-3 gap-x-8">
                <div class="relative">{{ form_row(form.postalCode, {'attr': {'data-action': 'input->form-validation#validate'}}) }}</div>
                <div class="relative">{{ form_row(form.city, {'attr': {'data-action': 'input->form-validation#validate'}}) }}</div>
                <div class="relative">{{ form_row(form.province, {'attr': {'data-action': 'input->form-validation#validate'}}) }}</div>
            </div>
        </div>
    </div>

    {# --- Section: Contacto de Emergencia --- #}
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Contacto de Emergencia</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
            <div class="relative">{{ form_row(form.contactPerson1, {'attr': {'data-action': 'input->form-validation#validate'}}) }}</div>
            <div class="relative">{{ form_row(form.contactPhone1, {'attr': {'data-action': 'input->form-validation#validate'}}) }}</div>
        </div>
    </div>

    {# --- Section: Información de Salud --- #}
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Información de Salud</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8">
            {{ form_row(form.foodAllergies) }}
            {{ form_row(form.otherAllergies) }}
        </div>
    </div>

    {# --- Section: Cualificaciones --- #}
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Cualificaciones</h2>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="space-y-4">
                {{ form_row(form.drivingLicenses, {'attr': {'data-action': 'change->form-validation#toggleDrivingLicenseExpiry'}}) }}
                <div id="driving-license-expiry-wrapper" class="hidden relative">
                    {{ form_row(form.drivingLicenseExpiryDate, {'attr': {'data-action': 'change->form-validation#validate'}}) }}
                </div>
                {{ form_row(form.habilitadoConducir) }}
            </div>
            <div class="space-y-4">{{ form_row(form.navigationLicenses) }}</div>
            <div class="space-y-4">{{ form_row(form.specificQualifications) }}</div>
        </div>
        <div class="mt-6 border-t pt-6 relative">
            {{ form_row(form.otherQualifications) }}
        </div>
    </div>

    {# --- Section: Motivación e Intereses --- #}
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Motivación e Intereses</h2>
        <div class="space-y-6">
            <div class="relative">{{ form_row(form.motivation, {'attr': {'data-action': 'input->form-validation#validate'}}) }}</div>
            <div class="relative">{{ form_row(form.howKnown, {'attr': {'data-action': 'input->form-validation#validate'}}) }}</div>
            <div class="flex items-center gap-8">
                {{ form_row(form.hasVolunteeredBefore, {'attr': {'data-action': 'change->form-validation#togglePreviousInstitutions'}}) }}
                <div id="previous-institutions-wrapper" class="flex-grow hidden relative">
                    {{ form_row(form.previousVolunteeringInstitutions, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                </div>
            </div>
        </div>
    </div>

    {# --- Action Buttons --- #}
    <div class="flex justify-end items-center pt-6 border-t mt-8">
        <div class="flex items-center gap-3">
            <a href="{{ path('app_volunteer_list') }}" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors text-sm font-medium">Cancelar</a>
            <button type="submit" class="px-5 py-2 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg transition-colors shadow-sm text-sm">Guardar Cambios</button>
        </div>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}