{% extends 'layout/app.html.twig' %}

{% block page_title %}Alta Voluntario{% endblock %}

{% block content %}
<div class="container mx-auto p-4 lg:p-6">
    {{ form_start(form, {'attr': {'class': 'space-y-8', 'novalidate': 'novalidate', 'data-controller': 'form-validation'}}) }}

    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800">
            Alta Voluntario
        </h1>
        <div class="flex items-center gap-3">
            <a href="{{ path('app_volunteer_list') }}" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition-colors">Cancelar</a>
            <button type="submit" class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg transition-colors shadow-sm">
                Dar de Alta Voluntario
            </button>
        </div>
    </div>

    {# Main layout grid #}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        {# Left column with main form fields #}
        <div class="lg:col-span-2 space-y-8">

            {# Section: Datos Personales #}
            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Datos Personales</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.name) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.name, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.lastName) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.lastName, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.dni) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.dni, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.dateOfBirth) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.dateOfBirth, {'attr': {'data-action': 'change->form-validation#validate'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.phone) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.phone, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                        {{ form_help(form.phone) }}
                    </div>
                    <div>
                        {{ form_label(form.email) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.email, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.indicativo) }}
                        {{ form_widget(form.indicativo) }}
                        <datalist id="indicativos-list">
                            {% for indicativo in available_indicativos %}
                                <option value="{{ indicativo }}">
                            {% endfor %}
                        </datalist>
                    </div>
                    <div>
                        {{ form_label(form.numeroIdentificacion) }}
                        {{ form_widget(form.numeroIdentificacion) }}
                    </div>
                </div>
            </div>

            {# Section: Dirección #}
            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Dirección</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.streetType) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.streetType, {'attr': {'data-action': 'change->form-validation#validate'}}) }}
                    </div>
                    <div class="md:col-span-2">
                        {{ form_label(form.address) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.address, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.city) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.city, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.province) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.province, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.postalCode) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.postalCode, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                    </div>
                </div>
            </div>

            {# Section: Información de Emergencia #}
            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Contacto de Emergencia</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.contactPerson1) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.contactPerson1, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.contactPhone1) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.contactPhone1, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                    </div>
                </div>
            </div>

            {# Section: Motivación e Intereses #}
            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Motivación e Intereses</h2>
                <div class="space-y-6">
                    <div>
                        {{ form_label(form.motivation) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.motivation, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.howKnown) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.howKnown, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.hasVolunteeredBefore) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.hasVolunteeredBefore, {'attr': {'data-action': 'change->form-validation#togglePreviousInstitutions'}}) }}
                    </div>
                    <div id="previous-institutions-wrapper" class="hidden">
                        {{ form_label(form.previousVolunteeringInstitutions) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.previousVolunteeringInstitutions, {'attr': {'data-action': 'input->form-validation#validate'}}) }}
                    </div>
                </div>
            </div>

        </div>

        {# Right column with secondary info #}
        <div class="lg:col-span-1 space-y-8">

            {# Section: Foto de Perfil #}
            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 text-center">
                <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Foto de Perfil</h2>
                <img id="preview-element" src="{{ asset('images/placeholder-avatar.png') }}" alt="Vista previa" class="w-32 h-32 rounded-full object-cover mb-4 border-2 border-gray-200 shadow-sm mx-auto">
                {{ form_widget(form.profilePicture, {'attr': {'data-action': 'change->form-validation#previewImage'}}) }}
                <p class="text-xs text-gray-500 mt-2">JPG o PNG, máx 1MB.</p>
            </div>

            {# Section: Cualificaciones #}
            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Cualificaciones</h2>
                <div class="space-y-6">
                    <div>
                        {{ form_label(form.profession) }}
                        {{ form_widget(form.profession) }}
                    </div>
                    <div>
                        {{ form_label(form.specificQualifications) }}
                        {{ form_widget(form.specificQualifications) }}
                    </div>
                    <div>
                        {{ form_label(form.drivingLicenses) }}
                        {{ form_widget(form.drivingLicenses, {'attr': {'data-action': 'change->form-validation#toggleDrivingLicenseExpiry'}}) }}
                    </div>
                    <div id="driving-license-expiry-wrapper" class="hidden">
                        {{ form_label(form.drivingLicenseExpiryDate) }} <span class="text-red-500">*</span>
                        {{ form_widget(form.drivingLicenseExpiryDate, {'attr': {'data-action': 'change->form-validation#validate'}}) }}
                    </div>
                    <div>
                        {{ form_widget(form.habilitadoConducir) }}
                    </div>
                    <div>
                        {{ form_label(form.navigationLicenses) }}
                        {{ form_widget(form.navigationLicenses) }}
                    </div>
                     <div>
                        {{ form_label(form.otherQualifications) }}
                        {{ form_widget(form.otherQualifications) }}
                    </div>
                </div>
            </div>

            {# Section: Información de Salud #}
            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Información de Salud</h2>
                <div class="space-y-6">
                    <div>
                        {{ form_label(form.foodAllergies) }}
                        {{ form_widget(form.foodAllergies) }}
                    </div>
                    <div>
                        {{ form_label(form.otherAllergies) }}
                        {{ form_widget(form.otherAllergies) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}