{% extends 'layout/app.html.twig' %}

{% block title %}Alta Voluntari@{% endblock %}
{% block page_title %}Alta Voluntari@{% endblock %}

{% block content %}
<div class="container mx-auto p-4 lg:p-6">
    {{ form_start(form, {'attr': {'class': 'space-y-8', 'novalidate': 'novalidate', 'data-controller': 'form-validation'}}) }}

    {# --- Section: Datos Personales --- #}
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Datos Personales</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-x-8 gap-y-6">
            <div class="relative">{{ form_row(form.name, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate', 'style': 'border: 10px solid fuchsia !important;'}}) }}</div>
            <div class="relative">{{ form_row(form.lastName, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}</div>
            <div class="relative">{{ form_row(form.dni, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}</div>
            <div class="relative">{{ form_row(form.dateOfBirth, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'change->form-validation#validate'}}) }}</div>
            <div class="relative">{{ form_row(form.phone, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}</div>
            <div class="relative">{{ form_row(form.email, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}</div>
            <div class="relative">{{ form_row(form.profession, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}</div>
        </div>
    </div>

    {# --- Section: Dirección --- #}
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Dirección</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
            <div class="md:col-span-2 grid grid-cols-1 md:grid-cols-3 gap-x-8">
                <div class="relative md:col-span-1">{{ form_row(form.streetType, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'change->form-validation#validate'}}) }}</div>
                <div class="relative md:col-span-2">{{ form_row(form.address, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}</div>
            </div>
            <div class="md:col-span-2 grid grid-cols-1 md:grid-cols-3 gap-x-8">
                <div class="relative">{{ form_row(form.postalCode, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}</div>
                <div class="relative">{{ form_row(form.city, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}</div>
                <div class="relative">{{ form_row(form.province, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}</div>
            </div>
        </div>
    </div>

    {# --- Section: Contacto de Emergencia --- #}
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Contacto de Emergencia</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
            <div class="relative">{{ form_row(form.contactPerson1, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}</div>
            <div class="relative">{{ form_row(form.contactPhone1, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}</div>
        </div>
    </div>

    {# --- Section: Información de Salud --- #}
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Información de Salud</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8">
            {{ form_row(form.foodAllergies, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500'}}) }}
            {{ form_row(form.otherAllergies, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500'}}) }}
        </div>
    </div>

    {# --- Section: Cualificaciones --- #}
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Cualificaciones</h2>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="space-y-4">
                {{ form_row(form.drivingLicenses, {'attr': {'data-action': 'change->form-validation#toggleDrivingLicenseExpiry'}}) }}
                <div id="driving-license-expiry-wrapper" class="hidden relative">
                    {{ form_row(form.drivingLicenseExpiryDate, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}
                </div>
                {{ form_row(form.habilitadoConducir) }}
            </div>
            <div class="space-y-4">{{ form_row(form.navigationLicenses) }}</div>
            <div class="space-y-4">{{ form_row(form.specificQualifications) }}</div>
        </div>
        <div class="mt-6 border-t pt-6 relative">
            {{ form_row(form.otherQualifications, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500'}}) }}
        </div>
    </div>

    {# --- Section: Motivación e Intereses --- #}
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 border-b pb-3 mb-6">Motivación e Intereses</h2>
        <div class="space-y-6">
            <div class="relative">{{ form_row(form.motivation, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}</div>
            <div class="relative">{{ form_row(form.howKnown, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}</div>
            <div class="flex items-center gap-8">
                {{ form_row(form.hasVolunteeredBefore, {'attr': {'data-action': 'change->form-validation#togglePreviousInstitutions'}}) }}
                <div id="previous-institutions-wrapper" class="flex-grow hidden relative">
                    {{ form_row(form.previousVolunteeringInstitutions, {'attr': {'class': 'border-black rounded-lg px-3 py-2 focus:border-gray-500 focus:ring-gray-500', 'data-action': 'blur->form-validation#validate'}}) }}
                </div>
            </div>
        </div>
    </div>

    {# --- Action Buttons --- #}
    <div class="flex justify-end items-center pt-6 border-t mt-8">
        <div class="flex items-center gap-3">
            <a href="{{ path('app_volunteer_list') }}" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors text-sm font-medium">Cancelar</a>
            <button type="button" data-action="click->form-validation#addAnother" class="px-4 py-2 bg-blue-100 text-blue-800 rounded-lg hover:bg-blue-200 transition-colors text-sm font-medium">Añadir Otro</button>
            <button type="submit" class="px-5 py-2 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg transition-colors shadow-sm text-sm">Dar de Alta</button>
        </div>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}