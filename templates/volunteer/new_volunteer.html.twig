{% extends 'layout/app.html.twig' %}

{% block title %}Alta Voluntari@{% endblock %}
{% block page_title %}Alta Voluntari@{% endblock %}

{% set card_styles = 'bg-white p-6 rounded-xl shadow-sm border border-gray-200' %}
{% set card_title_styles = 'text-xl font-semibold text-gray-800 border-b border-gray-200 pb-3 mb-6' %}

{% block content %}
<div class="container mx-auto p-4 lg:p-6">
    {{ form_start(form, {'attr': {'class': 'space-y-8', 'novalidate': 'novalidate', 'data-controller': 'form-validation', 'data-action': 'submit->form-validation#handleSubmit'}}) }}

    {# --- Main Grid Container --- #}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        {# --- Left Column (lg:col-span-1) --- #}
        <div class="lg:col-span-1 space-y-8">
            {# --- Section: Información de Salud --- #}
            <div class="{{ card_styles }}">
                <h2 class="{{ card_title_styles }}">Información de Salud</h2>
                <div class="space-y-4">
                    <div>
                        <div class="flex items-start gap-0">
                            {{ form_label(form.foodAllergies, null, {'label_attr': {'class': 'w-24 shrink-0 pt-2'}}) }}
                            <div class="flex-1 h-24">{{ form_widget(form.foodAllergies) }}</div>
                        </div>
                    </div>
                    <div>
                        <div class="flex items-start gap-0">
                            {{ form_label(form.otherAllergies, null, {'label_attr': {'class': 'w-24 shrink-0 pt-2'}}) }}
                            <div class="flex-1 h-24">{{ form_widget(form.otherAllergies) }}</div>
                        </div>
                    </div>
                </div>
            </div>

            {# --- Section: Contacto de Emergencia --- #}
            <div class="{{ card_styles }}">
                <h2 class="{{ card_title_styles }}">Contacto de Emergencia</h2>
                <div class="space-y-4">
                    <div data-field-container>
                        <div class="flex items-center gap-0">
                            {{ form_label(form.contactPerson1, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                            <div class="flex-1 relative">{{ form_widget(form.contactPerson1, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}</div>
                        </div>
                        <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                    </div>
                    <div data-field-container>
                        <div class="flex items-center gap-0">
                            {{ form_label(form.contactPhone1, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                            <div class="w-40 relative">{{ form_widget(form.contactPhone1, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}</div>
                        </div>
                        <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                    </div>
                </div>
            </div>

            {# --- Section: Motivación e Intereses --- #}
            <div class="{{ card_styles }}">
                <h2 class="{{ card_title_styles }}">Motivación e Intereses</h2>
                <div class="space-y-4">
                    <div data-field-container>
                        <div class="flex items-start gap-0">
                            {{ form_label(form.motivation, null, {'label_attr': {'class': 'w-24 shrink-0 pt-2'}}) }}
                            <div class="flex-1 h-24 relative">{{ form_widget(form.motivation, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}</div>
                        </div>
                        <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                    </div>
                    <div data-field-container>
                        <div class="flex items-center gap-0">
                            {{ form_label(form.howKnown, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                            <div class="flex-1 relative">{{ form_widget(form.howKnown, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}</div>
                        </div>
                        <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                    </div>
                    <div data-field-container>
                        <div class="flex items-start gap-0">
                            {{ form_label(form.hasVolunteeredBefore, null, {'label_attr': {'class': 'w-24 shrink-0 pt-2'}}) }}
                            <div class="flex-1 relative" data-action="change->form-validation#togglePreviousInstitutions">{{ form_widget(form.hasVolunteeredBefore) }}</div>
                        </div>
                        <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                    </div>
                    <div id="previous-institutions-wrapper" class="hidden" data-field-container>
                         <div class="flex items-start gap-0">
                            {{ form_label(form.previousVolunteeringInstitutions, null, {'label_attr': {'class': 'w-24 shrink-0 pt-2'}}) }}
                            <div class="flex-1 h-24 relative">{{ form_widget(form.previousVolunteeringInstitutions, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}</div>
                        </div>
                        <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                    </div>
                </div>
            </div>
        </div>

        {# --- Right Column (lg:col-span-2) --- #}
        <div class="lg:col-span-2 space-y-8">
            {# --- Section: Datos Personales --- #}
            <div class="{{ card_styles }}">
                <h2 class="{{ card_title_styles }}">Datos Personales</h2>
                <div class="space-y-4">
                    <div class="flex flex-row flex-wrap items-start gap-x-4 gap-y-4">
                        <div data-field-container class="w-60">
                            <div class="flex items-center gap-0">
                                {{ form_label(form.dni, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                                <div class="relative flex-1">
                                    {{ form_widget(form.dni, {'attr': {'data-action': 'input->form-validation#validateDniOnInput blur->form-validation#validateField'}}) }}
                                </div>
                            </div>
                            <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                        </div>
                        <div data-field-container class="flex-grow" style="min-width: 200px;">
                            <div class="flex items-center gap-0">
                                {{ form_label(form.name, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                                <div class="relative flex-1">
                                    {{ form_widget(form.name, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}
                                </div>
                            </div>
                            <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                        </div>
                        <div data-field-container class="flex-grow" style="min-width: 200px;">
                             <div class="flex items-center gap-0">
                                {{ form_label(form.lastName, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                                <div class="relative flex-1">
                                    {{ form_widget(form.lastName, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}
                                </div>
                            </div>
                            <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                        </div>
                        <div data-field-container class="w-64">
                            <div class="flex items-center gap-0">
                                {{ form_label(form.dateOfBirth, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                                <div class="relative flex-1">
                                    {{ form_widget(form.dateOfBirth, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}
                                </div>
                            </div>
                            <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                        </div>
                    </div>
                    <div class="flex flex-row flex-wrap items-start gap-x-4 gap-y-4">
                        <div data-field-container class="w-60">
                            <div class="flex items-center gap-0">
                                {{ form_label(form.phone, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                                <div class="relative flex-1">
                                    {{ form_widget(form.phone, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}
                                </div>
                            </div>
                            <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                        </div>
                        <div data-field-container class="flex-grow" style="min-width: 300px;">
                            <div class="flex items-center gap-0">
                                {{ form_label(form.user.email, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                                <div class="relative flex-1">
                                    {{ form_widget(form.user.email, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}
                                </div>
                            </div>
                            <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                        </div>
                    </div>
                    <div class="flex flex-row flex-wrap items-start gap-x-4 gap-y-4">
                        <div class="flex-grow" style="min-width: 300px;">
                             <div class="flex items-center gap-0">
                                {{ form_label(form.profession, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                                <div class="relative flex-1">{{ form_widget(form.profession) }}</div>
                            </div>
                        </div>
                        <div class="flex-grow" style="min-width: 300px;">
                            <div class="flex items-center gap-0">
                                {{ form_label(form.profilePicture, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                                <div class="relative flex-1">{{ form_widget(form.profilePicture) }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# --- Section: Dirección --- #}
            <div class="{{ card_styles }}">
                <h2 class="{{ card_title_styles }}">Dirección</h2>
                <div class="space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8">
                        <div data-field-container>
                            <div class="flex items-center gap-0">
                                {{ form_label(form.streetType, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                                <div class="flex-1 relative">{{ form_widget(form.streetType, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}</div>
                            </div>
                            <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                        </div>
                        <div data-field-container>
                            <div class="flex items-center gap-0">
                                {{ form_label(form.address, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                                <div class="flex-1 relative">{{ form_widget(form.address, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}</div>
                            </div>
                            <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                        </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-x-8">
                        <div data-field-container>
                            <div class="flex items-center gap-0">
                                {{ form_label(form.postalCode, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                                <div class="w-24 relative">{{ form_widget(form.postalCode, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}</div>
                            </div>
                            <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                        </div>
                        <div data-field-container>
                            <div class="flex items-center gap-0">
                                {{ form_label(form.city, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                                <div class="flex-1 relative">{{ form_widget(form.city, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}</div>
                            </div>
                            <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                        </div>
                        <div data-field-container>
                            <div class="flex items-center gap-0">
                                {{ form_label(form.province, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                                <div class="flex-1 relative">{{ form_widget(form.province, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}</div>
                            </div>
                            <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                        </div>
                    </div>
                </div>
            </div>

            {# --- Section: Cualificaciones --- #}
            <div class="{{ card_styles }}">
                <h2 class="{{ card_title_styles }}">Cualificaciones</h2>
                <div class="space-y-4">
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                        <div class="flex items-start gap-0">
                            {{ form_label(form.drivingLicenses, null, {'label_attr': {'class': 'w-24 shrink-0 pt-2'}}) }}
                            <div class="flex-1" data-action="change->form-validation#toggleDrivingLicenseExpiry">{{ form_widget(form.drivingLicenses) }}</div>
                        </div>
                        <div class="flex items-start gap-0">
                            {{ form_label(form.navigationLicenses, null, {'label_attr': {'class': 'w-24 shrink-0 pt-2'}}) }}
                            <div class="flex-1">{{ form_widget(form.navigationLicenses) }}</div>
                        </div>
                        <div class="flex items-start gap-0">
                            {{ form_label(form.specificQualifications, null, {'label_attr': {'class': 'w-24 shrink-0 pt-2'}}) }}
                            <div class="flex-1">{{ form_widget(form.specificQualifications) }}</div>
                        </div>
                    </div>
                    {% if form.drivingLicenseExpiryDate is defined %}
                    <div id="driving-license-expiry-wrapper" class="hidden" data-field-container>
                        <div class="flex items-center gap-0">
                            {{ form_label(form.drivingLicenseExpiryDate, null, {'label_attr': {'class': 'w-24 shrink-0'}}) }}
                            <div class="w-40 relative">{{ form_widget(form.drivingLicenseExpiryDate, {'attr': {'data-action': 'blur->form-validation#validateField'}}) }}</div>
                        </div>
                         <div data-error-container class="form-error-message text-xs text-red-600 mt-1 h-4 ml-24 pl-1"></div>
                    </div>
                    {% endif %}
                     <div class="flex items-start gap-0">
                        {{ form_label(form.otherQualifications, null, {'label_attr': {'class': 'w-24 shrink-0 pt-2'}}) }}
                        <div class="flex-1 h-24">{{ form_widget(form.otherQualifications) }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# --- Action Buttons --- #}
    <div class="flex justify-end items-center pt-6 border-t mt-8">
        <div class="flex items-center gap-3">
            <a href="{{ path('app_volunteer_list') }}" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors text-sm font-medium">Cancelar</a>
            <button type="button" data-action="click->form-validation#addAnother" class="px-4 py-2 bg-blue-100 text-blue-800 rounded-lg hover:bg-blue-200 transition-colors text-sm font-medium">Añadir Otro</button>
            <button type="submit" class="px-5 py-2 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg transition-colors shadow-sm text-sm">Dar de Alta</button>
        </div>
    </div>

    {{ form_end(form) }}
</div>

{# --- Modal de Autorización para Menores --- #}
<div data-form-validation-target="ageModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full flex items-center justify-center">
    <div class="relative mx-auto p-5 border w-full max-w-md shadow-lg rounded-md bg-white">
        <div class="mt-3 text-center">
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-yellow-100">
                <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            </div>
            <h3 class="text-lg leading-6 font-medium text-gray-900 mt-2">Aviso de Edad</h3>
            <div class="mt-2 px-7 py-3">
                <p class="text-sm text-gray-500">
                    Al ser menor de 18 años, se requiere una autorización firmada por tu padre, madre o tutor legal para completar el alta.
                </p>
            </div>
            <div class="items-center px-4 py-3">
                <button data-action="click->form-validation#acceptAuthorization" class="px-4 py-2 bg-green-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300">
                    Entendido, continuar con el alta
                </button>
                <button data-action="click->form-validation#cancelAuthorization" class="mt-3 px-4 py-2 bg-red-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-300">
                    Cancelar y volver al inicio
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}