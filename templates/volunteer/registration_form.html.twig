{# templates/volunteer/registration_form.html.twig #}

{% extends 'layout/public.html.twig' %}

{% block page_title %}Formulario de Inscripción de Nuevo Voluntario{% endblock %}

{% set card_styles = 'bg-white p-6 rounded-xl shadow-sm border border-gray-200' %}
{% set card_title_styles = 'text-xl font-semibold text-gray-800 border-b border-gray-200 pb-3 mb-6' %}

{% block content %}
<div class="bg-gray-50">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden max-w-5xl mx-auto">
        {# Header con fondo azul y logo #}
        <div class="bg-blue-600 p-6 sm:p-8 text-center">
            <div class="inline-block bg-white p-2 rounded-full shadow-md">
                <img src="https://raw.githubusercontent.com/Carlos-casal/ssgv/main/public/images/logo.png" alt="Logo Protección Civil Vigo" class="w-24 h-24">
            </div>
            <h1 class="text-3xl font-bold text-white mt-4">Formulario de Inscripción</h1>
            <p class="text-blue-100">Completa tus datos para unirte a nosotros.</p>
        </div>

        {# Contenido del formulario con padding #}
        <div class="p-6 sm:p-8">
            {# Mensajes flash #}
            {% for message in app.flashes('success') %}
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
                    <span class="block sm:inline">{{ message }}</span>
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
                    <span class="block sm:inline">{{ message }}</span>
                </div>
            {% endfor %}

            {{ form_start(form, {'attr': {'class': 'space-y-8'}, 'enctype': 'multipart/form-data'}) }}

            {# CONTENEDOR PRINCIPAL: Grid para las tarjetas #}
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

                {# Columna Izquierda: Foto y Datos Básicos #}
                <div class="lg:col-span-1 space-y-8">
                    {# Tarjeta de la foto de perfil #}
                    <div class="{{ card_styles }} text-center">
                        <h3 class="{{ card_title_styles }}">Foto de Perfil</h3>
                        <div class="mb-4">
                            <div id="preview-element" class="w-32 h-32 rounded-full mx-auto bg-gray-200 flex items-center justify-center text-gray-500 text-sm mb-4 border-2 border-blue-200 shadow-inner">
                                Sin Foto
                            </div>
                        </div>
                        <div class="w-fit mx-auto">
                            {{ form_row(form.profilePicture) }}
                        </div>
                        <p class="text-xs text-gray-500 mt-2">Sube una imagen JPG o PNG (máx. 1MB).</p>
                    </div>
                </div>

                {# Columna Derecha: Todas las demás tarjetas #}
                <div class="lg:col-span-2 space-y-8">
                    {# Tarjeta de Datos Personales #}
                    <div class="{{ card_styles }}">
                        <h3 class="{{ card_title_styles }}">Datos Personales</h3>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-4">
                            <div>{{ form_row(form.name) }}</div>
                            <div>{{ form_row(form.lastName) }}</div>
                            <div>{{ form_row(form.phone) }}</div>
                            <div>{{ form_row(form.user.email) }}</div>
                            <div>{{ form_row(form.dni) }}</div>
                            <div data-controller="age-calculator">
                                {{ form_row(form.dateOfBirth, {
                                    'attr': {
                                        'data-action': 'change->age-calculator#calculateAndShowAge',
                                        'data-age-calculator-target': 'dateInput'
                                    }
                                }) }}

                                {# Modal Structure #}
                                <div data-age-calculator-target="modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden" id="age-modal">
                                    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
                                        <div class="mt-3 text-center">
                                            <h3 class="text-lg leading-6 font-medium text-gray-900">Confirmación de Edad</h3>
                                            <div class="mt-2 px-7 py-3">
                                                <p data-age-calculator-target="ageText" class="text-sm text-gray-500"></p>
                                            </div>
                                            <div class="items-center px-4 py-3">
                                                <button data-action="click->age-calculator#closeModal" class="px-4 py-2 bg-blue-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300">
                                                    Cerrar
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Tarjeta de Dirección #}
                    <div class="{{ card_styles }}">
                        <h3 class="{{ card_title_styles }}">Dirección</h3>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div>{{ form_row(form.streetType) }}</div>
                            <div class="md:col-span-2">{{ form_row(form.address) }}</div>
                            <div>{{ form_row(form.postalCode) }}</div>
                            <div>{{ form_row(form.city) }}</div>
                            <div>{{ form_row(form.province) }}</div>
                        </div>
                    </div>

                    {# Tarjeta de Información de Emergencia #}
                    <div class="{{ card_styles }}">
                        <h3 class="{{ card_title_styles }}">Contacto de Emergencia</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>{{ form_row(form.contactPerson1) }}</div>
                            <div>{{ form_row(form.contactPhone1) }}</div>
                            <div>{{ form_row(form.contactPerson2) }}</div>
                            <div>{{ form_row(form.contactPhone2) }}</div>
                        </div>
                    </div>

                    {# Tarjeta de Información Médica #}
                    <div class="{{ card_styles }}">
                        <h3 class="{{ card_title_styles }}">Información Médica</h3>
                        {{ form_row(form.allergies) }}
                    </div>

                    {# Tarjeta de Cualificaciones #}
                    <div class="{{ card_styles }}">
                        <h3 class="{{ card_title_styles }}">Cualificaciones Profesionales</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div>{{ form_row(form.profession) }}</div>
                            <div>{{ form_row(form.employmentStatus) }}</div>
                        </div>
                        <div class="mb-4">{{ form_row(form.drivingLicenses) }}</div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div>{{ form_row(form.drivingLicenseExpiryDate) }}</div>
                            <div class="flex items-center h-full">{{ form_row(form.habilitadoConducir) }}</div>
                        </div>
                        <div class="mb-4">{{ form_row(form.navigationLicenses) }}</div>
                        {{ form_row(form.otherQualifications) }}
                    </div>

                    {# Tarjeta de Otros Datos #}
                    <div class="{{ card_styles }}">
                        <h3 class="{{ card_title_styles }}">Otros Datos e Intereses</h3>
                        <div class="space-y-4">
                            {{ form_row(form.languages) }}
                            {{ form_row(form.motivation) }}
                            {{ form_row(form.howKnown) }}
                            {{ form_row(form.hasVolunteeredBefore) }}
                            {{ form_row(form.previousVolunteeringInstitutions) }}
                        </div>
                    </div>

                    {# Tarjeta de Contraseña #}
                    <div class="{{ card_styles }}">
                        <h3 class="{{ card_title_styles }}">Contraseña de Acceso</h3>
                        <p class="text-sm text-gray-600 mb-4">Elige una contraseña segura para acceder a la plataforma. Las contraseñas deben coincidir.</p>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>{{ form_row(form.user.password.first) }}</div>
                            <div>{{ form_row(form.user.password.second) }}</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-end gap-3 mt-8">
                <button type="submit" class="w-full lg:w-auto bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors shadow-md">Completar Inscripción</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

{# Bloque de JavaScript para la previsualización de la imagen #}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const profilePictureInput = document.querySelector('input[type="file"][name$="[profilePicture]"]');
        let previewElement = document.getElementById('preview-element');

        if (profilePictureInput && previewElement) {
            profilePictureInput.addEventListener('change', function (event) {
                const file = event.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        if (previewElement.tagName === 'DIV') {
                            const newImg = document.createElement('img');
                            newImg.id = 'preview-element';
                            newImg.alt = 'Foto de perfil';
                            newImg.className = 'w-32 h-32 rounded-full object-cover mx-auto border-2 border-blue-300 shadow';
                            previewElement.parentNode.replaceChild(newImg, previewElement);
                            previewElement = newImg;
                        }
                        previewElement.src = e.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            });
        }
    });
</script>
{% endblock %}