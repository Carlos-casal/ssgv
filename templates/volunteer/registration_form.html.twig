{# templates/volunteer/registration_form.html.twig #}
{% extends 'layout/public.html.twig' %}

{% block page_title %}Formulario de Inscripción de Nuevo Voluntario{% endblock %}

{% set card_styles = 'bg-white p-6 rounded-xl shadow-sm border border-gray-200' %}
{% set card_title_styles = 'text-xl font-semibold text-gray-800 border-b border-gray-200 pb-3 mb-6' %}
{% set grid_gap = 'gap-x-6 gap-y-2' %}
{% set field_container_styles = 'flex flex-col' %}
{% set label_styles = 'mb-1 text-sm font-medium text-gray-700' %}
{% set input_styles = 'p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500' %}

{% form_theme form _self %}

{% block _form_row %}
<div class="{{ field_container_styles }}">
    {{ form_label(form, null, {'label_attr': {'class': label_styles}}) }}
    {{ form_widget(form, {'attr': {'class': input_styles}}) }}
    {{ form_errors(form) }}
</div>
{% endblock %}

{% block content %}
<div class="bg-gray-50 py-12" data-controller="form-validation dependent-fields">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden max-w-6xl mx-auto">
        {# Header con fondo azul y logo #}
        <div class="bg-blue-600 p-6 sm:p-8 text-center">
            <div class="inline-block bg-white p-2 rounded-full shadow-md">
                <img src="https://raw.githubusercontent.com/Carlos-casal/ssgv/main/public/images/logo.png" alt="Logo Protección Civil Vigo" class="w-24 h-24">
            </div>
            <h1 class="text-3xl font-bold text-white mt-4">Alta Voluntari@</h1>
        </div>

        {# Contenido del formulario con padding #}
        <div class="p-6 sm:p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-10'}, 'enctype': 'multipart/form-data'}) }}

            {# --- DATOS PERSONALES --- #}
            <div class="{{ card_styles }}">
                <h3 class="{{ card_title_styles }}">Datos Personales</h3>
                <div class="grid grid-cols-1 md:grid-cols-4 {{ grid_gap }}">
                    <div class="md:col-span-1">{{ form_row(form.dni, {'attr': {'data-action': 'input->form-validation#toUpperCase'}}) }}</div>
                    <div class="md:col-span-1">{{ form_row(form.name) }}</div>
                    <div class="md:col-span-1">{{ form_row(form.lastName) }}</div>
                    <div class="md:col-span-1">{{ form_row(form.dateOfBirth, {'attr': {'data-action': 'change->form-validation#validateAge'}}) }}</div>
                </div>
            </div>

            {# --- DIRECCIÓN --- #}
            <div class="{{ card_styles }}">
                <h3 class="{{ card_title_styles }}">Dirección</h3>
                <div class="grid grid-cols-1 md:grid-cols-4 {{ grid_gap }}">
                    <div class="md:col-span-1">{{ form_row(form.streetType, {'attr': {'class': input_styles ~ ' w-auto min-w-min'}}) }}</div>
                    <div class="md:col-span-3">{{ form_row(form.address) }}</div>
                    <div class="md:col-span-4">{{ form_row(form.postalCode) }}</div>
                    <div class="md:col-span-2">{{ form_row(form.province, {'attr': {'data-action': 'change->dependent-fields#fetchPoblaciones'}}) }}</div>
                    <div class="md:col-span-2" id="city-wrapper">
                        {{ form_row(form.city) }}
                    </div>
                </div>
            </div>

            {# --- CONTACTO DE EMERGENCIA --- #}
            <div class="{{ card_styles }}">
                <h3 class="{{ card_title_styles }}">Contacto de Emergencia</h3>
                <p class="text-sm text-gray-600 mb-4">Debe proporcionar al menos un contacto de emergencia.</p>
                <div class="grid grid-cols-1 md:grid-cols-2 {{ grid_gap }}">
                    <div class="font-semibold text-gray-700 col-span-full">Primer Contacto</div>
                    <div>{{ form_row(form.contactPerson1) }}</div>
                    <div>{{ form_row(form.contactPhone1) }}</div>
                    <div class="font-semibold text-gray-700 col-span-full mt-4">Segundo Contacto</div>
                    <div>{{ form_row(form.contactPerson2) }}</div>
                    <div>{{ form_row(form.contactPhone2) }}</div>
                </div>
            </div>

            {# --- INFORMACIÓN DE SALUD --- #}
            <div class="{{ card_styles }}">
                <h3 class="{{ card_title_styles }}">Información de Salud</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 {{ grid_gap }}">
                    <div>
                        {{ form_label(form.foodAllergies) }}
                        {{ form_widget(form.foodAllergies, {'attr': {'rows': 4, 'class': input_styles}}) }}
                    </div>
                    <div>
                        {{ form_label(form.otherAllergies) }}
                        {{ form_widget(form.otherAllergies, {'attr': {'rows': 4, 'class': input_styles}}) }}
                    </div>
                </div>
            </div>

            {# --- CUALIFICACIONES --- #}
            <div class="{{ card_styles }}">
                <h3 class="{{ card_title_styles }}">Cualificaciones</h3>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {# Columna 1: Permisos de Conducción #}
                    <div>
                        <h4 class="font-semibold text-gray-700 mb-2">Permisos de Conducción</h4>
                        {% for child in form.drivingLicenses %}
                            <div class="flex items-center justify-between mb-2">
                                {{ form_widget(child) }}
                                {{ form_label(child, null, {'label_attr': {'class': 'ml-2'}}) }}
                                <div class="w-40 ml-4">
                                    {{ form_widget(form.drivingLicenseExpiryDate, {'id': 'drivingLicenseExpiryDate_' ~ child.vars.value, 'attr': {'placeholder': 'Caducidad', 'class': input_styles ~ ' ' ~ (form.drivingLicenses.vars.value ? '' : 'hidden') }}) }}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {# Columna 2: Permisos de Navegación #}
                    <div>
                        <h4 class="font-semibold text-gray-700 mb-2">Permisos de Navegación</h4>
                        {{ form_widget(form.navigationLicenses) }}
                    </div>
                    {# Columna 3: Titulaciones Específicas #}
                    <div>
                        <h4 class="font-semibold text-gray-700 mb-2">Titulaciones Específicas</h4>
                        {{ form_widget(form.specificQualifications) }}
                    </div>
                </div>
                 <div class="mt-6">
                    {{ form_label(form.otherQualifications) }}
                    {{ form_widget(form.otherQualifications, {'attr': {'rows': 4, 'class': input_styles}}) }}
                </div>
            </div>

            {# --- MOTIVACIÓN E INTERESES --- #}
            <div class="{{ card_styles }}">
                <h3 class="{{ card_title_styles }}">Motivación e Intereses</h3>
                <div class="space-y-4">
                    <div>
                        {{ form_label(form.motivation) }}
                        {{ form_widget(form.motivation, {'attr': {'rows': 4, 'class': input_styles}}) }}
                    </div>
                    <div>
                        {{ form_label(form.howKnown, '¿Dónde nos has conocido?') }}
                        {{ form_widget(form.howKnown, {'attr': {'rows': 4, 'class': input_styles}}) }}
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-end gap-3 mt-8">
                <button type="submit" class="w-full lg:w-auto bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors shadow-md">Completar Inscripción</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    {# Modal de Advertencia para Menores de Edad #}
    <div id="age-warning-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden" data-form-validation-target="modal">
        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
            <div class="mt-3 text-center">
                <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-yellow-100">
                    <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>
                </div>
                <h3 class="text-lg leading-6 font-medium text-gray-900">Advertencia de Edad</h3>
                <div class="mt-2 px-7 py-3">
                    <p class="text-sm text-gray-500">
                        Has seleccionado una fecha que indica que eres menor de 18 años. Solo puedes darte de alta si tu tutor legal ha dado autorización.
                    </p>
                </div>
                <div class="items-center px-4 py-3">
                    <button id="ok-button" class="px-4 py-2 bg-blue-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300" data-action="click->form-validation#closeModal">
                        Entendido, continuar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}