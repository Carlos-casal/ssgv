{# templates/volunteer/clean_registration_form.html.twig #}

{% extends 'layout/public.html.twig' %}

{% block page_title %}Formulario de Inscripción Limpio{% endblock %}

{% set card_styles = 'bg-white p-6 rounded-xl shadow-sm border border-gray-200' %}
{% set card_title_styles = 'text-xl font-semibold text-gray-800 border-b border-gray-200 pb-3 mb-6' %}

{% block content %}
<div class="bg-gray-50">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden max-w-5xl mx-auto">
        {# Header con fondo azul y logo #}
        <div class="bg-blue-600 p-6 sm:p-8 text-center">
            <div class="inline-block bg-white p-2 rounded-full shadow-md">
                <img src="https://raw.githubusercontent.com/Carlos-casal/ssgv/main/public/images/logo.png" alt="Logo Protección Civil Vigo" class="w-24 h-24">
            </div>
            <h1 class="text-3xl font-bold text-white mt-4">Formulario de Inscripción (Limpio)</h1>
            <p class="text-blue-100">Esta es una versión sin validaciones de JavaScript.</p>
        </div>

        {# Contenido del formulario con padding #}
        <div class="p-6 sm:p-8" data-controller="age-modal simple-validation">
            {{ form_start(form, {'attr': {'class': 'space-y-8'}, 'enctype': 'multipart/form-data'}) }}

            {# CONTENEDOR PRINCIPAL: Grid para las tarjetas #}
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

                {# Columna Izquierda: Foto y Datos Básicos #}
                <div class="lg:col-span-1 space-y-8">
                    {# Tarjeta de la foto de perfil #}
                    <div class="{{ card_styles }} text-center">
                        <h3 class="{{ card_title_styles }}">Foto de Perfil</h3>
                        <div class="w-fit mx-auto">
                            {{ form_widget(form.profilePicture, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                            {{ form_errors(form.profilePicture) }}
                        </div>
                        <p class="text-xs text-gray-500 mt-2">Sube una imagen JPG o PNG (máx. 1MB).</p>
                    </div>
                </div>

                {# Columna Derecha: Todas las demás tarjetas #}
                <div class="lg:col-span-2 space-y-8">
                    {# Tarjeta de Datos Personales #}
                    <div class="{{ card_styles }}">
                        <h3 class="{{ card_title_styles }}">Datos Personales</h3>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-4">
                            <div>
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.name) }}
                            </div>
                            <div>
                                {{ form_label(form.lastName) }}
                                {{ form_widget(form.lastName, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.lastName) }}
                            </div>
                            <div class="max-w-xs">
                                {{ form_label(form.phone) }}
                                {{ form_widget(form.phone, {'attr': {'data-action': 'blur->simple-validation#validate input->simple-validation#filterPhoneInput'}}) }}
                                {{ form_errors(form.phone) }}
                            </div>
                            <div>
                                {{ form_label(form.user.email) }}
                                {{ form_widget(form.user.email, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.user.email) }}
                            </div>
                            <div class="max-w-xs">
                                {{ form_label(form.dni) }}
                                {{ form_widget(form.dni, {'attr': {'data-action': 'blur->simple-validation#validate input->simple-validation#toUpperCase'}}) }}
                                {{ form_errors(form.dni) }}
                            </div>
                            <div>
                                {{ form_label(form.dateOfBirth) }}
                                {{ form_widget(form.dateOfBirth, {
                                    'attr': {
                                        'data-action': 'change->age-modal#calculateAndShowAge blur->simple-validation#validate',
                                        'data-age-modal-target': 'dateOfBirthInput'
                                    }
                                }) }}
                                {{ form_errors(form.dateOfBirth) }}
                            </div>
                        </div>
                    </div>

                    <!-- Modal Structure -->
                    <div data-age-modal-target="modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50" id="age-modal">
                        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
                            <div class="mt-3 text-center">
                                <h3 class="text-lg leading-6 font-medium text-gray-900">Confirmación de Edad</h3>
                                <div class="mt-2 px-7 py-3">
                                    <p data-age-modal-target="ageText" class="text-sm text-gray-500"></p>
                                </div>
                                <div class="items-center px-4 py-3">
                                    <button data-action="click->age-modal#closeModal" class="px-4 py-2 bg-blue-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300">
                                        Cerrar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Tarjeta de Dirección #}
                    <div class="{{ card_styles }}"
                         data-controller="dependent-fields"
                         data-dependent-fields-url-value="/api/poblaciones">
                        <h3 class="{{ card_title_styles }}">Dirección</h3>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div>
                                {{ form_label(form.streetType) }}
                                {{ form_widget(form.streetType, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.streetType) }}
                            </div>
                            <div class="md:col-span-2">
                                {{ form_label(form.address) }}
                                {{ form_widget(form.address, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.address) }}
                            </div>
                            <div>
                                {{ form_label(form.postalCode) }}
                                {{ form_widget(form.postalCode, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.postalCode) }}
                            </div>
                            <div>
                                {{ form_label(form.city) }}
                                {{ form_widget(form.city, {'attr': {'data-dependent-fields-target': 'city', 'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.city) }}
                            </div>
                            <div>
                                {{ form_label(form.province) }}
                                {{ form_widget(form.province, {'attr': {'data-dependent-fields-target': 'province', 'data-action': 'dependent-fields#loadCities blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.province) }}
                            </div>
                        </div>
                    </div>

                    {# Tarjeta de Información de Emergencia #}
                    <div class="{{ card_styles }}">
                        <h3 class="{{ card_title_styles }}">Contacto de Emergencia</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                {{ form_label(form.contactPerson1) }}
                                {{ form_widget(form.contactPerson1, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.contactPerson1) }}
                            </div>
                            <div class="max-w-xs">
                                {{ form_label(form.contactPhone1) }}
                                {{ form_widget(form.contactPhone1, {'attr': {'data-action': 'blur->simple-validation#validate input->simple-validation#filterPhoneInput'}}) }}
                                {{ form_errors(form.contactPhone1) }}
                            </div>
                            <div>
                                {{ form_label(form.contactPerson2) }}
                                {{ form_widget(form.contactPerson2, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.contactPerson2) }}
                            </div>
                            <div class="max-w-xs">
                                {{ form_label(form.contactPhone2) }}
                                {{ form_widget(form.contactPhone2, {'attr': {'data-action': 'blur->simple-validation#validate input->simple-validation#filterPhoneInput'}}) }}
                                {{ form_errors(form.contactPhone2) }}
                            </div>
                        </div>
                    </div>

                    {# Tarjeta de Información Médica #}
                    <div class="{{ card_styles }}">
                        <h3 class="{{ card_title_styles }}">Información Médica</h3>
                        <div>
                            {{ form_label(form.foodAllergies) }}
                            {{ form_widget(form.foodAllergies, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                            {{ form_errors(form.foodAllergies) }}
                        </div>
                        <div>
                            {{ form_label(form.otherAllergies) }}
                            {{ form_widget(form.otherAllergies, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                            {{ form_errors(form.otherAllergies) }}
                        </div>
                    </div>

                    {# Tarjeta de Cualificaciones #}
                    <div class="{{ card_styles }}">
                        <h3 class="{{ card_title_styles }}">Cualificaciones Profesionales</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div>
                                {{ form_label(form.profession) }}
                                {{ form_widget(form.profession, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.profession) }}
                            </div>
                            <div>
                                {{ form_label(form.employmentStatus) }}
                                {{ form_widget(form.employmentStatus, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.employmentStatus) }}
                            </div>
                        </div>
                        <div class="mb-4">
                            {{ form_label(form.drivingLicenses) }}
                            {{ form_widget(form.drivingLicenses, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                            {{ form_errors(form.drivingLicenses) }}
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div>
                                {{ form_label(form.drivingLicenseExpiryDate) }}
                                {{ form_widget(form.drivingLicenseExpiryDate, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.drivingLicenseExpiryDate) }}
                            </div>
                            <div class="flex items-center h-full">
                                {{ form_label(form.habilitadoConducir) }}
                                {{ form_widget(form.habilitadoConducir, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.habilitadoConducir) }}
                            </div>
                        </div>
                        <div class="mb-4">
                            {{ form_label(form.navigationLicenses) }}
                            {{ form_widget(form.navigationLicenses, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                            {{ form_errors(form.navigationLicenses) }}
                        </div>
                        <div>
                            {{ form_label(form.otherQualifications) }}
                            {{ form_widget(form.otherQualifications, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                            {{ form_errors(form.otherQualifications) }}
                        </div>
                    </div>

                    {# Tarjeta de Otros Datos #}
                    <div class="{{ card_styles }}">
                        <h3 class="{{ card_title_styles }}">Otros Datos e Intereses</h3>
                        <div class="space-y-4">
                            <div>
                                {{ form_label(form.languages) }}
                                {{ form_widget(form.languages, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.languages) }}
                            </div>
                            <div>
                                {{ form_label(form.motivation) }}
                                {{ form_widget(form.motivation, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.motivation) }}
                            </div>
                            <div>
                                {{ form_label(form.howKnown) }}
                                {{ form_widget(form.howKnown, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.howKnown) }}
                            </div>
                            <div>
                                {{ form_label(form.hasVolunteeredBefore) }}
                                {{ form_widget(form.hasVolunteeredBefore, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.hasVolunteeredBefore) }}
                            </div>
                            <div>
                                {{ form_label(form.previousVolunteeringInstitutions) }}
                                {{ form_widget(form.previousVolunteeringInstitutions, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.previousVolunteeringInstitutions) }}
                            </div>
                        </div>
                    </div>

                    {# Tarjeta de Contraseña #}
                    <div class="{{ card_styles }}">
                        <h3 class="{{ card_title_styles }}">Contraseña de Acceso</h3>
                        <p class="text-sm text-gray-600 mb-4">Elige una contraseña segura para acceder a la plataforma. Las contraseñas deben coincidir.</p>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                {{ form_label(form.user.password.first) }}
                                {{ form_widget(form.user.password.first, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.user.password.first) }}
                            </div>
                            <div>
                                {{ form_label(form.user.password.second) }}
                                {{ form_widget(form.user.password.second, {'attr': {'data-action': 'blur->simple-validation#validate'}}) }}
                                {{ form_errors(form.user.password.second) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-end gap-3 mt-8">
                <button type="submit" class="w-full lg:w-auto bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors shadow-md">Completar Inscripción</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}