{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión{% endblock %}

{% block body_class %}{% endblock %}

{% block body %}
    <div class="h-screen w-full relative flex items-center justify-center m-0 p-0 overflow-hidden bg-blue-600">
        <!-- Imagen de Fondo -->
        <img src="{{ asset('build/images/fondo-login.jpg') }}" class="absolute inset-0 w-full h-full object-cover">

        <div class="relative z-10 max-w-md w-full px-6">
            <div class="bg-white rounded-2xl shadow-2xl p-8">
                <div class="text-center mb-8">
                    <img src="https://raw.githubusercontent.com/Carlos-casal/ssgv/main/public/images/logo.png" alt="Logo Protección Civil" class="mx-auto h-32 w-auto mb-4">
                    <h1 class="text-2xl font-bold text-gray-800 mb-2">Protección Civil</h1>
                    <p class="text-gray-600">Sistema de Gestión de Voluntarios</p>
                </div>

                {# Muestra el error si existe #}
                {% if error %}
                    <div class="flex items-center gap-2 p-3 bg-red-50 border border-red-200 rounded-lg mb-4">
                        <i data-lucide="alert-circle" class="w-5 h-5 text-red-500 flex-shrink-0"></i>
                        <span class="text-sm text-red-700">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                    </div>
                {% endif %}

                <form method="post" action="{{ path('app_login') }}">
                    <div class="space-y-6">
                        <div>
                            <label for="inputEmail" class="block text-sm font-medium text-gray-700 mb-2">
                                Correo electrónico
                            </label>
                            <input type="email" value="{{ last_username|default(app.environment == 'dev' ? 'admin@example.com' : '') }}" name="_username" id="inputEmail"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                   placeholder="admin@voluntarios.org" autocomplete="email" required autofocus>
                        </div>

                        <div>
                            <label for="inputPassword" class="block text-sm font-medium text-gray-700 mb-2">
                                Contraseña
                            </label>
                            <input type="password" name="_password" id="inputPassword" value="{{ app.environment == 'dev' ? 'admin123' : '' }}"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                   placeholder="••••••••" autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg transition-colors" type="submit">
                            Iniciar Sesión
                        </button>
                    </div>
                </form>

                <div class="mt-6 text-center">
                    <a href="#" class="text-sm text-blue-600 hover:underline">Recuperar contraseña</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
