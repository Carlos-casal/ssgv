{% extends 'layout/app.html.twig' %}

{% block title %}Nueva Ubicación{% endblock %}

{% block page_title %}Nueva Ubicación{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h6 class="fw-bold mb-0">Configuración de Nueva Ubicación Maestra</h6>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.type) }}
                            {{ form_widget(form.type) }}
                            {{ form_errors(form.type) }}
                        </div>
                        <div class="mb-4">
                            {{ form_label(form.vehicle) }}
                            {{ form_widget(form.vehicle) }}
                            {{ form_errors(form.vehicle) }}
                            <div class="form-text">Solo si la ubicación es un vehículo específico.</div>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Guardar Ubicación</button>
                            <a href="{{ path('app_location_index') }}" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
