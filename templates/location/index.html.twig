{% extends 'layout/app.html.twig' %}

{% block title %}Ubicaciones de Almacén{% endblock %}

{% block page_title %}Ubicaciones de Almacén{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h5 class="fw-bold mb-0">Listado de Ubicaciones Maestras</h5>
        <a href="{{ path('app_location_new') }}" class="btn btn-primary shadow-sm">
            <i data-lucide="plus" class="w-4 h-4 me-2"></i>Nueva Ubicación
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr class="text-xs text-muted text-uppercase">
                            <th class="ps-3 py-3">Nombre</th>
                            <th>Tipo</th>
                            <th>Vehículo Asociado</th>
                            <th>Stock Relacionado</th>
                            <th class="text-end pe-3">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="text-sm">
                        {% for location in locations %}
                        <tr>
                            <td class="ps-3">
                                <span class="fw-bold text-slate-900">{{ location.name }}</span>
                            </td>
                            <td>
                                <span class="badge bg-slate-100 text-slate-700">
                                    {{ location.type }}
                                </span>
                            </td>
                            <td>
                                {{ location.vehicle ? location.vehicle.alias : '<span class="text-muted">N/A</span>'|raw }}
                            </td>
                            <td>
                                <span class="badge bg-indigo-subtle text-indigo fw-bold">
                                    {{ location.stocks|length }} productos
                                </span>
                            </td>
                            <td class="text-end pe-3">
                                <a href="{{ path('app_location_edit', {id: location.id}) }}" class="btn btn-sm btn-outline-secondary border-0">
                                    <i data-lucide="edit-2" class="w-4 h-4"></i>
                                </a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">No hay ubicaciones registradas</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_warehouse_dashboard') }}" class="btn btn-outline-secondary">
            <i data-lucide="arrow-left" class="w-4 h-4 me-2"></i>Volver al Dashboard
        </a>
    </div>
</div>
{% endblock %}
