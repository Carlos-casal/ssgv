{% extends 'layout/app.html.twig' %}

{% block page_title %}Fichaje de Asistencia: {{ service.title }}{% endblock %}

{% block content %}
<div class="p-6 space-y-6">
    <div>
        <h2 class="text-2xl font-bold text-gray-900">Fichaje de Asistencia: {{ service.title }}</h2>
        <p class="text-gray-600">Registra las horas de entrada y salida de los voluntarios asistentes.</p>
        <p class="text-sm text-gray-500 mt-2">
            Horas por defecto del servicio:
            <strong>Base:</strong> {{ service.timeAtBase ? service.timeAtBase|date('H:i') : service.startDate|date('H:i') }} |
            <strong>Fin:</strong> {{ service.endDate|date('H:i') }}
        </p>
    </div>

    {{ form_start(form) }}
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="text-left px-6 py-3 text-sm font-medium text-gray-900">Voluntario</th>
                        <th class="text-left px-6 py-3 text-sm font-medium text-gray-900">Hora de Entrada</th>
                        <th class="text-left px-6 py-3 text-sm font-medium text-gray-900">Hora de Salida</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% set found_attendee = false %}
                    {% for confirmation_form in form.assistanceConfirmations %}
                        {% set confirmation = confirmation_form.vars.data %}
                        {# Solo mostramos el formulario para los que han confirmado asistencia #}
                        {% if confirmation and confirmation.isHasAttended %}
                            {% set found_attendee = true %}
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="font-medium text-gray-800">
                                        {{ confirmation.volunteer.name }} {{ confirmation.volunteer.lastName }}
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    {# Renderizamos el widget del subformulario #}
                                    {{ form_widget(confirmation_form.checkInTime) }}
                                    {{ form_errors(confirmation_form.checkInTime) }}
                                </td>
                                <td class="px-6 py-4">
                                    {{ form_widget(confirmation_form.checkOutTime) }}
                                    {{ form_errors(confirmation_form.checkOutTime) }}
                                </td>
                            </tr>
                        {% endif %}
                    {% endfor %}

                    {% if not found_attendee %}
                        <tr>
                            <td colspan="3" class="px-6 py-8 text-center text-gray-500">
                                No hay asistentes confirmados para este servicio.
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="flex justify-end mt-6">
        <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
            Guardar Horas
        </button>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
