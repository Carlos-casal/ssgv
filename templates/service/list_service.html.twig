{% extends 'layout/app.html.twig' %}

{% block title %}Listado de sercicos{% endblock %}


{% block content %}
<div class="p-6 space-y-6">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-6">
        <div>
            <h2 class="text-2xl font-bold text-gray-900">Listado de Servicios</h2>
            <p class="text-gray-600">Gestiona todos los servicios programados</p>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <div class="flex gap-3">
            <a href="{{ path('app_service_new') }}"
               class="flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                <i data-lucide="plus" class="w-4 h-4"></i>
                Nuevo Servicio
            </a>
        </div>
        {% endif %}
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="p-4 border-b border-gray-200">
            <ul class="flex gap-6">
                <li><a href="{{ path('app_services_list', {'status': 'abiertos'}) }}" class="pb-2 {{ status == 'abiertos' ? 'border-b-2 border-blue-600 text-blue-600 font-semibold' : 'text-gray-600 hover:text-blue-600' }}">Abiertos</a></li>
                <li><a href="{{ path('app_services_list', {'status': 'archivados'}) }}" class="pb-2 {{ status == 'archivados' ? 'border-b-2 border-blue-600 text-blue-600 font-semibold' : 'text-gray-600 hover:text-blue-600' }}">Archivados</a></li>
                <li><a href="#" class="pb-2 text-gray-600 hover:text-blue-600">Ayuda</a></li>
            </ul>
        </div>
        <div class="p-4">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-gray-200">
                        <th class="p-2 text-left text-sm font-semibold text-gray-600">Nº</th>
                        <th class="p-2 text-left text-sm font-semibold text-gray-600">Título</th>
                        <th class="p-2 text-left text-sm font-semibold text-gray-600">Asistentes</th>
                        <th class="p-2 text-left text-sm font-semibold text-gray-600">Fecha</th>
                        <th class="p-2 text-left text-sm font-semibold text-gray-600">Limite inscripción</th>
                        <th class="p-2 text-left text-sm font-semibold text-gray-600">Tipo</th>
                        <th class="p-2 text-left text-sm font-semibold text-gray-600">Categoría</th>
                        <th class="p-2 text-left text-sm font-semibold text-gray-600"></th>
                    </tr>
                </thead>
                <tbody>
                    {% if services is defined and services is not empty %}
                        {% for service in services %}
                            <tr class="border-b border-gray-200">
                                <td class="p-2 text-sm">{{ service.numeration ?? 'N/A' }}</td>
                                <td class="p-2 text-sm">{{ service.title }}</td>
                                <td class="p-2 text-sm">{{ attendeesByService[service.id] | default(0) }}</td>
                                <td class="p-2 text-sm">{{ service.startDate ? service.startDate|date('d/m/Y H:i') : 'N/A' }}</td>
                                <td class="p-2 text-sm">{{ service.registrationLimitDate ? service.registrationLimitDate|date('d/m/Y H:i') : 'N/A' }}</td>
                                <td class="p-2 text-sm">{{ service.type ?? 'N/A' }}</td>
                                <td class="p-2 text-sm">{{ service.category ?? 'N/A' }}</td>
                                <td class="p-2 text-sm">
                                    {% if is_granted('ROLE_VOLUNTEER') and not service.isArchived %}
                                        {% if assistanceByService[service.id] is defined and assistanceByService[service.id] %}
                                            <a href="{{ path('app_service_unattend', {'id': service.id}) }}" class="px-3 py-1 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors">
                                                No Asistir
                                            </a>
                                        {% else %}
                                            <a href="{{ path('app_service_attend', {'id': service.id}) }}" class="px-3 py-1 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors">
                                                Asistir
                                            </a>
                                        {% endif %}
                                    {% elseif is_granted('ROLE_ADMIN') %}
                                        <div class="relative inline-block text-left group">
                                            <button type="button" class="inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" id="options-menu" aria-haspopup="true" aria-expanded="true">
                                                <i data-lucide="more-vertical" class="w-4 h-4"></i>
                                            </button>
                                            <div class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-10 hidden group-hover:block" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
                                                <div class="py-1" role="none">
                                                    <a href="{{ path('app_service_edit', {'id': service.id}) }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Editar</a>
                                                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Imprimir</a>
                                                    {% if not service.isArchived %}
                                                    <form action="{{ path('app_service_archive', {'id': service.id}) }}" method="post" class="w-full">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('archive' ~ service.id) }}">
                                                        <button type="submit" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">
                                                            Archivar
                                                        </button>
                                                    </form>
                                                    {% endif %}
                                                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Duplicar</a>
                                                    <a href="#" class="block px-4 py-2 text-sm text-red-700 hover:bg-red-50" role="menuitem">Eliminar</a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="8" class="p-4 text-center text-gray-500">No se encontraron servicios.</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}