{% extends 'layout/app.html.twig' %}

{% block title %}Listado de sercicos{% endblock %}


{% block body %}
<div class="p-6 space-y-6">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div>
            <h2 class="text-2xl font-bold text-gray-900">Listado de Servicios</h2>


<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Servicios Disponibles</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 p-6"> {# Grid container for the cards #}
    {% if services is defined and services is not empty %}
        {% for service in services %}
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden flex flex-col">
                {# Top section: Title and Numeration #}
                <div class="p-4">
                    <h3 class="text-lg font-bold text-gray-900">{{ service.title }}</h3>
                    <p class="text-sm text-gray-600">{{ service.numeration ?? 'N/A' }}</p>
                </div>

                {# Middle section: Details (Date, Limit, Type, Category) #}
                <div class="p-4 border-t border-gray-200">
                    <p class="text-sm text-gray-900 mb-1"><strong>Fecha:</strong> {{ service.startDate ? service.startDate|date('d/m/Y H:i') : 'N/A' }}</p>
                    <p class="text-sm text-gray-900 mb-1"><strong>Límite de inscripción:</strong> {{ service.registrationLimitDate ? service.registrationLimitDate|date('d/m/Y H:i') : 'N/A' }}</p>
                    <p class="text-sm text-gray-900 mb-1"><strong>Tipo:</strong> {{ service.type ?? 'N/A' }}</p>
                    <p class="text-sm text-gray-900"><strong>Categoría:</strong> {{ service.category ?? 'N/A' }}</p>
                    {% if is_granted('ROLE_ADMIN') %}
                        <p class="text-sm text-gray-900"><strong>Asistentes:</strong> {{ attendeesByService[service.id] | default(0) }}</p>
                    {% endif %}
                </div>

                {# Bottom section: Actions (Attend/Unattend buttons) #}
                <div class="p-4 mt-auto bg-gray-50 border-t border-gray-200 flex gap-2">
                    {% if is_granted('ROLE_VOLUNTEER') %}
                        {% if assistanceByService[service.id] is defined and assistanceByService[service.id] %}
                            {# If already attending, show "No Asistir" #}
                            <a href="{{ path('app_service_unattend', {'id': service.id}) }}" class="flex-1 text-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
                                No Asistir
                            </a>
                        {% else %}
                            {# If not attending, show "Asistir" #}
                            <a href="{{ path('app_service_attend', {'id': service.id}) }}" class="flex-1 text-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
                                Asistir
                            </a>
                        {% endif %}
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_service_edit', {'id': service.id}) }}" class="p-1 text-green-600 hover:bg-green-50 rounded" title="Editar">
                            <i data-lucide="edit" class="w-4 h-4"></i>
                        </a>
                        <a href="{{ path('app_service_attendance', {'id': service.id}) }}" class="p-1 text-purple-600 hover:bg-purple-50 rounded" title="Asistencia">
                            <i data-lucide="users" class="w-4 h-4"></i>
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="col-span-full px-6 py-8 text-center text-gray-500 bg-white rounded-xl shadow-sm border border-gray-200">
            No se encontraron servicios.
        </div>
    {% endif %}
</div>
        {# Paginación (si aplica) #}
        {% if services is defined and services.getTotalItemCount is defined and services.count > 0 %}
            <div class="navigation flex justify-center py-4 bg-gray-50 border-t border-gray-200">
                {{ knp_pagination_render(services) }}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}