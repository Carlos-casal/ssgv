{% extends 'layout/app.html.twig' %}

{% block title %}Crear Nuevo Servicio{% endblock %}
{% block page_title %}Crear Nuevo Servicio{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-error {
            color: #EF4444;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
        /* Custom styles for TinyMCE containers to match the design */
        .tox-tinymce {
            border-radius: 1rem !important;
            border: 1px solid #E2E8F0 !important;
            overflow: hidden;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block content %}
<div class="w-full px-8 py-8 bg-slate-100 min-h-full" data-controller="service-form modal-form">
    {# Redesigning the form for Ssgv (Service) entity using Tailwind to mimic Bootstrap cards #}

    {{ form_start(form, {
        'attr': {
            'class': 'space-y-8',
            'name': 'service',
            'id': 'service-form',
            'data-service-form-target': 'form',
            'data-redirect-url': path('app_services_list')
        }
    }) }}

    {# Card 1: Cabecera #}
    <div class="bg-white shadow-sm border border-slate-200 rounded-2xl overflow-hidden mb-6">
        <div class="p-6 md:p-8">
            <h5 class="text-slate-400 text-[10px] uppercase tracking-[0.2em] font-black mb-6 flex items-center">
                <i data-lucide="tag" class="w-4 h-4 mr-2"></i> Cabecera del Registro
            </h5>
            <div class="space-y-6">
                <div>
                    {{ form_label(form.numeration, 'Nº de Registro', {'label_attr': {'class': 'block text-sm font-bold text-slate-700 mb-2'}}) }}
                    <div class="flex rounded-xl shadow-sm ring-1 ring-inset ring-slate-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-blue-600">
                        <span class="flex select-none items-center pl-3 text-slate-500 sm:text-sm">
                            <i data-lucide="tag" class="w-4 h-4"></i>
                        </span>
                        {{ form_widget(form.numeration, {
                            'attr': {
                                'class': 'block flex-1 border-0 bg-transparent py-3 pl-2 pr-3 text-slate-900 placeholder:text-slate-400 focus:ring-0 sm:text-sm font-mono',
                                'placeholder': 'S-2026-XXX (Automático si se deja vacío)'
                            }
                        }) }}
                    </div>
                    <div class="form-error">{{ form_errors(form.numeration) }}</div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="md:col-span-2">
                        {{ form_label(form.title, 'Título del Servicio', {'label_attr': {'class': 'block text-sm font-bold text-slate-700 mb-2'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'block w-full rounded-xl border-0 py-3 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm', 'placeholder': 'Ej. Dispositivo Maratón'}}) }}
                        <div class="form-error">{{ form_errors(form.title) }}</div>
                    </div>
                    <div>
                        {{ form_label(form.type, 'Tipo', {'label_attr': {'class': 'block text-sm font-bold text-slate-700 mb-2'}}) }}
                        {{ form_widget(form.type, {'attr': {'class': 'block w-full rounded-xl border-0 py-3 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm'}}) }}
                        <div class="form-error">{{ form_errors(form.type) }}</div>
                    </div>
                    <div>
                        {{ form_label(form.category, 'Categoría', {'label_attr': {'class': 'block text-sm font-bold text-slate-700 mb-2'}}) }}
                        {{ form_widget(form.category, {'attr': {'class': 'block w-full rounded-xl border-0 py-3 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm'}}) }}
                        <div class="form-error">{{ form_errors(form.category) }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Card 2: Cronología #}
    <div class="bg-white shadow-sm border border-slate-200 rounded-2xl overflow-hidden mb-6">
        <div class="p-6 md:p-8">
            <h5 class="text-slate-400 text-[10px] uppercase tracking-[0.2em] font-black mb-6 flex items-center">
                <i data-lucide="calendar" class="w-4 h-4 mr-2"></i> Cronología del Operativo
            </h5>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                    {{ form_label(form.startDate, 'Fecha Inicio', {'label_attr': {'class': 'block text-sm font-bold text-slate-700 mb-2'}}) }}
                    {{ form_widget(form.startDate, {'attr': {'class': 'block w-full rounded-xl border-0 py-3 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm'}}) }}
                    <div class="form-error">{{ form_errors(form.startDate) }}</div>
                </div>
                <div>
                    {{ form_label(form.endDate, 'Fecha Fin', {'label_attr': {'class': 'block text-sm font-bold text-slate-700 mb-2'}}) }}
                    {{ form_widget(form.endDate, {'attr': {'class': 'block w-full rounded-xl border-0 py-3 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm'}}) }}
                    <div class="form-error">{{ form_errors(form.endDate) }}</div>
                </div>
            </div>
        </div>
    </div>

    {# Card 3: Detalles #}
    <div class="bg-white shadow-sm border border-slate-200 rounded-2xl overflow-hidden mb-6">
        <div class="p-6 md:p-8">
            <h5 class="text-slate-400 text-[10px] uppercase tracking-[0.2em] font-black mb-6 flex items-center">
                <i data-lucide="file-text" class="w-4 h-4 mr-2"></i> Detalles del Servicio
            </h5>
            <div class="space-y-8">
                <div>
                    {{ form_label(form.tasks, 'Nombre de la Tarea', {'label_attr': {'class': 'block text-lg font-black text-slate-800 mb-4'}}) }}
                    {{ form_widget(form.tasks, {
                        'id': 'service_tasks',
                        'attr': {
                            'class': 'block w-full rounded-2xl border-0 py-4 text-white shadow-inner focus:ring-4 focus:ring-blue-500/10 sm:text-base font-medium',
                            'rows': '5',
                            'style': 'background-color: #1e293b !important; border-left: 4px solid #3b82f6 !important;',
                            'data-service-form-target': 'tasks',
                            'placeholder': 'Describe las tareas principales aquí...'
                        }
                    }) }}
                    <div class="form-error">{{ form_errors(form.tasks) }}</div>
                </div>

                <div>
                    {{ form_label(form.description, 'Descripción', {'label_attr': {'class': 'block text-sm font-bold text-slate-700 mb-2'}}) }}
                    {{ form_widget(form.description, {
                        'id': 'service_description',
                        'attr': {
                            'class': 'block w-full rounded-2xl border-0 py-4 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm bg-slate-50',
                            'rows': '5',
                            'data-service-form-target': 'description'
                        }
                    }) }}
                    <div class="form-error">{{ form_errors(form.description) }}</div>
                </div>
            </div>
        </div>
    </div>

    {# Hidden fields needed for validity #}
    <div class="hidden">
        {{ form_row(form.registrationLimitDate) }}
        {{ form_row(form.maxAttendees) }}
        {{ form_row(form.locality) }}
        {{ form_row(form.recipients) }}
        {{ form_row(form.numNurses) }}
        {{ form_row(form.whatsappMessage) }}
    </div>

    {# Footer Actions #}
    <div class="flex items-center justify-between mt-12 pt-8 border-t border-slate-200">
        <a href="{{ path('app_services_list') }}" class="inline-flex items-center text-sm font-bold text-slate-400 hover:text-slate-600 transition-colors">
            <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i> Cancelar y Volver
        </a>
        <button type="submit" class="inline-flex items-center px-8 py-4 bg-blue-600 text-white font-black rounded-2xl shadow-xl shadow-blue-500/20 hover:bg-blue-700 active:scale-95 transition-all">
            Guardar Nuevo Registro
        </button>
    </div>

    {{ form_end(form) }}
</div>

<!-- Type Modal -->
<div id="typeModal" class="fixed inset-0 bg-gray-800/60 backdrop-blur-sm flex items-center justify-center z-50 hidden" data-modal-form-target="modal">
    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md relative">
        <div class="flex justify-between items-center border-b pb-3 mb-4">
            <h3 class="text-xl font-semibold text-gray-700">Añadir/Editar opción</h3>
            <button type="button" data-action="click->modal-form#closeModal" class="text-gray-400 hover:text-gray-600">
                <span class="text-2xl">&times;</span>
            </button>
        </div>
        <form id="modal-new-type-form" data-url="{{ path('api_service_type_new') }}" data-select-target="#service_type" data-form-name="service_type" data-turbo="false">
            <label for="type_name" class="block text-sm font-medium text-gray-700 mb-1">Nombre <span class="text-red-500">*</span></label>
            <input type="text" id="type_name" name="name" class="form-input w-full border-gray-300 rounded-md shadow-sm" data-modal-form-target="nameInput">
            <div class="mt-6 flex justify-end">
                <button type="submit" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">Aceptar</button>
            </div>
        </form>
    </div>
</div>

<!-- Category Modal -->
<div id="categoryModal" class="fixed inset-0 bg-gray-800/60 backdrop-blur-sm flex items-center justify-center z-50 hidden" data-modal-form-target="modal">
    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md relative">
        <div class="flex justify-between items-center border-b pb-3 mb-4">
            <h3 class="text-xl font-semibold text-gray-700">Añadir/Editar opción</h3>
            <button type="button" data-action="click->modal-form#closeModal" class="text-gray-400 hover:text-gray-600">
                <span class="text-2xl">&times;</span>
            </button>
        </div>
        <form id="modal-new-category-form" data-url="{{ path('api_service_category_new') }}" data-select-target="#service_category" data-form-name="service_category" data-turbo="false">
            <label for="category_name" class="block text-sm font-medium text-gray-700 mb-1">Nombre <span class="text-red-500">*</span></label>
            <input type="text" id="category_name" name="name" class="form-input w-full border-gray-300 rounded-md shadow-sm" data-modal-form-target="nameInput">
            <div class="mt-6 flex justify-end">
                <button type="submit" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">Aceptar</button>
            </div>
        </form>
    </div>
</div>

<!-- WhatsApp Share Modal -->
<div data-service-form-target="whatsappModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-75 flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-2xl w-full mx-4">
        <h3 class="text-3xl font-bold text-gray-900 text-center mb-4">Servicio Guardado con Éxito</h3>
        <p class="text-gray-600 text-center mb-6">
            Revisa y edita el mensaje antes de compartirlo en WhatsApp.
        </p>
        <textarea data-service-form-target="whatsappMessageTextarea" class="w-full h-56 p-4 border border-gray-300 rounded-lg shadow-inner focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
        <div class="flex justify-center items-center mt-6 space-x-4">
            <button data-service-form-target="shareWhatsappButton" class="px-6 py-3 bg-green-500 text-white font-semibold rounded-lg shadow-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-transform transform hover:scale-105">
                Compartir en WhatsApp
            </button>
            <button data-service-form-target="closeModalButton" class="px-6 py-3 bg-gray-300 text-gray-800 font-semibold rounded-lg shadow-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400 transition-transform transform hover:scale-105">
                Cerrar
            </button>
        </div>
    </div>
</div>
{% endblock %}