{% extends 'layout/app.html.twig' %}

{% block title %}Crear Nuevo Servicio{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-group {
            margin-bottom: 1.5rem;
        }
        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #374151;
        }
        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
        }
        .form-group .form-error {
            color: #EF4444;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
        #quill-editor, #tasks-editor {
            height: 300px;
        }
    </style>
<!-- Type Modal -->
<div id="typeModal" class="fixed inset-0 bg-gray-800 bg-opacity-75 flex items-center justify-center z-50 hidden" data-modal-form-target="modal">
    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md relative">
        <div class="flex justify-between items-center border-b pb-3 mb-4">
            <h3 class="text-xl font-semibold text-gray-700">A√±adir/Editar opci√≥n</h3>
            <button type="button" data-action="click->modal-form#closeModal" class="text-gray-400 hover:text-gray-600">
                <span class="text-2xl">&times;</span>
            </button>
        </div>
        <form id="modal-new-type-form" data-url="{{ path('api_service_type_new') }}" data-select-target="#service_type" data-form-name="service_type" data-turbo="false">
            <label for="type_name" class="block text-sm font-medium text-gray-700 mb-1">Nombre <span class="text-red-500">*</span></label>
            <input type="text" id="type_name" name="name" class="form-input w-full border-gray-300 rounded-md shadow-sm" data-modal-form-target="nameInput">
            <div class="mt-6 flex justify-end">
                <button type="submit" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">Aceptar</button>
            </div>
        </form>
    </div>
</div>

<!-- Category Modal -->
<div id="categoryModal" class="fixed inset-0 bg-gray-800 bg-opacity-75 flex items-center justify-center z-50 hidden" data-modal-form-target="modal">
    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md relative">
        <div class="flex justify-between items-center border-b pb-3 mb-4">
            <h3 class="text-xl font-semibold text-gray-700">A√±adir/Editar opci√≥n</h3>
            <button type="button" data-action="click->modal-form#closeModal" class="text-gray-400 hover:text-gray-600">
                <span class="text-2xl">&times;</span>
            </button>
        </div>
        <form id="modal-new-category-form" data-url="{{ path('api_service_category_new') }}" data-select-target="#service_category" data-form-name="service_category" data-turbo="false">
            <label for="category_name" class="block text-sm font-medium text-gray-700 mb-1">Nombre <span class="text-red-500">*</span></label>
            <input type="text" id="category_name" name="name" class="form-input w-full border-gray-300 rounded-md shadow-sm" data-modal-form-target="nameInput">
            <div class="mt-6 flex justify-end">
                <button type="submit" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">Aceptar</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8" data-controller="service-form modal-form">
    <h1 class="text-4xl font-bold mb-8 text-gray-900">Crear Nuevo Servicio</h1>
    <div class="bg-white shadow-xl rounded-2xl p-8">
        {{ form_start(form, {
            'attr': {
                'class': 'space-y-10',
                'name': 'service',
                'id': 'service-form',
                'data-service-form-target': 'form',
                'data-redirect-url': path('app_services_list')
            }
        }) }}

        <div class="grid grid-cols-1 md:grid-cols-3 gap-x-8 gap-y-6">
            <div class="form-group">
                {{ form_label(form.numeration, 'Numeraci√≥n') }}
                {{ form_widget(form.numeration) }}
                <div class="form-error">{{ form_errors(form.numeration) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.title, 'T√≠tulo') }}
                {{ form_widget(form.title) }}
                <div class="form-error">{{ form_errors(form.title) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.locality, 'Lugar') }}
                {{ form_widget(form.locality) }}
                <div class="form-error">{{ form_errors(form.locality) }}</div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-x-8 gap-y-6">
            <div class="form-group">
                {{ form_label(form.startDate, 'Inicio') }}
                {{ form_widget(form.startDate) }}
                <div class="form-error">{{ form_errors(form.startDate) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.timeAtBase, 'Base') }}
                {{ form_widget(form.timeAtBase) }}
                <div class="form-error">{{ form_errors(form.timeAtBase) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.departureTime, 'Salida') }}
                {{ form_widget(form.departureTime) }}
                <div class="form-error">{{ form_errors(form.departureTime) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.endDate, 'Fin') }}
                {{ form_widget(form.endDate) }}
                <div class="form-error">{{ form_errors(form.endDate) }}</div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-x-8 gap-y-6">
            <div class="form-group">
                {{ form_label(form.registrationLimitDate, 'L√≠mite') }}
                {{ form_widget(form.registrationLimitDate) }}
                <div class="form-error">{{ form_errors(form.registrationLimitDate) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.maxAttendees, 'Asistentes') }}
                {{ form_widget(form.maxAttendees) }}
                <div class="form-error">{{ form_errors(form.maxAttendees) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.type, 'Tipo') }}
                {{ form_widget(form.type) }}
                <div class="text-right mt-1">
                    <button type="button" data-action="click->modal-form#openModal" data-modal-id="typeModal" class="text-sm font-medium text-blue-600 hover:text-blue-800 transition duration-150 ease-in-out">+ Nuevo Tipo</button>
                </div>
                <div class="form-error">{{ form_errors(form.type) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.category, 'Categor√≠a') }}
                {{ form_widget(form.category) }}
                <div class="text-right mt-1">
                    <button type="button" data-action="click->modal-form#openModal" data-modal-id="categoryModal" class="text-sm font-medium text-blue-600 hover:text-blue-800 transition duration-150 ease-in-out">+ Nueva Categor√≠a</button>
                </div>
                <div class="form-error">{{ form_errors(form.category) }}</div>
            </div>
        </div>

        <div data-controller="resource-form">
            <h3 class="text-xl font-bold mb-6 border-b-2 border-gray-200 pb-3">Recursos</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-x-8 gap-y-6">
                <div>
                    <h4 class="text-lg font-semibold mb-4">Ambulancia üöë</h4>
                    <div class="space-y-4">
                        <div class="form-group flex items-center">
                             {{ form_label(form.numSvb, 'SVB', {'label_attr': {'class': 'form-resource-label'}}) }}
                             {{ form_widget(form.numSvb, {'attr': {'class': 'form-input-short'}}) }}
                        </div>
                        <div class="form-group flex items-center">
                            {{ form_label(form.numSva, 'SVA', {'label_attr': {'class': 'form-resource-label'}}) }}
                            {{ form_widget(form.numSva, {'attr': {'class': 'form-input-short'}}) }}
                        </div>
                        <div class="form-group flex items-center">
                            {{ form_label(form.numSvae, 'SVAE', {'label_attr': {'class': 'form-resource-label'}}) }}
                            {{ form_widget(form.numSvae, {'attr': {'class': 'form-input-short'}}) }}
                        </div>
                    </div>
                </div>

                <div>
                    <h4 class="text-lg font-semibold mb-4">Personal Sanitario ü•ºü©∫</h4>
                    <div class="space-y-4">
                        <div class="form-group flex items-center">
                            {{ form_label(form.numTecnicos, 'T√©cnicos', {'label_attr': {'class': 'form-resource-label'}}) }}
                            {{ form_widget(form.numTecnicos, {'attr': {'class': 'form-input-short'}}) }}
                        </div>
                        <div class="form-group flex items-center">
                            {{ form_label(form.numDues, 'Enfermer√≠a', {'label_attr': {'class': 'form-resource-label'}}) }}
                            {{ form_widget(form.numDues, {'attr': {'class': 'form-input-short'}}) }}
                        </div>
                        <div class="form-group flex items-center">
                            {{ form_label(form.numDoctors, 'M√©dico', {'label_attr': {'class': 'form-resource-label'}}) }}
                            {{ form_widget(form.numDoctors, {'attr': {'class': 'form-input-short'}}) }}
                        </div>
                    </div>
                </div>

                <div>
                    <h4 class="text-lg font-semibold mb-4">Otros</h4>
                    <div class="space-y-4">
                        <div class="form-group">
                            {{ form_label(form.afluencia, 'Afluencia üìà') }}
                            {{ form_widget(form.afluencia, {'attr': {'data-action': 'change->resource-form#updateAfluenciaColor', 'data-resource-form-target': 'afluencia'}}) }}
                            <div class="form-error">{{ form_errors(form.afluencia) }}</div>
                        </div>
                        <div class="flex items-center pt-3">
                            {{ form_widget(form.hasFieldHospital) }}
                            {{ form_label(form.hasFieldHospital, 'Hospital de Campa√±a üè•', {'label_attr': {'class': 'ml-3'}}) }}
                            <div class="form-error">{{ form_errors(form.hasFieldHospital) }}</div>
                        </div>
                        <div class="flex items-center">
                            {{ form_widget(form.hasProvisions) }}
                            {{ form_label(form.hasProvisions, 'Avituallamiento ü•™', {'label_attr': {'class': 'ml-3'}}) }}
                            <div class="form-error">{{ form_errors(form.hasProvisions) }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="space-y-10">
            <div class="form-group">
                {{ form_label(form.tasks, 'Tareas üìù') }}
                <div data-service-form-target="quillTasks" style="height: 300px;"></div>
                {{ form_widget(form.tasks, {'id': 'service_tasks', 'attr': {'style': 'display:none;', 'data-service-form-target': 'tasks'}}) }}
                <div class="form-error">{{ form_errors(form.tasks) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.description, 'Descripci√≥n ‚ÑπÔ∏è') }}
                <div data-service-form-target="quillDescription" style="height: 300px;"></div>
                {{ form_widget(form.description, {'id': 'service_description', 'attr': {'style': 'display:none;', 'data-service-form-target': 'description'}}) }}
                <div class="form-error">{{ form_errors(form.description) }}</div>
            </div>
        </div>

        <div style="display:none;">
            {{ form_row(form.recipients) }}
            {{ form_row(form.numNurses) }}
            {{ form_row(form.whatsappMessage) }}
        </div>

        {{ form_rest(form) }}

        <div class="flex items-center justify-end mt-10 pt-6 border-t border-gray-200">
            <a href="{{ path('app_services_list') }}" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-3 px-6 rounded-lg transition-colors duration-300">
                Volver a la Lista
            </a>
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors duration-300 ml-4">
                Guardar Servicio
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
<!-- WhatsApp Share Modal -->
<div data-service-form-target="whatsappModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-75 flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-2xl w-full mx-4">
        <h3 class="text-3xl font-bold text-gray-900 text-center mb-4">Servicio Guardado con √âxito</h3>
        <p class="text-gray-600 text-center mb-6">
            Revisa y edita el mensaje antes de compartirlo en WhatsApp.
        </p>
        <textarea data-service-form-target="whatsappMessageTextarea" class="w-full h-56 p-4 border border-gray-300 rounded-lg shadow-inner focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
        <div class="flex justify-center items-center mt-6 space-x-4">
            <button data-service-form-target="shareWhatsappButton" class="px-6 py-3 bg-green-500 text-white font-semibold rounded-lg shadow-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-transform transform hover:scale-105">
                Compartir en WhatsApp
            </button>
            <button data-service-form-target="closeModalButton" class="px-6 py-3 bg-gray-300 text-gray-800 font-semibold rounded-lg shadow-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400 transition-transform transform hover:scale-105">
                Cerrar
            </button>
        </div>
    </div>
</div>
{% endblock %}