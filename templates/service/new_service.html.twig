{% extends 'layout/app.html.twig' %}

{% block title %}Crear Nuevo Servicio{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/quill@2.0.2/dist/quill.snow.css" rel="stylesheet">
