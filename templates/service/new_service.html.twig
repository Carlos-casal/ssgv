{% extends 'layout/app.html.twig' %}

{% block title %}Crear Nuevo Servicio{% endblock %}
{% block page_title %}Crear Nuevo Servicio{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-error {
            color: #EF4444;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
        /* Custom styles for TinyMCE containers to match the design */
        .tox-tinymce {
            border-radius: 1.5rem !important;
            border: 1px solid #E2E8F0 !important;
            overflow: hidden;
        }
        /* Style for switches */
        .toggle-switch {
            @apply relative inline-flex h-6 w-11 shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 bg-slate-200;
        }
        .toggle-switch[checked], .toggle-switch:checked {
            @apply bg-blue-600;
        }
        .toggle-thumb {
            @apply pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out translate-x-0;
        }
        input:checked + .toggle-switch .toggle-thumb {
            @apply translate-x-5;
        }
    </style>
{% endblock %}

{% block content %}
<div class="w-full px-8 py-8 bg-slate-100 min-h-full" data-controller="service-form modal-form">
    {# ESPECIFICACIÓN: NUEVO FORMULARIO DE ALTA DE SERVICIOS #}

    {{ form_start(form, {
        'attr': {
            'class': 'space-y-6',
            'name': 'service',
            'id': 'service-form',
            'data-service-form-target': 'form',
            'data-redirect-url': path('app_services_list')
        }
    }) }}

    <!-- Bootstrap 5 Tabs Navigation -->
    <ul class="nav nav-tabs mb-4" id="serviceTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">
                <i data-lucide="info" class="w-4 h-4 inline-block mr-1"></i> Datos Generales
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="resources-tab" data-bs-toggle="tab" data-bs-target="#resources" type="button" role="tab" aria-controls="resources" aria-selected="false">
                <i data-lucide="package" class="w-4 h-4 inline-block mr-1"></i> Recursos y Dotación
            </button>
        </li>
    </ul>

    <div class="tab-content" id="serviceTabsContent">
        <!-- Tab 1: Datos Generales -->
        <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
            <div class="bg-white shadow-sm border border-slate-200 rounded-3xl overflow-hidden mb-6">
                <div class="p-6 md:p-8">
                    <div class="row g-4 mb-6">
                        <div class="col-md-8">
                            {{ form_label(form.title, 'Título del Servicio', {'label_attr': {'class': 'form-label text-xs font-bold text-slate-500 mb-2'}}) }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-control form-control-lg font-bold text-slate-900', 'placeholder': 'Ej. Dispositivo Maratón'}}) }}
                            <div class="form-error">{{ form_errors(form.title) }}</div>
                        </div>
                        <div class="col-md-4">
                            {{ form_label(form.numeration, 'Nº de Registro', {'label_attr': {'class': 'form-label text-xs font-bold text-slate-500 mb-2'}}) }}
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-slate-50 text-slate-400"><i data-lucide="barcode" class="w-4 h-4"></i></span>
                                {{ form_widget(form.numeration, {
                                    'attr': {
                                        'class': 'form-control font-mono bg-slate-50 text-slate-500',
                                        'placeholder': '(Auto: 2026-XXX)',
                                        'readonly': 'readonly'
                                    }
                                }) }}
                            </div>
                            <div class="form-error">{{ form_errors(form.numeration) }}</div>
                        </div>
                    </div>

                    <div class="mb-6">
                        {{ form_label(form.locality, 'Ubicación / Lugar del Operativo', {'label_attr': {'class': 'form-label text-xs font-bold text-slate-500 mb-2'}}) }}
                        <div class="input-group">
                            <span class="input-group-text bg-white"><i data-lucide="map-pin" class="w-4 h-4 text-slate-400"></i></span>
                            {{ form_widget(form.locality, {'attr': {'class': 'form-control text-sm', 'placeholder': 'Añadir ubicación...'}}) }}
                        </div>
                        <div class="form-error">{{ form_errors(form.locality) }}</div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 pt-6 border-t border-slate-100">
                        <div>
                            {{ form_label(form.type, 'Tipo de Servicio', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 mb-2'}}) }}
                            <div class="input-group shadow-sm rounded-xl overflow-hidden">
                                {{ form_widget(form.type, {'attr': {'class': 'form-select border-slate-200 py-3 px-4 text-sm'}}) }}
                                <button type="button" data-action="click->modal-form#openModal" data-modal-id="typeModal" class="btn btn-primary px-3 flex items-center justify-center transition-colors">
                                    <i data-lucide="plus" class="w-4 h-4"></i>
                                </button>
                            </div>
                            <div class="form-error">{{ form_errors(form.type) }}</div>
                        </div>
                        <div>
                            {{ form_label(form.category, 'Categoría', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 mb-2'}}) }}
                            <div class="input-group shadow-sm rounded-xl overflow-hidden">
                                {{ form_widget(form.category, {'attr': {'class': 'form-select border-slate-200 py-3 px-4 text-sm'}}) }}
                                <button type="button" data-action="click->modal-form#openModal" data-modal-id="categoryModal" class="btn btn-primary px-3 flex items-center justify-center transition-colors">
                                    <i data-lucide="plus" class="w-4 h-4"></i>
                                </button>
                            </div>
                            <div class="form-error">{{ form_errors(form.category) }}</div>
                        </div>
                        <div>
                            {{ form_label(form.maxAttendees, 'Plazas Totales', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 mb-2'}}) }}
                            {{ form_widget(form.maxAttendees, {'attr': {'class': 'form-control rounded-xl py-3 px-4 text-sm', 'placeholder': 'Ej. 50'}}) }}
                            <div class="form-error">{{ form_errors(form.maxAttendees) }}</div>
                        </div>
                    </div>
                </div>
            </div>

            {# TARJETA 2: Cronología (Tiempos) #}
            <div class="bg-white shadow-sm border border-slate-200 rounded-3xl overflow-hidden mb-6">
                <div class="p-6 md:p-8">
                    <h5 class="text-slate-400 text-[10px] uppercase tracking-[0.2em] font-black mb-6 flex items-center">
                        <i data-lucide="calendar" class="w-4 h-4 mr-2"></i> Cronología del Operativo
                    </h5>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8 pb-8 border-b border-slate-50">
                        <div class="form-group">
                            {{ form_label(form.startDate, 'Inicio del Servicio', {'label_attr': {'class': 'form-label text-sm font-bold text-slate-700 mb-2'}}) }}
                            {{ form_widget(form.startDate, {'attr': {'class': 'form-control form-control-lg rounded-xl text-slate-900 shadow-sm font-bold'}}) }}
                            <div class="form-error">{{ form_errors(form.startDate) }}</div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.endDate, 'Finalización', {'label_attr': {'class': 'form-label text-sm font-bold text-slate-700 mb-2'}}) }}
                            {{ form_widget(form.endDate, {'attr': {'class': 'form-control form-control-lg rounded-xl text-slate-900 shadow-sm font-bold'}}) }}
                            <div class="form-error">{{ form_errors(form.endDate) }}</div>
                        </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            {{ form_label(form.timeAtBase, 'Hora en Base', {'label_attr': {'class': 'form-label text-xs font-semibold text-slate-400 mb-2'}}) }}
                            {{ form_widget(form.timeAtBase, {'attr': {'class': 'form-control form-control-lg rounded-lg text-slate-600 shadow-sm'}}) }}
                        </div>
                        <div>
                            {{ form_label(form.departureTime, 'Hora de Salida', {'label_attr': {'class': 'form-label text-xs font-semibold text-slate-400 mb-2'}}) }}
                            {{ form_widget(form.departureTime, {'attr': {'class': 'form-control form-control-lg rounded-lg text-slate-600 shadow-sm'}}) }}
                        </div>
                        <div>
                            {{ form_label(form.registrationLimitDate, 'Límite de Inscripción', {'label_attr': {'class': 'form-label text-xs font-semibold text-slate-400 mb-2'}}) }}
                            {{ form_widget(form.registrationLimitDate, {'attr': {'class': 'form-control form-control-lg rounded-lg text-slate-600 shadow-sm'}}) }}
                        </div>
                    </div>
                </div>
            </div>

            {# TARJETA 4: Definición Operativa #}
            <div class="bg-white shadow-sm border border-slate-200 rounded-3xl overflow-hidden mb-12">
                <div class="p-6 md:p-8">
                    <h5 class="text-slate-400 text-[10px] uppercase tracking-[0.2em] font-black mb-6 flex items-center">
                        <i data-lucide="clipboard-list" class="w-4 h-4 mr-2"></i> Definición Operativa
                    </h5>
                    <div class="space-y-8">
                        <div>
                            {{ form_label(form.tasks, 'Tareas', {'label_attr': {'class': 'form-label text-lg font-bold text-slate-800 mb-3'}}) }}
                            {{ form_widget(form.tasks, {
                                'attr': {
                                    'class': 'form-control rounded-2xl border-slate-300 py-4 px-6 text-slate-900 shadow-sm sm:text-base',
                                    'rows': '2',
                                    'placeholder': 'Resume las tareas principales aquí (Texto plano)...'
                                }
                            }) }}
                            <div class="form-error">{{ form_errors(form.tasks) }}</div>
                        </div>

                        <div>
                            {{ form_label(form.description, 'Descripción', {'label_attr': {'class': 'form-label text-sm font-bold text-slate-700 mb-2'}}) }}
                            {{ form_widget(form.description, {
                                'attr': {
                                    'class': 'form-control rounded-2xl border-slate-300 py-4 px-6 text-slate-900 shadow-sm sm:text-sm js-editor-tiny',
                                    'rows': '4',
                                    'placeholder': 'Desarrolla los detalles del operativo aquí...'
                                }
                            }) }}
                            <div class="form-error">{{ form_errors(form.description) }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End Tab 1 -->

        <!-- Tab 2: Recursos y Dotación -->
        <div class="tab-pane fade" id="resources" role="tabpanel" aria-labelledby="resources-tab">
            <div class="bg-white shadow-sm border border-slate-200 rounded-3xl overflow-hidden mb-6">
                <div class="p-6 md:p-8">
                    <h5 class="text-slate-400 text-[10px] uppercase tracking-[0.2em] font-black mb-8 flex items-center">
                        <i data-lucide="package" class="w-4 h-4 mr-2"></i> Recursos y Dotación del Operativo
                    </h5>

                    <div class="row g-4">
                        <!-- Column 1: Ambulancias -->
                        <div class="col-md-4 border-end">
                            <h6 class="text-xs font-black text-slate-800 uppercase mb-4 flex items-center">
                                <i data-lucide="truck" class="w-3 h-3 mr-2 text-blue-600"></i> Ambulancias
                            </h6>
                            <div class="space-y-3">
                                <div class="d-flex align-items-center justify-content-between">
                                    {{ form_label(form.numSvb, 'SVB', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                    {{ form_widget(form.numSvb, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                </div>
                                <div class="d-flex align-items-center justify-content-between">
                                    {{ form_label(form.numSva, 'SVA', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                    {{ form_widget(form.numSva, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                </div>
                                <div class="d-flex align-items-center justify-content-between">
                                    {{ form_label(form.numSvae, 'SVA-E', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                    {{ form_widget(form.numSvae, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                </div>
                                <div class="d-flex align-items-center justify-content-between">
                                    {{ form_label(form.numVir, 'VIR', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                    {{ form_widget(form.numVir, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                </div>
                            </div>
                        </div>

                        <!-- Column 2: Personal Sanitario -->
                        <div class="col-md-4 border-end">
                            <h6 class="text-xs font-black text-slate-800 uppercase mb-4 flex items-center">
                                <i data-lucide="users" class="w-3 h-3 mr-2 text-green-600"></i> Personal Sanitario
                            </h6>
                            <div class="space-y-3">
                                <div class="d-flex align-items-center justify-content-between">
                                    {{ form_label(form.numTes, 'TES', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                    {{ form_widget(form.numTes, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                </div>
                                <div class="d-flex align-items-center justify-content-between">
                                    {{ form_label(form.numTts, 'TTS', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                    {{ form_widget(form.numTts, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                </div>
                                <div class="d-flex align-items-center justify-content-between">
                                    {{ form_label(form.numDue, 'DUE', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                    {{ form_widget(form.numDue, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                </div>
                                <div class="d-flex align-items-center justify-content-between">
                                    {{ form_label(form.numDoctors, 'Médico', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                    {{ form_widget(form.numDoctors, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                </div>
                            </div>
                        </div>

                        <!-- Column 3: Logística -->
                        <div class="col-md-4">
                            <h6 class="text-xs font-black text-slate-800 uppercase mb-4 flex items-center">
                                <i data-lucide="settings" class="w-3 h-3 mr-2 text-orange-600"></i> Logística
                            </h6>
                            <div class="space-y-4">
                                <div class="form-group">
                                    {{ form_label(form.afluencia, 'Afluencia Estimada', {'label_attr': {'class': 'form-label text-xs font-bold text-slate-500 mb-2'}}) }}
                                    {{ form_widget(form.afluencia, {
                                        'attr': {
                                            'class': 'form-select form-select-sm rounded-xl font-bold',
                                            'data-action': 'change->service-form#updateAfluenciaColor'
                                        }
                                    }) }}
                                </div>
                                <div class="flex items-center space-x-3">
                                    <label for="{{ form.hasFieldHospital.vars.id }}" class="relative inline-flex items-center cursor-pointer">
                                        {{ form_widget(form.hasFieldHospital, {'attr': {'class': 'sr-only peer'}}) }}
                                        <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-green-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-green-600"></div>
                                        <span class="ms-3 text-xs font-bold text-slate-600">Hospital de Campaña</span>
                                    </label>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <label for="{{ form.hasProvisions.vars.id }}" class="relative inline-flex items-center cursor-pointer">
                                        {{ form_widget(form.hasProvisions, {'attr': {'class': 'sr-only peer'}}) }}
                                        <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-cyan-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-cyan-600"></div>
                                        <span class="ms-3 text-xs font-bold text-slate-600">Avituallamiento</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End Tab 2 -->
    </div><!-- End tab-content -->

    {# Hidden fields for form validity #}
    <div class="hidden">
        {{ form_row(form.whatsappMessage) }}
    </div>

    {# Footer Actions #}
    <div class="d-flex justify-content-end align-items-center gap-3 pt-6 border-t border-slate-200 mt-8">
        <a href="{{ path('app_services_list') }}" class="btn btn-outline-secondary px-6 py-2.5 rounded-xl text-sm font-bold d-inline-flex align-items-center justify-content-center">
            Cancelar
        </a>
        <button type="submit" class="btn btn-primary px-6 py-2.5 rounded-xl text-sm font-bold d-inline-flex align-items-center justify-content-center">
            Guardar Servicio
        </button>
    </div>

    {{ form_end(form) }}
</div>

<!-- Type Modal -->
<div id="typeModal" class="fixed inset-0 bg-gray-800/60 backdrop-blur-sm flex items-center justify-center z-50 hidden" data-modal-form-target="modal">
    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md relative">
        <div class="flex justify-between items-center border-b pb-3 mb-4">
            <h3 class="text-xl font-semibold text-gray-700">Añadir/Editar opción</h3>
            <button type="button" data-action="click->modal-form#closeModal" class="text-gray-400 hover:text-gray-600">
                <span class="text-2xl">&times;</span>
            </button>
        </div>
        <form id="modal-new-type-form" data-url="{{ path('api_service_type_new') }}" data-select-target="#service_type" data-form-name="service_type" data-turbo="false">
            <label for="type_name" class="block text-sm font-medium text-gray-700 mb-1">Nombre <span class="text-red-500">*</span></label>
            <input type="text" id="type_name" name="name" class="form-input w-full border-gray-300 rounded-md shadow-sm" data-modal-form-target="nameInput">
            <div class="mt-6 flex justify-end">
                <button type="submit" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">Aceptar</button>
            </div>
        </form>
    </div>
</div>

<!-- Category Modal -->
<div id="categoryModal" class="fixed inset-0 bg-gray-800/60 backdrop-blur-sm flex items-center justify-center z-50 hidden" data-modal-form-target="modal">
    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md relative">
        <div class="flex justify-between items-center border-b pb-3 mb-4">
            <h3 class="text-xl font-semibold text-gray-700">Añadir/Editar opción</h3>
            <button type="button" data-action="click->modal-form#closeModal" class="text-gray-400 hover:text-gray-600">
                <span class="text-2xl">&times;</span>
            </button>
        </div>
        <form id="modal-new-category-form" data-url="{{ path('api_service_category_new') }}" data-select-target="#service_category" data-form-name="service_category" data-turbo="false">
            <label for="category_name" class="block text-sm font-medium text-gray-700 mb-1">Nombre <span class="text-red-500">*</span></label>
            <input type="text" id="category_name" name="name" class="form-input w-full border-gray-300 rounded-md shadow-sm" data-modal-form-target="nameInput">
            <div class="mt-6 flex justify-end">
                <button type="submit" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">Aceptar</button>
            </div>
        </form>
    </div>
</div>

<!-- WhatsApp Share Modal -->
<div data-service-form-target="whatsappModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-75 flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-2xl w-full mx-4">
        <h3 class="text-3xl font-bold text-gray-900 text-center mb-4">Servicio Guardado con Éxito</h3>
        <p class="text-gray-600 text-center mb-6">
            Revisa y edita el mensaje antes de compartirlo en WhatsApp.
        </p>
        <textarea data-service-form-target="whatsappMessageTextarea" class="w-full h-56 p-4 border border-gray-300 rounded-lg shadow-inner focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
        <div class="flex justify-center items-center mt-6 space-x-4">
            <button data-service-form-target="shareWhatsappButton" class="px-6 py-3 bg-green-500 text-white font-semibold rounded-lg shadow-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-transform transform hover:scale-105">
                Compartir en WhatsApp
            </button>
            <button data-service-form-target="closeModalButton" class="px-6 py-3 bg-gray-300 text-gray-800 font-semibold rounded-lg shadow-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400 transition-transform transform hover:scale-105">
                Cerrar
            </button>
        </div>
    </div>
</div>
{% endblock %}