{% extends 'layout/app.html.twig' %}

{% block title %}Crear Nuevo Servicio{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-error {
            color: #EF4444;
            font-size: 0.75rem;
            margin-top: 0.1rem;
        }
        .tox-tinymce {
            border-radius: 0.5rem !important;
            border: 1px solid #E2E8F0 !important;
        }
        /* Custom compact styles */
        .card-header-compact {
            padding: 0.5rem 1rem;
            background-color: #f8fafc;
            border-bottom: 1px solid #e2e8f0;
        }
        .section-title {
            font-size: 0.75rem;
            font-weight: 900;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #64748b;
        }
        .form-label-sm {
            font-size: 0.7rem;
            font-weight: 700;
            margin-bottom: 0.2rem;
            color: #475569;
            text-transform: uppercase;
        }
        /* iPhone Switch Styling */
        .form-switch .form-check-input {
            width: 2.5em;
            height: 1.25em;
            cursor: pointer;
        }
        /* Tabs Styling */
        .nav-tabs-custom .nav-link {
            border: none;
            color: #64748b;
            font-weight: 700;
            font-size: 0.8rem;
            text-transform: uppercase;
            padding: 1rem 1.5rem;
            border-bottom: 2px solid transparent;
        }
        .nav-tabs-custom .nav-link.active {
            color: #2563eb;
            background: transparent;
            border-bottom: 2px solid #2563eb;
        }
    </style>
{% endblock %}

{% block page_title %}
    <div class="d-flex justify-content-between align-items-center w-100">
        <div class="d-flex align-items-center">
            <i data-lucide="plus-circle" class="w-6 h-6 text-blue-600 mr-2"></i>
            <span class="font-black tracking-tight">CREAR NUEVO SERVICIO</span>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('app_services_list') }}" class="btn btn-outline-secondary btn-sm px-3">
                <i data-lucide="x" class="w-4 h-4 inline mr-1"></i> Cancelar
            </a>
            <button type="submit" form="new-service-form-element" class="btn btn-primary btn-sm px-4 shadow-sm font-bold">
                <i data-lucide="save" class="w-4 h-4 inline mr-1"></i> GUARDAR SERVICIO
            </button>
        </div>
    </div>
{% endblock %}

{% block content %}
<div class="container-fluid px-4 py-0 bg-[#f8f9fa] min-h-full" data-controller="service-form">
    {{ form_start(form, {
        'attr': {
            'id': 'new-service-form-element',
            'data-service-form-target': 'form',
            'novalidate': 'novalidate'
        }
    }) }}

    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs nav-tabs-custom border-bottom mb-4 bg-white px-4 -mx-4 sticky-top" style="top: 0; z-index: 10;" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="datos-tab" data-bs-toggle="tab" data-bs-target="#datos" type="button" role="tab" aria-controls="datos" aria-selected="true">
                <i data-lucide="file-text" class="w-4 h-4 inline me-2"></i> Datos Generales
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="recursos-tab" data-bs-toggle="tab" data-bs-target="#recursos" type="button" role="tab" aria-controls="recursos" aria-selected="false">
                <i data-lucide="truck" class="w-4 h-4 inline me-2"></i> Recursos y Dotación
            </button>
        </li>
    </ul>

    <div class="tab-content" id="serviceFormTabContent">
        <!-- TAB 1: DATOS GENERALES -->
        <div class="tab-pane fade show active" id="datos" role="tabpanel" aria-labelledby="datos-tab">
            <div class="row g-3">
                <!-- COLUMNA IZQUIERDA: Identificación -->
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm rounded-3 h-100">
                        <div class="card-header-compact d-flex align-items-center">
                            <i data-lucide="info" class="w-4 h-4 text-blue-600 mr-2"></i>
                            <span class="section-title">Datos Identificativos</span>
                        </div>
                        <div class="card-body p-3">
                            <div class="mb-2">
                                <label class="form-label-sm" for="service_form_title">Título del Servicio <span class="text-danger">*</span></label>
                                {{ form_widget(form.title, {
                                    'id': 'service_form_title',
                                    'attr': {'class': 'form-control form-control-sm font-bold', 'placeholder': 'Ej. Dispositivo Maratón', 'data-action': 'input->service-form#clearError'}
                                }) }}
                                <div class="invalid-feedback hidden" id="error-service_form_title"></div>
                            </div>

                            <div class="mb-2">
                                <label class="form-label-sm" for="service_form_numeration">Nº de Registro (ID)</label>
                                {{ form_widget(form.numeration, {
                                    'id': 'service_form_numeration',
                                    'attr': {'class': 'form-control form-control-sm font-monospace bg-light', 'placeholder': 'Auto-generado si vacío'}
                                }) }}
                            </div>

                            <div class="row g-2 mb-2">
                                <div class="col-6">
                                    <label class="form-label-sm" for="service_form_type">Tipo <span class="text-danger">*</span></label>
                                    <div class="input-group input-group-sm">
                                        {{ form_widget(form.type, {
                                            'id': 'service_form_type',
                                            'attr': {
                                                'class': 'form-select form-select-sm',
                                                'data-action': 'change->service-form#updateCategories'
                                            }
                                        }) }}
                                        <button type="button" class="btn btn-outline-primary" data-action="click->service-form#openTypeModal">
                                            <i data-lucide="plus" class="w-3 h-3"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class="form-label-sm" for="service_form_subcategory">Categoría <span class="text-danger">*</span></label>
                                    <div class="input-group input-group-sm">
                                        {{ form_widget(form.subcategory, {
                                            'id': 'service_form_subcategory',
                                            'attr': {
                                                'class': 'form-select form-select-sm',
                                                'disabled': 'disabled'
                                            }
                                        }) }}
                                        <button type="button" class="btn btn-outline-primary" data-action="click->service-form#openSubcategoryModal">
                                            <i data-lucide="plus" class="w-3 h-3"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <label class="form-label-sm" for="service_form_afluencia">Afluencia Estimada <span class="text-danger">*</span></label>
                                {{ form_widget(form.afluencia, {
                                    'id': 'service_form_afluencia',
                                    'attr': {'class': 'form-select form-select-sm', 'data-action': 'change->service-form#updateAfluenciaColor'}
                                }) }}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- COLUMNA DERECHA: Cronología y Ubicación -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm rounded-3 h-100">
                        <div class="card-header-compact d-flex align-items-center">
                            <i data-lucide="calendar" class="w-4 h-4 text-orange-600 mr-2"></i>
                            <span class="section-title">Cronología y Ubicación</span>
                        </div>
                        <div class="card-body p-3">
                            <!-- Fila 1: Ubicación -->
                            <div class="row mb-3">
                                <div class="col-12">
                                    <label class="form-label-sm" for="service_form_locality">Ubicación / Lugar <span class="text-danger">*</span></label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-white"><i data-lucide="map-pin" class="w-3 h-3"></i></span>
                                        {{ form_widget(form.locality, {
                                            'id': 'service_form_locality',
                                            'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Dirección o punto de encuentro...'}
                                        }) }}
                                    </div>
                                </div>
                            </div>

                            <!-- Fila 2: Fechas y Horas -->
                            <div class="row g-2 mb-3">
                                <div class="col-md-3">
                                    <label class="form-label-sm" for="service_form_startDate">Fecha Inicio <span class="text-danger">*</span></label>
                                    {{ form_widget(form.startDate, {
                                        'id': 'service_form_startDate',
                                        'attr': {'class': 'form-control form-control-sm'}
                                    }) }}
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label-sm" for="service_form_timeAtBase">Hora en Base <span class="text-danger">*</span></label>
                                    {{ form_widget(form.timeAtBase, {
                                        'id': 'service_form_timeAtBase',
                                        'attr': {'class': 'form-control form-control-sm'}
                                    }) }}
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label-sm" for="service_form_departureTime">Hora Salida <span class="text-danger">*</span></label>
                                    {{ form_widget(form.departureTime, {
                                        'id': 'service_form_departureTime',
                                        'attr': {'class': 'form-control form-control-sm'}
                                    }) }}
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label-sm" for="service_form_endDate">Fecha Fin <span class="text-danger">*</span></label>
                                    {{ form_widget(form.endDate, {
                                        'id': 'service_form_endDate',
                                        'attr': {'class': 'form-control form-control-sm'}
                                    }) }}
                                </div>
                            </div>

                            <!-- Fila 3: Límites -->
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label-sm" for="service_form_registrationLimitDate">Fecha Límite Inscripción <span class="text-danger">*</span></label>
                                    {{ form_widget(form.registrationLimitDate, {
                                        'id': 'service_form_registrationLimitDate',
                                        'attr': {'class': 'form-control form-control-sm'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label-sm" for="service_form_maxAttendees">Límite Inscritos (Cupo)</label>
                                    {{ form_widget(form.maxAttendees, {
                                        'id': 'service_form_maxAttendees',
                                        'attr': {'class': 'form-control form-control-sm', 'placeholder': '∞'}
                                    }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- FILA 2: Definición Operativa -->
                <div class="col-12">
                    <div class="card border-0 shadow-sm rounded-3">
                        <div class="card-header-compact d-flex align-items-center">
                            <i data-lucide="clipboard-list" class="w-4 h-4 text-green-600 mr-2"></i>
                            <span class="section-title">Definición Operativa</span>
                        </div>
                        <div class="card-body p-3">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label-sm" for="service_form_tasks">Tareas del Servicio</label>
                                    {{ form_widget(form.tasks, {
                                        'id': 'service_form_tasks',
                                        'attr': {'class': 'form-control', 'rows': '4', 'style': 'resize: none;'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label-sm" for="service_form_description">Descripción Detallada</label>
                                    {{ form_widget(form.description, {
                                        'id': 'service_form_description',
                                        'attr': {'rows': '4'}
                                    }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- TAB 2: RECURSOS Y DOTACIÓN -->
        <div class="tab-pane fade" id="recursos" role="tabpanel" aria-labelledby="recursos-tab">
            <div class="row g-3">
                <div class="col-12">
                    <div class="card border-0 shadow-sm rounded-3">
                        <div class="card-header-compact bg-blue-50/50">
                            <div class="d-flex align-items-center">
                                <i data-lucide="package" class="w-4 h-4 text-blue-700 mr-2"></i>
                                <span class="section-title text-blue-700">Recursos, Materiales y Dotación</span>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <!-- Logística y Soporte -->
                            <div class="bg-slate-50 p-3 rounded-3 border border-slate-100 mb-4">
                                <div class="d-flex align-items-center mb-3">
                                    <i data-lucide="settings-2" class="w-4 h-4 text-blue-600 mr-2"></i>
                                    <span class="section-title">Logística y Soporte</span>
                                </div>
                                <div class="d-flex gap-5">
                                    <div class="d-flex align-items-center gap-3 bg-white p-2 px-3 rounded-2 border border-slate-200 shadow-sm">
                                        <label class="form-label-sm mb-0" for="service_form_hasProvisions">¿Avituallamiento?</label>
                                        <div class="form-check form-switch p-0 m-0">
                                            {{ form_widget(form.hasProvisions, {'attr': {'class': 'form-check-input ms-0'}}) }}
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center gap-3 bg-white p-2 px-3 rounded-2 border border-slate-200 shadow-sm">
                                        <label class="form-label-sm mb-0" for="service_form_hasFieldHospital">Hospital de Campaña</label>
                                        <div class="form-check form-switch p-0 m-0">
                                            {{ form_widget(form.hasFieldHospital, {'attr': {'class': 'form-check-input ms-0'}}) }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3">
                                <!-- Materiales -->
                                <div class="col-lg-8 border-end">
                                    <div class="row g-2" id="materials-container"
                                         data-service-form-target="materialsContainer"
                                         data-index="{{ form.serviceMaterials|length }}"
                                         data-prototype="{{ include('service/_material_prototype.html.twig', { 'form': form.serviceMaterials.vars.prototype })|e('html_attr') }}">

                                        {% for category in ['Sanitario', 'Comunicaciones', 'Logística'] %}
                                        <div class="col-md-4">
                                            <div class="d-flex justify-content-between align-items-center mb-2 px-1">
                                                <span class="text-[10px] font-black text-slate-400 uppercase tracking-tighter">{{ category }}</span>
                                                <button type="button" class="btn btn-link p-0 text-blue-600" data-action="click->service-form#addMaterial" data-category="{{ category }}">
                                                    <i data-lucide="plus-square" class="w-4 h-4"></i>
                                                </button>
                                            </div>
                                            <div class="space-y-2" data-material-category="{{ category }}">
                                                {% for sm in form.serviceMaterials %}
                                                    {% if sm.vars.data.material and sm.vars.data.material.category == category %}
                                                        {{ include('service/_material_prototype.html.twig', { 'form': sm }) }}
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                        </div>
                                        {% endfor %}
                                    </div>
                                </div>

                                <!-- Dotación y Vehículos -->
                                <div class="col-lg-4">
                                    <div class="row g-2">
                                        <!-- Personal -->
                                        <div class="col-6">
                                            <span class="text-[10px] font-black text-slate-400 uppercase tracking-tighter d-block mb-2">Personal Requerido</span>
                                            <div class="space-y-1">
                                                {% for field in ['numTes', 'numTts', 'numDue', 'numDoctors'] %}
                                                    <div class="d-flex justify-content-between align-items-center bg-slate-50 p-1 px-2 rounded border border-slate-100">
                                                        <label class="text-[11px] font-bold text-slate-600" for="{{ form[field].vars.id }}">{{ form[field].vars.label }}</label>
                                                        <div class="form-check form-switch m-0 p-0">
                                                            {{ form_widget(form[field], {'attr': {'class': 'form-check-input ms-0'}}) }}
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                        <!-- Ambulancias -->
                                        <div class="col-6">
                                            <span class="text-[10px] font-black text-slate-400 uppercase tracking-tighter d-block mb-2">Tipo Ambulancia</span>
                                            <div class="space-y-1">
                                                {% for field in ['numSvb', 'numSva', 'numColectiva'] %}
                                                    <div class="d-flex justify-content-between align-items-center bg-slate-50 p-1 px-2 rounded border border-slate-100">
                                                        <label class="text-[11px] font-bold text-slate-600" for="{{ form[field].vars.id }}">{{ form[field].vars.label }}</label>
                                                        <div class="form-check form-switch m-0 p-0">
                                                            {{ form_widget(form[field], {'attr': {'class': 'form-check-input ms-0'}}) }}
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                        <!-- Vehículos (Compact list) -->
                                        <div class="col-12 mt-2">
                                            <span class="text-[10px] font-black text-slate-400 uppercase tracking-tighter d-block mb-1">Asignar Vehículos</span>
                                            <div class="overflow-y-auto" style="max-height: 200px;">
                                                {% for key, vehicle_choice in form.vehicles %}
                                                    {% set vehicle = form.vehicles.vars.choices[key].data %}
                                                    <div class="d-flex align-items-center justify-content-between py-1 border-bottom border-slate-100">
                                                        <label class="text-[11px] text-slate-700" for="{{ vehicle_choice.vars.id }}">{{ vehicle.alias ?: vehicle.model }} <small class="text-muted">({{ vehicle.licensePlate }})</small></label>
                                                        <div class="form-check form-switch m-0 p-0">
                                                            <input class="form-check-input ms-0" type="checkbox" name="{{ vehicle_choice.vars.full_name }}" id="{{ vehicle_choice.vars.id }}" value="{{ vehicle_choice.vars.value }}" {% if vehicle_choice.vars.checked %}checked{% endif %}>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hidden Fields -->
    <div style="display:none;">
        {{ form_rest(form) }}
    </div>

    {{ form_end(form) }}

    <!-- Modals -->
    <!-- Type Modal -->
    <div id="typeModal" class="fixed inset-0 bg-gray-800/60 backdrop-blur-sm flex items-center justify-center z-50 hidden" data-service-form-target="typeModal">
        <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md relative">
            <div class="flex justify-between items-center border-b pb-3 mb-4">
                <h3 class="text-xl font-semibold text-gray-700">Añadir Nuevo Tipo</h3>
                <button type="button" data-action="click->service-form#closeTypeModal" class="text-gray-400 hover:text-gray-600">
                    <i data-lucide="x" class="h-6 w-6"></i>
                </button>
            </div>
            <form id="modal-new-type-form" data-action="submit->service-form#handleTypeSubmit" novalidate>
                <div class="mb-4">
                    <label for="type_name_input" class="block text-sm font-medium text-gray-700 mb-1">Nombre <span class="text-red-500">*</span></label>
                    <input type="text" id="type_name_input" name="name" class="form-control w-full border-gray-300 rounded-md shadow-sm" required data-action="input->service-form#clearError">
                    <div class="invalid-feedback hidden" id="error-type_name_input"></div>
                </div>
                <div class="mt-6 flex justify-end">
                    <button type="submit" class="btn btn-primary">Aceptar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Subcategory Modal -->
    <div id="subcategoryModal" class="fixed inset-0 bg-gray-800/60 backdrop-blur-sm flex items-center justify-center z-50 hidden" data-service-form-target="subcategoryModal">
        <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md relative">
            <div class="flex justify-between items-center border-b pb-3 mb-4">
                <h3 class="text-xl font-semibold text-gray-700">Añadir Categoría/Subcategoría</h3>
                <button type="button" data-action="click->service-form#closeSubcategoryModal" class="text-gray-400 hover:text-gray-600">
                    <i data-lucide="x" class="h-6 w-6"></i>
                </button>
            </div>
            <form id="modal-new-subcategory-form" data-action="submit->service-form#handleSubcategorySubmit" novalidate>
                <input type="hidden" id="modal_type_id" name="type_id">

                <div class="mb-4">
                    <label for="modal_category_select" class="block text-sm font-medium text-gray-700 mb-1">Categoría (Nivel 2) <span class="text-red-500">*</span></label>
                    <div class="input-group">
                        <select id="modal_category_select" name="category" class="form-select w-full border-gray-300 rounded-md shadow-sm" required data-action="change->service-form#clearError">
                            <option value="">Selecciona...</option>
                        </select>
                        <button type="button" class="btn btn-outline-primary" data-action="click->service-form#showNewCategoryInput">
                            <i data-lucide="plus" class="w-4 h-4"></i>
                        </button>
                    </div>
                    <div class="invalid-feedback hidden" id="error-modal_category_select"></div>
                </div>

                <div id="new_category_input_container" class="mb-4 hidden">
                    <label for="modal_new_category_name" class="block text-sm font-medium text-gray-700 mb-1">Nueva Categoría</label>
                    <input type="text" id="modal_new_category_name" name="new_category_name" class="form-control w-full border-gray-300 rounded-md shadow-sm" data-action="input->service-form#clearError">
                    <div class="invalid-feedback hidden" id="error-modal_new_category_name"></div>
                </div>

                <div class="mb-4">
                    <label for="subcategory_name_input" class="block text-sm font-medium text-gray-700 mb-1">Subcategoría (Nivel 3) <span class="text-red-500">*</span></label>
                    <input type="text" id="subcategory_name_input" name="name" class="form-control w-full border-gray-300 rounded-md shadow-sm" required data-action="input->service-form#clearError">
                    <div class="invalid-feedback hidden" id="error-subcategory_name_input"></div>
                </div>

                <div class="mt-6 flex justify-end">
                    <button type="submit" class="btn btn-primary">Aceptar</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
