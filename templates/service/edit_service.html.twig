{% extends 'layout/app.html.twig' %}

{% block title %}Información del Servicio{% endblock %}
{% block page_title %}Información del Servicio{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-error {
            color: #EF4444;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
        /* Custom styles for TinyMCE containers to match the design */
        .tox-tinymce {
            border-radius: 1.5rem !important;
            border: 1px solid #E2E8F0 !important;
            overflow: hidden;
        }
        /* Style for switches */
        .toggle-switch {
            @apply relative inline-flex h-6 w-11 shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 bg-slate-200;
        }
        .toggle-switch[checked], .toggle-switch:checked {
            @apply bg-blue-600;
        }
        .toggle-thumb {
            @apply pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out translate-x-0;
        }
        input:checked + .toggle-switch .toggle-thumb {
            @apply translate-x-5;
        }
    </style>
{% endblock %}

{% block content %}
<div class="w-full px-8 py-8 bg-slate-100 min-h-full" data-controller="service-form modal-form" data-service-id="{{ service.id }}">

    <div class="mb-6 flex space-x-2 bg-slate-100/50 p-1.5 rounded-2xl w-fit">
        <button type="button" class="whitespace-nowrap py-2.5 px-6 rounded-xl font-bold text-sm transition-all duration-200 bg-white text-blue-600 shadow-sm" data-service-form-target="tabLink" data-action="click->service-form#switchTab" data-target="datos-basicos">
            Detalles del Servicio
        </button>
        <button type="button" class="whitespace-nowrap py-2.5 px-6 rounded-xl font-bold text-sm transition-all duration-200 text-slate-500 hover:text-slate-700" data-service-form-target="tabLink" data-action="click->service-form#switchTab" data-target="asistencias">
            Confirmación de Asistencia
        </button>
    </div>

    <div id="datos-basicos" class="tab-content-panel" data-service-form-target="tabContent">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <!-- Inner Bootstrap 5 Tabs for Form Sections -->
        <ul class="nav nav-tabs mb-4" id="serviceEditTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">
                    <i data-lucide="info" class="w-4 h-4 inline-block mr-1"></i> Datos Generales
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="resources-tab" data-bs-toggle="tab" data-bs-target="#resources" type="button" role="tab" aria-controls="resources" aria-selected="false">
                    <i data-lucide="package" class="w-4 h-4 inline-block mr-1"></i> Recursos y Dotación
                </button>
            </li>
        </ul>

        <div class="tab-content" id="serviceEditTabsContent">
            <!-- Tab 1: Datos Generales -->
            <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                <div class="bg-white shadow-sm border border-slate-200 rounded-3xl overflow-hidden mb-6">
                    <div class="p-6 md:p-8">
                        <div class="row g-4 mb-10 border-b border-slate-100 pb-10">
                            <div class="col-md-8">
                                {{ form_label(form.title, 'Título del Servicio', {'label_attr': {'class': 'form-label text-xs font-bold text-slate-500 mb-2'}}) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control form-control-lg font-bold text-slate-900', 'placeholder': 'Ej. Dispositivo Maratón 2024'}}) }}
                                <div class="form-error">{{ form_errors(form.title) }}</div>
                            </div>
                            <div class="col-md-4">
                                {{ form_label(form.numeration, 'Nº de Registro', {'label_attr': {'class': 'form-label text-xs font-bold text-slate-500 mb-2'}}) }}
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-slate-50 text-slate-400"><i data-lucide="barcode" class="w-4 h-4"></i></span>
                                    {{ form_widget(form.numeration, {'attr': {'class': 'form-control font-mono bg-slate-50 text-slate-500', 'placeholder': 'Automático', 'readonly': 'readonly'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="mb-6">
                            {{ form_label(form.locality, 'Lugar / Localización', {'label_attr': {'class': 'form-label text-xs font-bold text-slate-500 mb-2'}}) }}
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i data-lucide="map-pin" class="w-4 h-4 text-slate-400"></i></span>
                                {{ form_widget(form.locality, {'attr': {'class': 'form-control', 'placeholder': 'Ej. Plaza de España'}}) }}
                            </div>
                            <div class="form-error">{{ form_errors(form.locality) }}</div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 pt-6 border-t border-slate-100">
                            <div class="form-group">
                                {{ form_label(form.type, 'Tipo de Servicio', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 mb-2'}}) }}
                                <div class="input-group shadow-sm rounded-xl overflow-hidden">
                                    {{ form_widget(form.type, {'attr': {'class': 'form-select border-slate-200 py-3 px-4'}}) }}
                                    <button type="button" data-action="click->modal-form#openModal" data-modal-id="typeModal" class="btn btn-primary px-4 flex items-center justify-center transition-colors">
                                        <i data-lucide="plus" class="w-4 h-4"></i>
                                    </button>
                                </div>
                                <div class="form-error">{{ form_errors(form.type) }}</div>
                            </div>

                            <div class="form-group">
                                {{ form_label(form.category, 'Categoría', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 mb-2'}}) }}
                                <div class="input-group shadow-sm rounded-xl overflow-hidden">
                                    {{ form_widget(form.category, {'attr': {'class': 'form-select border-slate-200 py-3 px-4'}}) }}
                                    <button type="button" data-action="click->modal-form#openModal" data-modal-id="categoryModal" class="btn btn-primary px-4 flex items-center justify-center transition-colors">
                                        <i data-lucide="plus" class="w-4 h-4"></i>
                                    </button>
                                </div>
                                <div class="form-error">{{ form_errors(form.category) }}</div>
                            </div>

                            <div class="form-group">
                                {{ form_label(form.maxAttendees, 'Plazas Totales', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 mb-2'}}) }}
                                {{ form_widget(form.maxAttendees, {'attr': {'class': 'form-control rounded-xl border-slate-200 py-3 px-4', 'placeholder': 'Sin límite'}}) }}
                                <div class="form-error">{{ form_errors(form.maxAttendees) }}</div>
                            </div>
                        </div>
                    </div>
                </div>

                {# TARJETA 2: Cronología (Tiempos) #}
                <div class="bg-white shadow-sm border border-slate-200 rounded-3xl overflow-hidden mb-6">
                    <div class="p-6 md:p-8">
                        <h5 class="text-slate-400 text-[10px] uppercase tracking-[0.2em] font-black mb-6 flex items-center">
                            <i data-lucide="clock" class="w-4 h-4 mr-2"></i> Cronología del Operativo
                        </h5>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-10 mb-10 pb-10 border-b border-slate-200/50">
                            <div class="form-group">
                                {{ form_label(form.startDate, 'Fecha y Hora Inicio', {'label_attr': {'class': 'form-label text-xs font-bold text-slate-500 mb-2'}}) }}
                                {{ form_widget(form.startDate, {'attr': {'class': 'form-control form-control-lg rounded-2xl font-bold text-slate-800'}}) }}
                                <div class="form-error">{{ form_errors(form.startDate) }}</div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.endDate, 'Fecha y Hora Fin', {'label_attr': {'class': 'form-label text-xs font-bold text-slate-500 mb-2'}}) }}
                                {{ form_widget(form.endDate, {'attr': {'class': 'form-control form-control-lg rounded-2xl font-bold text-slate-800'}}) }}
                                <div class="form-error">{{ form_errors(form.endDate) }}</div>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
                            <div class="form-group">
                                {{ form_label(form.timeAtBase, 'Tiempo en Base (Preparación)', {'label_attr': {'class': 'form-label text-[11px] font-semibold text-slate-400 mb-2'}}) }}
                                {{ form_widget(form.timeAtBase, {'attr': {'class': 'form-control form-control-lg rounded-xl text-slate-600'}}) }}
                                <div class="form-error">{{ form_errors(form.timeAtBase) }}</div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.departureTime, 'Hora de Salida', {'label_attr': {'class': 'form-label text-[11px] font-semibold text-slate-400 mb-2'}}) }}
                                {{ form_widget(form.departureTime, {'attr': {'class': 'form-control form-control-lg rounded-xl text-slate-600'}}) }}
                                <div class="form-error">{{ form_errors(form.departureTime) }}</div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.registrationLimitDate, 'Límite de Inscripción', {'label_attr': {'class': 'form-label text-xs font-bold text-slate-500 mb-2'}}) }}
                                {{ form_widget(form.registrationLimitDate, {'attr': {'class': 'form-control form-control-lg rounded-xl'}}) }}
                                <div class="form-error">{{ form_errors(form.registrationLimitDate) }}</div>
                            </div>
                        </div>
                    </div>
                </div>

                {# TARJETA 4: Definición Operativa #}
                <div class="bg-white shadow-sm border border-slate-200 rounded-3xl overflow-hidden mb-12">
                    <div class="p-6 md:p-8">
                        <h5 class="text-slate-400 text-[10px] uppercase tracking-[0.2em] font-black mb-6 flex items-center">
                            <i data-lucide="clipboard-list" class="w-4 h-4 mr-2"></i> Definición Operativa
                        </h5>
                        <div class="space-y-8">
                            <div class="form-group">
                                <h4 class="text-xl font-black text-slate-800 mb-6 flex items-center gap-3">
                                    <span class="w-1.5 h-8 bg-blue-600 rounded-full"></span>
                                    Tareas
                                </h4>
                                {{ form_widget(form.tasks, {'attr': {'class': 'form-control rounded-2xl border-slate-300 py-4 px-6 text-slate-900 shadow-sm sm:text-base', 'rows': '2', 'placeholder': 'Resumen de tareas (Texto plano)...'}}) }}
                                <div class="form-error">{{ form_errors(form.tasks) }}</div>
                            </div>

                            <div class="form-group">
                                {{ form_label(form.description, 'Descripción', {'label_attr': {'class': 'form-label text-xs font-bold text-slate-500 mb-2'}}) }}
                                {{ form_widget(form.description, {'attr': {'data-service-form-target': 'description', 'class': 'form-control rounded-2xl border-slate-300 py-4 px-6 text-slate-900 shadow-sm sm:text-sm', 'rows': '4'}}) }}
                                <div class="form-error">{{ form_errors(form.description) }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- End Tab 1 -->

            <!-- Tab 2: Recursos y Dotación -->
            <div class="tab-pane fade" id="resources" role="tabpanel" aria-labelledby="resources-tab">
                <div class="bg-white shadow-sm border border-slate-200 rounded-3xl overflow-hidden mb-6">
                    <div class="p-6 md:p-8">
                        <h5 class="text-slate-400 text-[10px] uppercase tracking-[0.2em] font-black mb-10 flex items-center">
                            <i data-lucide="package" class="w-4 h-4 mr-2"></i> Recursos y Dotación del Operativo
                        </h5>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                            <div class="border-end pe-6">
                                <h4 class="text-xs font-black text-slate-800 uppercase mb-6 flex items-center gap-2">
                                    <i data-lucide="truck" class="w-3 h-3 text-blue-600"></i> Ambulancias
                                </h4>
                                <div class="space-y-6">
                                    <div class="flex items-center justify-between">
                                        {{ form_label(form.numSvb, 'SVB', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                        {{ form_widget(form.numSvb, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                    </div>
                                    <div class="flex items-center justify-between">
                                        {{ form_label(form.numSva, 'SVA', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                        {{ form_widget(form.numSva, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                    </div>
                                    <div class="flex items-center justify-between">
                                        {{ form_label(form.numSvae, 'SVAE', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                        {{ form_widget(form.numSvae, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                    </div>
                                    <div class="flex items-center justify-between">
                                        {{ form_label(form.numVir, 'VIR', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                        {{ form_widget(form.numVir, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                    </div>
                                </div>
                            </div>

                            <div class="border-end pe-6">
                                <h4 class="text-xs font-black text-slate-800 uppercase mb-6 flex items-center gap-2">
                                    <i data-lucide="users" class="w-3 h-3 text-green-600"></i> Personal Sanitario
                                </h4>
                                <div class="space-y-6">
                                    <div class="flex items-center justify-between">
                                        {{ form_label(form.numTes, 'TES', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                        {{ form_widget(form.numTes, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                    </div>
                                    <div class="flex items-center justify-between">
                                        {{ form_label(form.numTts, 'TTS', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                        {{ form_widget(form.numTts, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                    </div>
                                    <div class="flex items-center justify-between">
                                        {{ form_label(form.numDue, 'DUE', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                        {{ form_widget(form.numDue, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                    </div>
                                    <div class="flex items-center justify-between">
                                        {{ form_label(form.numDoctors, 'Médico', {'label_attr': {'class': 'text-xs font-bold text-slate-500 mb-0'}}) }}
                                        {{ form_widget(form.numDoctors, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '0'}}) }}
                                    </div>
                                </div>
                            </div>

                            <div>
                                <h4 class="text-xs font-black text-slate-800 uppercase mb-6 flex items-center gap-2">
                                    <i data-lucide="settings" class="w-3 h-3 text-orange-600"></i> Logística
                                </h4>
                                <div class="space-y-6">
                                    <div class="form-group">
                                        {{ form_label(form.afluencia, 'Nivel de Afluencia', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 mb-2'}}) }}
                                        {{ form_widget(form.afluencia, {'attr': {'class': 'form-select w-full rounded-xl border-primary text-primary font-bold'}}) }}
                                    </div>
                                    <div class="flex items-center mb-4">
                                        <label for="{{ form.hasFieldHospital.vars.id }}" class="relative inline-flex items-center cursor-pointer">
                                            {{ form_widget(form.hasFieldHospital, {'attr': {'class': 'sr-only peer'}}) }}
                                            <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-green-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-green-600"></div>
                                            <span class="ms-3 text-sm font-bold text-slate-600">Hospital de Campaña</span>
                                        </label>
                                    </div>
                                    <div class="flex items-center">
                                        <label for="{{ form.hasProvisions.vars.id }}" class="relative inline-flex items-center cursor-pointer">
                                            {{ form_widget(form.hasProvisions, {'attr': {'class': 'sr-only peer'}}) }}
                                            <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-cyan-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-cyan-600"></div>
                                            <span class="ms-3 text-sm font-bold text-slate-600">Avituallamiento</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- End Tab 2 -->
        </div><!-- End tab-content -->

        <div style="display:none;">
            {{ form_row(form.whatsappMessage) }}
        </div>

        {# Footer Actions #}
        <div class="d-flex justify-content-end align-items-center gap-3 mt-16 pt-10 border-t border-slate-100">
            <a href="{{ path('app_services_list') }}" class="btn btn-outline-secondary px-6 py-2.5 rounded-xl text-sm font-bold d-inline-flex align-items-center justify-content-center">
                Cancelar
            </a>
            <button type="submit" class="btn btn-primary px-6 py-2.5 rounded-xl text-sm font-bold d-inline-flex align-items-center justify-content-center">
                Guardar Servicio
            </button>
        </div>

        {{ form_end(form) }}
    </div>

    <div id="asistencias" class="tab-content-panel hidden" data-service-form-target="tabContent">
        <div class="bg-white shadow-xl rounded-2xl p-8">
            <div class="flex justify-start items-center mb-6 space-x-4">
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_COORDINATOR') %}
                <div data-action="click->service-form#openModal">
                    <button type="button" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition-transform transform hover:scale-105 flex items-center">
                        <i data-lucide="user-plus" class="mr-2 h-5 w-5"></i> Añadir voluntarios
                    </button>
                </div>
                {% endif %}
                <button type="button" id="fichar-todos-btn" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition-transform transform hover:scale-105 flex items-center">
                    <i data-lucide="check-square" class="mr-2 h-5 w-5"></i> Fichar todos
                </button>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <h4 class="text-lg font-semibold mb-3 p-3 bg-green-100 text-green-800 rounded-lg flex justify-between items-center">
                        <span>Asisten</span>
                        <span class="bg-green-200 text-green-800 text-sm font-bold px-2 py-1 rounded-full">{{ service.assistanceConfirmations|filter(c => c.status == 'attending')|length }}</span>
                    </h4>
                    <ul class="list-group space-y-2">
                        {% for confirmation in service.assistanceConfirmations|filter(c => c.status == 'attending') %}
                            <li class="list-group-item bg-gray-50 p-3 rounded-lg shadow-sm">
                                {% set vs = fichajes[confirmation.volunteer.id] ?? null %}
                                <div class="flex items-center justify-between">
                                    <div>
                                        <span class="font-bold {% if confirmation.isFichajeResponsible %}text-blue-600{% endif %}">
                                            {% if confirmation.isFichajeResponsible %}
                                                <i data-lucide="star" class="h-5 w-5 inline-block text-yellow-500 fill-current" title="Responsable de Fichaje"></i>
                                            {% endif %}
                                            {{ confirmation.volunteer.name }} {{ confirmation.volunteer.lastname }}
                                        </span>
                                        {% if vs %}
                                            {% set totalMinutes = vs.calculateTotalDuration() %}
                                            {% if totalMinutes > 0 %}
                                                {% set hours = (totalMinutes / 60)|round(0, 'floor') %}
                                                {% set minutes = totalMinutes % 60 %}
                                                <span class="ml-2 text-sm font-semibold text-gray-600 bg-gray-200 px-2 py-1 rounded-full" title="Total: {{ totalMinutes }} minutos">{{ hours }}h {{ minutes }}m</span>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        {% if vs %}
                                            {% set last_end_time = null %}
                                            {% for fichaje_item in vs.fichajes %}
                                                {% if fichaje_item.endTime is not null %}
                                                    {% if last_end_time is null or fichaje_item.endTime > last_end_time %}
                                                        {% set last_end_time = fichaje_item.endTime %}
                                                    {% endif %}
                                                {% endif %}
                                            {% endfor %}
                                            <button type="button"
                                                    class="text-blue-600 hover:text-blue-800 p-1"
                                                    title="Añadir fichaje manual"
                                                    data-action="click->service-form#openIndividualFichajeModal"
                                                    data-volunteer-service-id="{{ vs.id }}"
                                                    data-volunteer-name="{{ confirmation.volunteer.name }} {{ confirmation.volunteer.lastname }}"
                                                    data-last-clock-out="{{ last_end_time ? last_end_time|date('Y-m-d H:i:s') : '' }}">
                                                <i data-lucide="clock" class="h-5 w-5"></i>
                                            </button>
                                        {% endif %}
                                        <form method="post" action="{{ path('app_assistance_confirmation_toggle_responsible', {'id': confirmation.id}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('toggle-responsible' ~ confirmation.id) }}">
                                            <button type="submit"
                                                    class="p-1 {% if confirmation.isFichajeResponsible %}text-yellow-500 hover:text-yellow-600{% else %}text-gray-400 hover:text-blue-600{% endif %}"
                                                    title="{% if confirmation.isFichajeResponsible %}Quitar como responsable de fichaje{% else %}Asignar como responsable de fichaje{% endif %}">
                                                <i data-lucide="shield" class="h-5 w-5"></i>
                                            </button>
                                        </form>
                                        <form method="post" action="{{ path('app_assistance_confirmation_remove', {'id': confirmation.id}) }}" onsubmit="return confirm('¿Estás seguro de que quieres eliminar la confirmación de asistencia de este voluntario? Esta acción no se puede deshacer.');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ confirmation.id) }}">
                                            <button type="submit" class="text-red-500 hover:text-red-700 p-1">
                                                <i data-lucide="trash-2" class="h-5 w-5"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>

                                {% if vs and vs.fichajes|length > 0 %}
                                    <div class="mt-3 text-sm">
                                        <h5 class="font-semibold text-gray-700">Historial de Fichajes:</h5>
                                        <ul class="list-disc pl-5 mt-1 space-y-1 text-gray-600">
                                            {% for fichaje_item in vs.fichajes|sort((a, b) => a.startTime <=> b.startTime) %}
                                                <li class="flex justify-between items-center group">
                                                    <span>
