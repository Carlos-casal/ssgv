{% extends 'layout/app.html.twig' %}

{% block title %}Editar Servicio: {{ service.title }}{% endblock %}
{% block page_title %}Editar Servicio{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-error {
            color: #EF4444;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
        .tox-tinymce {
            border-radius: 1rem !important;
            border: 1px solid #E2E8F0 !important;
        }
        .mini-input {
            width: 60px;
            text-align: right;
        }
        .tab-content > .tab-pane:not(.active) {
            display: none !important;
        }
        /* Fusion for selectors */
        .input-group > .form-select.rounded-end-0 {
            border-top-right-radius: 0 !important;
            border-bottom-right-radius: 0 !important;
        }
        .input-group > .btn.rounded-start-0 {
            border-top-left-radius: 0 !important;
            border-bottom-left-radius: 0 !important;
            margin-left: -1px;
        }
    </style>
{% endblock %}

{% block content %}
<div class="w-full px-8 py-8 bg-[#f8f9fa] min-h-full" data-controller="service-form" data-service-id="{{ service.id }}">

    <!-- Top Level Navigation: Details vs Attendance -->
    <div class="mb-8 flex space-x-2 bg-slate-200/50 p-1 rounded-2xl w-fit shadow-inner">
        <button type="button" class="whitespace-nowrap py-2.5 px-6 rounded-xl font-bold text-sm transition-all duration-200 bg-white text-blue-600 shadow-sm" data-service-form-target="tabLink" data-action="click->service-form#switchTab" data-target="details-panel">
            <i data-lucide="file-text" class="w-4 h-4 inline-block mr-2"></i> Detalles del Servicio
        </button>
        <button type="button" class="whitespace-nowrap py-2.5 px-6 rounded-xl font-bold text-sm transition-all duration-200 text-slate-500 hover:text-slate-700" data-service-form-target="tabLink" data-action="click->service-form#switchTab" data-target="attendance-panel">
            <i data-lucide="users" class="w-4 h-4 inline-block mr-2"></i> Confirmación de Asistencia
        </button>
    </div>

    <!-- Panel 1: Details (The Form) -->
    <div id="details-panel" data-service-form-target="tabContent" class="tab-content-panel">
        {{ form_start(form, {
            'attr': {
                'class': 'space-y-6',
                'id': 'edit-service-form-element',
                'data-service-form-target': 'form',
                'novalidate': 'novalidate'
            }
        }) }}

        <!-- Internal Tabs for Form Sections -->
        <ul class="nav nav-tabs mb-4 border-b-0" id="serviceTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active font-bold py-3 px-6 rounded-t-2xl border-0 shadow-sm transition-all" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">
                    <i data-lucide="info" class="w-4 h-4 inline-block mr-2"></i> Datos Generales
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link font-bold py-3 px-6 rounded-t-2xl border-0 shadow-sm transition-all text-slate-500" id="resources-tab" data-bs-toggle="tab" data-bs-target="#resources" type="button" role="tab" aria-controls="resources" aria-selected="false">
                    <i data-lucide="package" class="w-4 h-4 inline-block mr-2"></i> Recursos y Dotación
                </button>
            </li>
        </ul>

        <div class="tab-content" id="serviceTabsContent">
            <!-- Tab 1: Datos Generales -->
            <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                <div class="card border-0 shadow-sm mb-4 rounded-3 overflow-hidden">
                    <div class="card-body p-8">
                        <div class="row g-4 mb-8">
                            <div class="col-md-8">
                                <label class="form-label text-xs font-bold text-slate-500 mb-2" for="service_title">Título del Servicio <span class="text-danger">*</span></label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-white border-end-0"><i data-lucide="briefcase" class="w-5 h-5 text-slate-400"></i></span>
                                    {{ form_widget(form.title, {'id': 'service_title', 'attr': {'class': 'form-control font-bold text-slate-900 border-start-0', 'data-action': 'input->service-form#clearError'}}) }}
                                </div>
                                <div class="invalid-feedback hidden" id="error-service_title"></div>
                                <div class="form-error">{{ form_errors(form.title) }}</div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-xs font-bold text-slate-500 mb-2" for="service_numeration">Nº de Registro</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light text-slate-400 border-end-0"><i data-lucide="barcode" class="w-5 h-5"></i></span>
                                    {{ form_widget(form.numeration, {'id': 'service_numeration', 'attr': {'class': 'form-control bg-light font-monospace border-start-0', 'placeholder': 'Ej: 2026-001'}}) }}
                                </div>
                                <small class="text-muted">Si no se tiene el nº de registro, se genera automáticamente al guardar</small>
                                <div class="invalid-feedback hidden" id="error-service_numeration"></div>
                            </div>
                        </div>

                        <div class="row g-4 mb-8">
                            <div class="col-md-8">
                                <label class="form-label text-xs font-bold text-slate-500 mb-2" for="service_locality">Ubicación / Lugar del Operativo <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0"><i data-lucide="map-pin" class="w-4 h-4 text-slate-400"></i></span>
                                    {{ form_widget(form.locality, {'id': 'service_locality', 'attr': {'class': 'form-control border-start-0'}}) }}
                                </div>
                                <div class="invalid-feedback hidden" id="error-service_locality"></div>
                                <div class="form-error">{{ form_errors(form.locality) }}</div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-xs font-bold text-slate-500 mb-2" for="service_afluencia">Afluencia Estimada <span class="text-danger">*</span></label>
                                {{ form_widget(form.afluencia, {'id': 'service_afluencia', 'attr': {'class': 'form-select', 'data-action': 'change->service-form#updateAfluenciaColor'}}) }}
                                <div class="invalid-feedback hidden" id="error-service_afluencia"></div>
                            </div>
                        </div>

                        <!-- Hierarchy -->
                        <div class="row g-4 pt-6 border-t border-slate-50">
                            <div class="col-md-6">
                                <label class="form-label text-xs font-bold text-slate-500 mb-2" for="service_type">1. Tipo de Servicio <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    {{ form_widget(form.type, {'id': 'service_type', 'attr': {'class': 'form-select py-3 shadow-sm rounded-end-0', 'data-action': 'change->service-form#updateCategories change->service-form#clearError'}}) }}
                                    <button type="button" class="btn btn-primary px-3 rounded-start-0" data-action="click->service-form#openTypeModal">
                                        <i data-lucide="plus" class="w-4 h-4"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback hidden" id="error-service_type"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-xs font-bold text-slate-500 mb-2" for="service_subcategory">2. Categoría y Subcategoría <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    {{ form_widget(form.subcategory, {'id': 'service_subcategory', 'attr': {'class': 'form-select py-3 shadow-sm rounded-end-0', 'data-action': 'change->service-form#clearError'}}) }}
                                    <button type="button" class="btn btn-primary px-3 rounded-start-0" data-action="click->service-form#openSubcategoryModal">
                                        <i data-lucide="plus" class="w-4 h-4"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback hidden" id="error-service_subcategory"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cronología -->
                <div class="card border-0 shadow-sm mb-4 rounded-3 overflow-hidden">
                    <div class="card-body p-8">
                        <h5 class="text-slate-400 text-[10px] uppercase tracking-[0.2em] font-black mb-6 flex items-center">
                            <i data-lucide="calendar" class="w-4 h-4 mr-2"></i> Cronología del Operativo
                        </h5>
                        <div class="row g-4 mb-6">
                            <div class="col-md-6">
                                <label class="form-label text-sm font-bold text-slate-700 mb-2" for="service_startDate">Inicio del Servicio <span class="text-danger">*</span></label>
                                {{ form_widget(form.startDate, {'id': 'service_startDate', 'attr': {'class': 'form-control form-control-lg font-bold shadow-sm', 'data-action': 'input->service-form#clearError'}}) }}
                                <div class="invalid-feedback hidden" id="error-service_startDate"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-sm font-bold text-slate-700 mb-2" for="service_endDate">Finalización <span class="text-danger">*</span></label>
                                {{ form_widget(form.endDate, {'id': 'service_endDate', 'attr': {'class': 'form-control form-control-lg font-bold shadow-sm', 'data-action': 'input->service-form#clearError'}}) }}
                                <div class="invalid-feedback hidden" id="error-service_endDate"></div>
                            </div>
                        </div>
                        <div class="row g-4">
                            <div class="col-md-4">
                                <label class="form-label text-xs font-semibold text-slate-400 mb-2" for="service_timeAtBase">Hora en Base <span class="text-danger">*</span></label>
                                {{ form_widget(form.timeAtBase, {'id': 'service_timeAtBase', 'attr': {'class': 'form-control shadow-sm', 'data-action': 'input->service-form#clearError'}}) }}
                                <div class="invalid-feedback hidden" id="error-service_timeAtBase"></div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-xs font-semibold text-slate-400 mb-2" for="service_departureTime">Hora de Salida <span class="text-danger">*</span></label>
                                {{ form_widget(form.departureTime, {'id': 'service_departureTime', 'attr': {'class': 'form-control shadow-sm', 'data-action': 'input->service-form#clearError'}}) }}
                                <div class="invalid-feedback hidden" id="error-service_departureTime"></div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-xs font-semibold text-slate-400 mb-2" for="service_registrationLimitDate">Límite Inscripción <span class="text-danger">*</span></label>
                                {{ form_widget(form.registrationLimitDate, {'id': 'service_registrationLimitDate', 'attr': {'class': 'form-control shadow-sm', 'data-action': 'input->service-form#clearError'}}) }}
                                <div class="invalid-feedback hidden" id="error-service_registrationLimitDate"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Definición Operativa -->
                <div class="card border-0 shadow-sm mb-4 rounded-3 overflow-hidden">
                    <div class="card-body p-8">
                        <h5 class="text-slate-400 text-[10px] uppercase tracking-[0.2em] font-black mb-6 flex items-center">
                            <i data-lucide="clipboard-list" class="w-4 h-4 mr-2"></i> Definición Operativa
                        </h5>
                        <div class="space-y-6">
                            <div>
                                <label class="form-label text-xs font-bold text-slate-500 mb-2" for="service_tasks">Tareas</label>
                                {{ form_widget(form.tasks, {'id': 'service_tasks', 'attr': {'class': 'form-control', 'rows': '2'}}) }}
                            </div>
                            <div>
                                <label class="form-label text-xs font-bold text-slate-500 mb-2" for="service_form_description">Descripción</label>
                                {{ form_widget(form.description, {'id': 'service_form_description', 'attr': {'class': 'form-control', 'rows': '4'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tab 2: Recursos y Dotación -->
            <div class="tab-pane fade" id="resources" role="tabpanel" aria-labelledby="resources-tab">
                <div class="card border-0 shadow-sm mb-4 rounded-3 overflow-hidden">
                    <div class="card-body p-8">
                        <h5 class="text-slate-400 text-[10px] uppercase tracking-[0.2em] font-black mb-8 flex items-center">
                            <i data-lucide="package" class="w-4 h-4 mr-2"></i> Material y Logística
                        </h5>
                        <div class="row g-4" id="materials-container"
                             data-service-form-target="materialsContainer"
                             data-index="{{ form.serviceMaterials|length }}"
                             data-prototype="{{ include('service/_material_prototype.html.twig', { 'form': form.serviceMaterials.vars.prototype })|e('html_attr') }}">

                            <!-- Categoría: Sanitario -->
                            <div class="col-md-3 border-end">
                                <div class="flex justify-between items-center mb-4">
                                    <h6 class="text-xs font-black text-slate-800 uppercase flex items-center m-0">
                                        <i data-lucide="heart-pulse" class="w-3 h-3 mr-2 text-red-600"></i> Sanitario
                                    </h6>
                                    <button type="button" class="btn btn-primary btn-sm rounded-circle w-6 h-6 p-0 flex items-center justify-center add-material-btn" data-action="click->service-form#addMaterial" data-category="Sanitario">
                                        <i data-lucide="plus" class="w-3 h-3"></i>
                                    </button>
                                </div>
                                <div class="space-y-3" data-material-category="Sanitario">
                                    {% for sm in form.serviceMaterials %}
                                        {% if sm.vars.data.material and sm.vars.data.material.category == 'Sanitario' %}
                                            {{ include('service/_material_prototype.html.twig', { 'form': sm }) }}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                                <div class="mt-2">
                                    <button type="button" class="btn btn-link text-slate-400 p-0 text-[10px] font-bold" data-action="click->service-form#openMaterialModal" data-category="Sanitario">
                                        Aprender Nuevo
                                    </button>
                                </div>
                            </div>

                            <!-- Categoría: Comunicaciones -->
                            <div class="col-md-3 border-end px-3">
                                <div class="flex justify-between items-center mb-4">
                                    <h6 class="text-xs font-black text-slate-800 uppercase flex items-center m-0">
                                        <i data-lucide="radio" class="w-3 h-3 mr-2 text-blue-600"></i> Comunicaciones
                                    </h6>
                                    <button type="button" class="btn btn-primary btn-sm rounded-circle w-6 h-6 p-0 flex items-center justify-center add-material-btn" data-action="click->service-form#addMaterial" data-category="Comunicaciones">
                                        <i data-lucide="plus" class="w-3 h-3"></i>
                                    </button>
                                </div>
                                <div class="space-y-3" data-material-category="Comunicaciones">
                                    {% for sm in form.serviceMaterials %}
                                        {% if sm.vars.data.material and sm.vars.data.material.category == 'Comunicaciones' %}
                                            {{ include('service/_material_prototype.html.twig', { 'form': sm }) }}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                                <div class="mt-2">
                                    <button type="button" class="btn btn-link text-slate-400 p-0 text-[10px] font-bold" data-action="click->service-form#openMaterialModal" data-category="Comunicaciones">
                                        Aprender Nuevo
                                    </button>
                                </div>
                            </div>

                            <!-- Categoría: Logística -->
                            <div class="col-md-3 border-end px-3">
                                <div class="flex justify-between items-center mb-4">
                                    <h6 class="text-xs font-black text-slate-800 uppercase flex items-center m-0">
                                        <i data-lucide="truck" class="w-3 h-3 mr-2 text-orange-600"></i> Logística
                                    </h6>
                                    <button type="button" class="btn btn-primary btn-sm rounded-circle w-6 h-6 p-0 flex items-center justify-center add-material-btn" data-action="click->service-form#addMaterial" data-category="Logística">
                                        <i data-lucide="plus" class="w-3 h-3"></i>
                                    </button>
                                </div>
                                <div class="space-y-3" data-material-category="Logística">
                                    {% for sm in form.serviceMaterials %}
                                        {% if sm.vars.data.material and sm.vars.data.material.category == 'Logística' %}
                                            {{ include('service/_material_prototype.html.twig', { 'form': sm }) }}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                                <div class="mt-2">
                                    <button type="button" class="btn btn-link text-slate-400 p-0 text-[10px] font-bold" data-action="click->service-form#openMaterialModal" data-category="Logística">
                                        Aprender Nuevo
                                    </button>
                                </div>
                            </div>

                            <!-- Categoría: Avituallamiento -->
                            <div class="col-md-3 ps-3">
                                <div class="flex justify-between items-center mb-4">
                                    <h6 class="text-xs font-black text-slate-800 uppercase flex items-center m-0">
                                        <i data-lucide="apple" class="w-3 h-3 mr-2 text-green-600"></i> Avituallamiento
                                    </h6>
                                    <button type="button" class="btn btn-primary btn-sm rounded-circle w-6 h-6 p-0 flex items-center justify-center add-material-btn" data-action="click->service-form#addMaterial" data-category="Avituallamiento">
                                        <i data-lucide="plus" class="w-3 h-3"></i>
                                    </button>
                                </div>
                                <div class="space-y-3" data-material-category="Avituallamiento">
                                    {% for sm in form.serviceMaterials %}
                                        {% if sm.vars.data.material and sm.vars.data.material.category == 'Avituallamiento' %}
                                            {{ include('service/_material_prototype.html.twig', { 'form': sm }) }}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                                <div class="mt-2">
                                    <button type="button" class="btn btn-link text-slate-400 p-0 text-[10px] font-bold" data-action="click->service-form#openMaterialModal" data-category="Avituallamiento">
                                        Aprender Nuevo
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm mb-4 rounded-3 overflow-hidden">
                    <div class="card-body p-8">
                        <h5 class="text-slate-400 text-[10px] uppercase tracking-[0.2em] font-black mb-8 flex items-center">
                            <i data-lucide="users" class="w-4 h-4 mr-2"></i> Dotación y Vehículos
                        </h5>
                        <div class="row g-4">
                            <div class="col-md-6 border-end pe-6">
                                <label class="form-label text-xs font-bold text-slate-500 mb-2">Vehículos Asignados</label>
                                <div class="border rounded-xl p-3 bg-slate-50 shadow-inner overflow-y-auto" style="max-height: 160px;">
                                    {{ form_widget(form.vehicles) }}
                                </div>
                            </div>
                            <div class="col-md-6 ps-6">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <label class="form-label text-xs font-bold text-slate-500 m-0">Personal y Ambulancias</label>
                                    <div class="d-flex align-items-center">
                                        <span class="text-[10px] font-bold text-slate-400 uppercase mr-2">Límite Inscripciones</span>
                                        {{ form_widget(form.maxAttendees, {'attr': {'class': 'form-control form-control-sm mini-input', 'placeholder': '∞'}}) }}
                                    </div>
                                </div>
                                <div class="row g-3">
                                    <div class="col-4 d-flex align-items-center justify-content-between">
                                        <label class="text-[10px] font-black text-slate-500 uppercase" for="service_numTes">TES</label>
                                        {{ form_widget(form.numTes, {'id': 'service_numTes', 'attr': {'class': 'form-control form-control-sm mini-input', 'maxlength': '2'}}) }}
                                    </div>
                                    <div class="col-4 d-flex align-items-center justify-content-between">
                                        <label class="text-[10px] font-black text-slate-500 uppercase" for="service_numTts">TTS</label>
                                        {{ form_widget(form.numTts, {'id': 'service_numTts', 'attr': {'class': 'form-control form-control-sm mini-input', 'maxlength': '2'}}) }}
                                    </div>
                                    <div class="col-4 d-flex align-items-center justify-content-between">
                                        <label class="text-[10px] font-black text-slate-500 uppercase" for="service_numDue">DUE</label>
                                        {{ form_widget(form.numDue, {'id': 'service_numDue', 'attr': {'class': 'form-control form-control-sm mini-input', 'maxlength': '2'}}) }}
                                    </div>
                                    <div class="col-4 d-flex align-items-center justify-content-between">
                                        <label class="text-[10px] font-black text-slate-500 uppercase" for="service_numDoctors">Médico</label>
                                        {{ form_widget(form.numDoctors, {'id': 'service_numDoctors', 'attr': {'class': 'form-control form-control-sm mini-input', 'maxlength': '2'}}) }}
                                    </div>
                                    <div class="col-4 d-flex align-items-center justify-content-between">
                                        <label class="text-[10px] font-black text-slate-500 uppercase" for="service_numSvb">SVB</label>
                                        {{ form_widget(form.numSvb, {'id': 'service_numSvb', 'attr': {'class': 'form-control form-control-sm mini-input', 'maxlength': '2'}}) }}
                                    </div>
                                    <div class="col-4 d-flex align-items-center justify-content-between">
                                        <label class="text-[10px] font-black text-slate-500 uppercase" for="service_numSva">SVA</label>
                                        {{ form_widget(form.numSva, {'id': 'service_numSva', 'attr': {'class': 'form-control form-control-sm mini-input', 'maxlength': '2'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div style="display:none;">
            {{ form_rest(form) }}
        </div>

        <!-- Actions -->
        <div class="d-flex justify-content-end align-items-center gap-3 pt-6 border-t border-slate-200 mt-8">
            <a href="{{ path('app_services_list') }}" class="btn btn-outline-secondary btn-lg px-4 me-3">
                Volver al listado
            </a>
            <button type="submit" class="btn btn-primary btn-lg fw-bold px-4">
                Actualizar Servicio
            </button>
        </div>

        {{ form_end(form) }}
    </div>

    <!-- Panel 2: Attendance (Restored from Original) -->
    <div id="attendance-panel" data-service-form-target="tabContent" class="tab-content-panel hidden">
        <div class="bg-white shadow-xl rounded-3xl p-8">
            <div class="flex justify-between items-center mb-8 pb-4 border-b border-slate-100">
                <h3 class="text-xl font-bold text-slate-800 flex items-center">
                    <i data-lucide="user-check" class="w-6 h-6 mr-3 text-green-600"></i> Gestión de Asistencia
                </h3>
                <div class="flex space-x-3">
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_COORDINATOR') %}
                    <button type="button" data-action="click->service-form#openModal" class="btn btn-primary flex items-center">
                        <i data-lucide="user-plus" class="mr-2 h-4 w-4"></i> Añadir voluntarios
                    </button>
                    {% endif %}
                    <button type="button" id="fichar-todos-btn" class="btn btn-outline-success flex items-center">
                        <i data-lucide="check-square" class="mr-2 h-4 w-4"></i> Fichar todos
                    </button>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Asisten -->
                <div class="bg-slate-50 rounded-2xl p-6 border border-slate-100">
                    <h4 class="text-sm font-black uppercase tracking-wider text-green-700 mb-4 flex justify-between items-center">
                        <span>Asistentes</span>
                        <span class="bg-green-100 px-2 py-0.5 rounded-full text-xs">{{ service.assistanceConfirmations|filter(c => c.status == 'attending')|length }}</span>
                    </h4>
