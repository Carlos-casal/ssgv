{% extends 'layout/app.html.twig' %}

{% block title %}
    {% if material.category == 'Sanitario' %}
        Alta de Material Sanitario / Farmacia
    {% elseif material.category == 'Comunicaciones' %}
        Alta de Equipo de Comunicaciones
    {% else %}
        Nuevo Material
    {% endif %}
{% endblock %}

{% block page_title %}
    <div class="d-flex justify-content-between align-items-center w-100">
        <span>
            {% if material.category == 'Sanitario' %}
                Alta de Material Sanitario / Farmacia
            {% elseif material.category == 'Comunicaciones' %}
                Alta de Equipo de Comunicaciones / Telefonía
            {% else %}
                Registrar Nuevo Material
            {% endif %}
        </span>
        <div>
            <button type="button" onclick="document.querySelector('form[name=\"material\"]').submit()" class="btn btn-primary shadow-sm px-4">
                <i class="fas fa-save mr-2"></i> Guardar
            </button>
            <a href="{{ path('app_material_index') }}" class="btn btn-outline-secondary ml-2">Cancelar</a>
        </div>
    </div>
{% endblock %}

{% block content %}
<div class="container-fluid py-4" data-controller="material-comms-form">
    {{ form_start(form, {'attr': {'class': 'material-form', 'novalidate': 'novalidate'}}) }}

    {% if material.category == 'Comunicaciones' %}
    {# Layout para Comunicaciones #}
    <div class="row">
        {# Columna Izquierda #}
        <div class="col-lg-8">
            {# Panel A: Datos del Equipo (Físico) #}
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-radio mr-2"></i> Panel A: Datos del Equipo (Físico)
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">{{ form_row(form.deviceType) }}</div>
                        <div class="col-md-6">{{ form_row(form.brandModel) }}</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <div class="bg-yellow-50 p-2 rounded border border-warning-subtle">
                                {{ form_row(form.serialNumber, {'label': 'Número de Serie (S/N) *'}) }}
                            </div>
                        </div>
                        <div class="col-md-6">{{ form_row(form.operationalStatus) }}</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12">{{ form_row(form.name, {'label': 'Nombre / Alias en Red'}) }}</div>
                    </div>
                </div>
            </div>

            {# Panel B: Datos de Red (Lógico) #}
            <div class="card shadow-sm mb-4 border-0 border-left-info">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-network-wired mr-2"></i> Panel B: Datos de Red (Lógico)
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">{{ form_row(form.frequencyBand) }}</div>
                        <div class="col-md-6">{{ form_row(form.networkId, {'label': 'ID de Red (ISSI / IMEI / MMSI)'}) }}</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">{{ form_row(form.phoneNumber) }}</div>
                    </div>
                </div>
            </div>

            {# Panel C: Mantenimiento y Accesorios #}
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-secondary">
                        <i class="fas fa-tools mr-2"></i> Panel C: Mantenimiento y Accesorios
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">{{ form_row(form.purchaseDate) }}</div>
                        <div class="col-md-6">{{ form_row(form.warrantyEndDate, {'label': 'Fin de Garantía'}) }}</div>
                    </div>
                    <hr class="my-4">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-check custom-checkbox">
                                {{ form_widget(form.hasCharger) }}
                                {{ form_label(form.hasCharger) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check custom-checkbox">
                                {{ form_widget(form.hasClip) }}
                                {{ form_label(form.hasClip) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check custom-checkbox">
                                {{ form_widget(form.hasMicrophone) }}
                                {{ form_label(form.hasMicrophone) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Columna Derecha #}
        <div class="col-lg-4">
            {# Imagen #}
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-camera fa-3x text-gray-300"></i>
                    </div>
                    {{ form_row(form.imageFile, {'label': 'Foto del Activo'}) }}
                </div>
            </div>

            {# Batería #}
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-battery-three-quarters mr-2"></i> Estado de Energía
                    </h6>
                </div>
                <div class="card-body">
                    {{ form_row(form.batteryStatus) }}
                </div>
            </div>

            {# Asignación #}
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-truck mr-2"></i> Instalación / Asignación
                    </h6>
                </div>
                <div class="card-body">
                    {{ form_row(form.assignedVehicle) }}
                </div>
            </div>

            {# Stock (Always 1 for Comms assets in this model) #}
            <div class="card shadow-sm mb-4 border-0 bg-light">
                <div class="card-body">
                    <div class="hidden">
                        {{ form_row(form.stock, {'value': 1}) }}
                        {{ form_row(form.nature, {'value': 'EQUIPO_TECNICO'}) }}
                        {{ form_row(form.category, {'value': 'Comunicaciones'}) }}
                    </div>
                    <p class="mb-0 small text-muted">Este equipo se registra como una <strong>unidad individual</strong> de inventario.</p>
                </div>
            </div>
        </div>
    </div>

    {% else %}
    {# Layout Genérico / Sanitario (Existente) #}
    <div class="row">
        {# Columna Izquierda (66%) #}
        <div class="col-lg-8">
            {# Datos Clínicos / Generales #}
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-file-medical mr-2"></i>
                        {{ material.category == 'Sanitario' ? 'Datos Clínicos' : 'Información General' }}
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            {{ form_row(form.name, {'label': material.category == 'Sanitario' ? 'Nombre comercial / Genérico' : 'Nombre del Material'}) }}
                        </div>
                        <div class="col-md-4">
                            {% if material.category == 'Sanitario' %}
                                {{ form_row(form.subFamily) }}
                            {% else %}
                                {{ form_row(form.category) }}
                            {% endif %}
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12">
                            {{ form_row(form.description) }}
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            {{ form_row(form.nature) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.barcode) }}
                        </div>
                    </div>
                </div>
            </div>

            {# Seguridad y Trazabilidad (Solo para Sanitario o cuando sea relevante) #}
            {% if material.category != 'Comunicaciones' %}
            <div class="card shadow-sm mb-4 border-left-danger border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-danger">
                        <i class="fas fa-shield-alt mr-2"></i> Seguridad y Trazabilidad
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            {{ form_row(form.batchNumber) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.expirationDate) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.supplier) }}
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

            {# Financial and other fields if not sanitary #}
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.unitPrice) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.iva) }}
                        </div>
                    </div>
                </div>
            </div>

            {% if material.category != 'Sanitario' and material.category != 'Comunicaciones' %}
                <div class="card shadow-sm mb-4 border-0" id="sizing-card">
                    <div class="card-body">
                        {{ form_row(form.sizingType) }}
                    </div>
                </div>
            {% endif %}
        </div>

        {# Columna Derecha (33%) #}
        <div class="col-lg-4">
            {# Imagen #}
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-camera fa-3x text-gray-300"></i>
                    </div>
                    {{ form_row(form.imageFile, {'label': 'Imagen del Producto'}) }}
                </div>
            </div>

            {# Formatos (Logística) #}
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-boxes mr-2"></i> Logística y Formatos
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            {{ form_row(form.packagingFormat, {'label': 'Formato'}) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.unitsPerPackage, {'label': 'Uds/Envase'}) }}
                        </div>
                    </div>
                </div>
            </div>

            {# Stock #}
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-warehouse mr-2"></i> Gestión de Inventario
                    </h6>
                </div>
                <div class="card-body">
                    {{ form_row(form.stock, {'label': 'Stock Actual (Unidades)'}) }}
                    {{ form_row(form.safetyStock, {'label': 'Stock Mínimo'}) }}

                    <div class="alert alert-light border mt-3 py-2 small">
                        <i class="fas fa-info-circle text-info mr-1"></i>
                        El stock se gestiona en <strong>unidades sueltas</strong>.
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
    {{ form_end(form) }}
</div>

<style>
    .border-left-danger {
        border-left: 0.25rem solid #e74a3b !important;
    }
    .material-form .form-group {
        margin-bottom: 1rem;
    }
    .material-form label {
        font-weight: 600;
        color: #4e73df;
        font-size: 0.85rem;
        text-transform: uppercase;
    }
</style>
{% endblock %}
