{% extends 'layout/app.html.twig' %}

{% block title %}Registrar Movimiento de Material{% endblock %}

{% block page_title %}Trazabilidad: {{ material.name }}{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h6 class="fw-bold mb-0">Registrar Entrada, Traspaso o Consumo</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info py-2 small mb-4">
                        <i data-lucide="info" class="w-4 h-4 me-2"></i>
                        <strong>Entrada:</strong> Origen vacío. <strong>Traspaso:</strong> Origen y Destino informados. <strong>Consumo/Baja:</strong> Destino vacío.
                    </div>

                    {{ form_start(form) }}
                        <div class="row mb-3">
                            <div class="col-md-6">
                                {{ form_label(form.origin) }}
                                {{ form_widget(form.origin) }}
                                <div class="form-text small">Dejar vacío si es una entrada de proveedor.</div>
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.destination) }}
                                {{ form_widget(form.destination) }}
                                <div class="form-text small">Dejar vacío si es una baja, pérdida o consumo.</div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                {{ form_label(form.quantity) }}
                                {{ form_widget(form.quantity) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_label(form.size) }}
                                {{ form_widget(form.size) }}
                            </div>
                            {% if form.materialUnit is defined %}
                            <div class="col-md-4">
                                {{ form_label(form.materialUnit) }}
                                {{ form_widget(form.materialUnit) }}
                            </div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.responsible) }}
                            {{ form_widget(form.responsible) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.reason) }}
                            {{ form_widget(form.reason) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Procesar Movimiento</button>
                            <a href="{{ path('app_material_show', {id: material.id}) }}" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
