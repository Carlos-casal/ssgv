{% extends 'layout/app.html.twig' %}

{% block title %}Nueva Unidad de Material{% endblock %}

{% block page_title %}Nueva Unidad para {{ material.name }}{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <div class="card shadow mb-4">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.serialNumber) }}</div>
                    <div class="col-md-6 py-4">
                        <div class="custom-control custom-switch">
                            {{ form_widget(form.isInMaintenance) }}
                            <label class="custom-control-label font-weight-bold text-danger" for="{{ form.isInMaintenance.vars.id }}">MODO MANTENIMIENTO</label>
                        </div>
                    </div>
                </div>

                {% if material.category == 'Comunicaciones' %}
                <hr>
                <h6 class="font-weight-bold text-primary mb-3">Estado de Accesorios (Walkie)</h6>
                <div class="row">
                    <div class="col-md-4">{{ form_row(form.pttStatus) }}</div>
                    <div class="col-md-4">{{ form_row(form.coverStatus) }}</div>
                    <div class="col-md-4">{{ form_row(form.batteryStatus) }}</div>
                </div>
                {% endif %}

                <div class="mt-4">
                    <button class="btn btn-primary btn-lg px-5 font-weight-bold">Registrar Unidad</button>
                    <a href="{{ path('app_material_show', {'id': material.id}) }}" class="btn btn-link text-secondary ml-3">Cancelar</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
