{% extends 'base.html.twig' %}

{% block title %}Página de Prueba{% endblock %}

{% form_theme form 'form/tailwind_form_theme.html.twig' %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl font-bold mb-4">Datos Personales</h1>

        {{ form_start(form) }}
        <div class="flex flex-wrap -mx-3">
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0"
                 data-controller="validation"
                 data-validation-type-value="dni">
                {{ form_row(form.dni, {'attr': {'data-validation-target': 'input'}}) }}
                <p data-validation-target="successMessage" class="hidden mt-2 text-sm text-green-600">DNI/NIE válido.</p>
                <p data-validation-target="errorMessage" class="hidden mt-2 text-sm text-red-600">DNI/NIE no válido.</p>
            </div>
            <div class="w-full md:w-1/3 px-3"
                 data-controller="validation"
                 data-validation-type-value="not-empty">
                {{ form_row(form.nombre, {'attr': {'data-validation-target': 'input'}}) }}
                <p data-validation-target="errorMessage" class="hidden mt-2 text-sm text-red-600">El nombre no puede estar vacío.</p>
            </div>
            <div class="w-full md:w-1/3 px-3"
                 data-controller="validation"
                 data-validation-type-value="not-empty">
                {{ form_row(form.apellidos, {'attr': {'data-validation-target': 'input'}}) }}
                <p data-validation-target="errorMessage" class="hidden mt-2 text-sm text-red-600">Los apellidos no pueden estar vacíos.</p>
            </div>
        </div>

        <button type="submit" class="mt-4 px-4 py-2 bg-blue-600 text-white">Enviar</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
