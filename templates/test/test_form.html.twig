{# templates/test/test_form.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Test Form - Input Field Styling{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-6 text-center">Test Form</h1>

        <p class="text-gray-600 mb-6 text-center">This page demonstrates the corrected styling for input fields. The fields below should be clearly visible with a border and background.</p>

        {# Render flash messages #}
        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline">{{ message }}</span>
            </div>
        {% endfor %}

        {{ form_start(form) }}
        <div class="space-y-6">
            <div>
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
            </div>
            <div>
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
            </div>
            <div>
                {{ form_label(form.message) }}
                {{ form_widget(form.message) }}
            </div>
            <div class="text-right">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">Submit</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}