{% extends 'layout/app.html.twig' %}

{% block title %}Panel Inicio{% endblock %}
{% block page_title %}Panel Inicio{% endblock %}

{% block content %}
<div class="p-6 space-y-6">
    <!-- Stats cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Voluntarios Activos</p>
                    <p class="text-3xl font-bold text-gray-900 mt-2">{{ active_volunteers_count }}</p>
                    <div class="flex items-center mt-2">
                        <span class="text-sm font-medium text-green-600">+{{ new_volunteers_this_month }}</span>
                        <span class="text-sm text-gray-500 ml-1">este mes</span>
                    </div>
                </div>
                <div class="p-3 bg-gray-50 rounded-lg">
                    <i data-lucide="users" class="w-6 h-6 text-blue-600"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Servicios del Mes</p>
                    <p class="text-3xl font-bold text-gray-900 mt-2">{{ services_this_month }}</p>
                    <div class="flex items-center mt-2">
                        {# You can add a comparison to the previous month if needed #}
                    </div>
                </div>
                <div class="p-3 bg-gray-50 rounded-lg">
                    <i data-lucide="calendar" class="w-6 h-6 text-green-600"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Veh칤culos Disponibles</p>
                    <p class="text-3xl font-bold text-gray-900 mt-2">{{ available_vehicles_count }}</p>
                     <div class="flex items-center mt-2">
                        {# You can add more details if needed #}
                    </div>
                </div>
                <div class="p-3 bg-gray-50 rounded-lg">
                    <i data-lucide="car" class="w-6 h-6 text-purple-600"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Horas anuales</p>
                    <p class="text-3xl font-bold text-gray-900 mt-2">{{ total_annual_service_hours }}</p>
                    <div class="flex items-center mt-2">
                        <span class="text-sm text-gray-500">{{ completed_services_count }} servicios completados</span>
                    </div>
                </div>
                <div class="p-3 bg-gray-50 rounded-lg">
                    <i data-lucide="clock" class="w-6 h-6 text-orange-600"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent activities -->
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Actividad Reciente</h3>
            <div class="space-y-4">
                {% for activity in recent_activities %}
                    <div class="flex items-start gap-3">
                        <div class="w-2 h-2 rounded-full mt-2
                            {% if 'voluntario' in activity.description|lower %}bg-green-500
                            {% elseif 'servicio' in activity.description|lower %}bg-blue-500
                            {% elseif 'veh칤culo' in activity.description|lower %}bg-yellow-500
                            {% else %}bg-gray-500
                            {% endif %}"></div>
                        <div class="flex-1">
                            <p class="text-sm text-gray-800">{{ activity.description }}</p>
                            <p class="text-xs text-gray-500 mt-1">{{ activity.createdAt|date('d/m/Y H:i') }}</p>
                        </div>
                    </div>
                {% else %}
                    <p class="text-sm text-gray-500">No hay actividad reciente.</p>
                {% endfor %}
            </div>
        </div>

        <!-- Upcoming events -->
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Pr칩ximos Eventos</h3>
            <div class="space-y-4">
                {% for service in upcoming_services %}
                    <div class="border border-gray-200 rounded-lg p-4">
                        <h4 class="font-medium text-gray-900">{{ service.title }}</h4>
                        <div class="flex items-center gap-4 mt-2 text-sm text-gray-600">
                            <span>游늰 {{ service.startDate|date('d M Y') }}</span>
                            <span>游뎷 {{ service.startDate|date('H:i') }}</span>
                            <span>游논 {{ service.maxAttendees }} participantes</span>
                        </div>
                    </div>
                {% else %}
                    <p class="text-sm text-gray-500">No hay eventos pr칩ximos.</p>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Quick actions -->
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Acciones R치pidas</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <button id="add-volunteer-btn" class="flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                <i data-lucide="users" class="w-5 h-5 text-blue-600"></i>
                <span class="font-medium">A침adir Voluntario</span>
            </button>
            <a href="{{ path('app_service_new') }}" class="flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                <i data-lucide="calendar" class="w-5 h-5 text-green-600"></i>
                <span class="font-medium">Programar Servicio</span>
            </a>
            <button class="flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                <i data-lucide="trending-up" class="w-5 h-5 text-purple-600"></i>
                <span class="font-medium">Ver Estad칤sticas</span>
            </button>
        </div>
    </div>
</div>

<!-- Add Volunteer Modal -->
<div id="add-volunteer-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3 text-center">
            <h3 class="text-lg leading-6 font-medium text-gray-900">A침adir Voluntario</h3>
            <div id="initial-options">
                <div class="mt-2 px-7 py-3">
                    <p class="text-sm text-gray-500">
                        Elige una opci칩n para a침adir un nuevo voluntario al sistema.
                    </p>
                </div>
                <div class="items-center px-4 py-3">
                    <a href="{{ path('app_volunteer_new') }}" id="manual-add-btn" class="block w-full px-4 py-2 bg-blue-500 text-white text-base font-medium rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 mb-2">
                        Agregar manualmente
                    </a>
                    <button id="show-send-link-form" class="block w-full px-4 py-2 bg-green-500 text-white text-base font-medium rounded-md shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500">
                        Enviar un enlace de invitaci칩n
                    </button>
                </div>
            </div>

            <div id="send-link-form-container" class="hidden">
                <form action="{{ path('app_invitation_send') }}" method="post" class="mt-2 px-7 py-3">
                    <input type="hidden" name="_token" value="{{ csrf_token('send_invitation') }}">
                    <label for="email" class="block text-sm font-medium text-gray-700 text-left">Correo electr칩nico del invitado</label>
                    <input type="email" name="email" id="email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
                    <div class="items-center px-4 py-3">
                        <button type="submit" class="block w-full px-4 py-2 bg-green-500 text-white text-base font-medium rounded-md shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500">
                            Enviar Invitaci칩n
                        </button>
                    </div>
                </form>
            </div>

            <div class="mt-2">
                <button id="close-modal-btn" class="text-sm text-gray-500 hover:text-gray-700">Cancelar</button>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const modal = document.getElementById('add-volunteer-modal');
            const addBtn = document.getElementById('add-volunteer-btn');
            const closeBtn = document.getElementById('close-modal-btn');
            const showSendLinkFormBtn = document.getElementById('show-send-link-form');
            const initialOptions = document.getElementById('initial-options');
            const sendLinkFormContainer = document.getElementById('send-link-form-container');

            if (addBtn) {
                addBtn.addEventListener('click', () => {
                    modal.classList.remove('hidden');
                });
            }

            if (closeBtn) {
                closeBtn.addEventListener('click', () => {
                    modal.classList.add('hidden');
                    // Reset view to initial options
                    initialOptions.classList.remove('hidden');
                    sendLinkFormContainer.classList.add('hidden');
                });
            }

            // Close modal if clicking outside of it
            window.addEventListener('click', (event) => {
                if (event.target === modal) {
                    modal.classList.add('hidden');
                    initialOptions.classList.remove('hidden');
                    sendLinkFormContainer.classList.add('hidden');
                }
            });

            if (showSendLinkFormBtn) {
                showSendLinkFormBtn.addEventListener('click', () => {
                    initialOptions.classList.add('hidden');
                    sendLinkFormContainer.classList.remove('hidden');
                });
            }
        });
    </script>
{% endblock %}
