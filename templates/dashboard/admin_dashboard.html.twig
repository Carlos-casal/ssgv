{% extends 'layout/app.html.twig' %}

{% block title %}Command Center{% endblock %}
{% block page_title %}Dashboard de Gestión{% endblock %}

{% block content %}
<div class="p-8 w-full max-w-none">
    <div class="flex flex-col lg:flex-row gap-10">

        <!-- ZONA DE DATOS (9/12 approx) -->
        <div class="flex-1 space-y-10">

            <!-- KPIs con Bordes Laterales -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-{{ low_stock_materials_count > 0 ? '5' : '4' }} gap-6">
                <!-- Voluntarios -->
                <a href="{{ path('app_volunteer_list') }}" class="group bg-white p-6 rounded-2xl shadow-sm border border-slate-100 border-l-4 border-blue-500 hover:shadow-md transition-all">
                    <p class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-1">Voluntarios</p>
                    <div class="flex items-end justify-between">
                        <div>
                            <p class="text-3xl font-black text-slate-900">{{ active_volunteers_count }}</p>
                            <span class="text-[10px] font-bold text-green-600">+{{ new_volunteers_this_month }} este mes</span>
                        </div>
                        <i data-lucide="users" class="w-8 h-8 text-blue-100 group-hover:text-blue-500 transition-colors"></i>
                    </div>
                </a>

                <!-- Servicios -->
                <a href="{{ path('app_services_list') }}" class="group bg-white p-6 rounded-2xl shadow-sm border border-slate-100 border-l-4 border-green-500 hover:shadow-md transition-all">
                    <p class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-1">Servicios Mes</p>
                    <div class="flex items-end justify-between">
                        <div>
                            <p class="text-3xl font-black text-slate-900">{{ services_this_month }}</p>
                            <span class="text-[10px] font-bold text-slate-400">Activos actualmente</span>
                        </div>
                        <i data-lucide="activity" class="w-8 h-8 text-green-100 group-hover:text-green-500 transition-colors"></i>
                    </div>
                </a>

                <!-- Vehículos -->
                <a href="{{ path('app_vehicle_index') }}" class="group bg-white p-6 rounded-2xl shadow-sm border border-slate-100 border-l-4 border-amber-500 hover:shadow-md transition-all">
                    <p class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-1">Parque Móvil</p>
                    <div class="flex items-end justify-between">
                        <div>
                            <p class="text-3xl font-black text-slate-900">{{ available_vehicles_count }}</p>
                            <span class="text-[10px] font-bold text-amber-600">Disponibles</span>
                        </div>
                        <i data-lucide="truck" class="w-8 h-8 text-amber-100 group-hover:text-amber-500 transition-colors"></i>
                    </div>
                </a>

                <!-- Horas -->
                <div class="group bg-white p-6 rounded-2xl shadow-sm border border-slate-100 border-l-4 border-indigo-500 hover:shadow-md transition-all">
                    <p class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-1">Horas Anuales</p>
                    <div class="flex items-end justify-between">
                        <div>
                            <p class="text-3xl font-black text-slate-900">{{ total_annual_service_hours }}</p>
                            <span class="text-[10px] font-bold text-slate-400">{{ completed_services_count }} finalizados</span>
                        </div>
                        <i data-lucide="clock" class="w-8 h-8 text-indigo-100 transition-colors"></i>
                    </div>
                </div>

                <!-- Materiales (Low Stock Alert) -->
                {% if low_stock_materials_count > 0 %}
                <a href="{{ path('app_material_index') }}" class="group bg-white p-6 rounded-2xl shadow-sm border border-slate-100 border-l-4 border-red-500 hover:shadow-md transition-all">
                    <p class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-1">Reposición</p>
                    <div class="flex items-end justify-between">
                        <div>
                            <p class="text-3xl font-black text-red-600">{{ low_stock_materials_count }}</p>
                            <span class="text-[10px] font-bold text-red-600">Necesaria</span>
                        </div>
                        <i data-lucide="package" class="w-8 h-8 text-red-100 group-hover:text-red-500 transition-colors"></i>
                    </div>
                </a>
                {% endif %}
            </div>

            <div class="grid grid-cols-1 xl:grid-cols-2 gap-10">
                <!-- Actividad Reciente -->
                <div class="bg-white rounded-3xl p-8 shadow-sm border border-slate-100">
                    <div class="flex items-center justify-between mb-8">
                        <div>
                            <h3 class="text-lg font-black text-slate-800">Log de Actividad</h3>
                            <p class="text-xs text-slate-400">Últimos movimientos del sistema</p>
                        </div>
                        <div class="p-2 bg-slate-50 rounded-xl">
                            <i data-lucide="list-checks" class="w-5 h-5 text-slate-400"></i>
                        </div>
                    </div>

                    <div class="space-y-6">
                        {% for activity in recent_activities|slice(0, 5) %}
                            <div class="flex items-center gap-4 group">
                                <div class="w-10 h-10 rounded-full flex items-center justify-center flex-shrink-0 {{ attribute(activity, 'joinDate') is defined ? 'bg-blue-50 text-blue-600' : 'bg-green-50 text-green-600' }}">
                                    <i data-lucide="{{ attribute(activity, 'joinDate') is defined ? 'user-plus' : 'check-circle' }}" class="w-5 h-5"></i>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm font-bold text-slate-800 truncate">
                                        {% if attribute(activity, 'joinDate') is defined %}
                                            Registro: {{ activity.name }}
                                        {% else %}
                                            Servicio: {{ activity.title }}
                                        {% endif %}
                                    </p>
                                    <p class="text-[10px] font-medium text-slate-400 uppercase tracking-tight">
                                        {% if attribute(activity, 'joinDate') is defined %}
                                            {{ activity.joinDate|date('d M, H:i') }}
                                        {% else %}
                                            {{ activity.endDate|date('d M, H:i') }}
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Próximos Eventos -->
                <div class="bg-white rounded-3xl p-8 shadow-sm border border-slate-100">
                    <div class="flex items-center justify-between mb-8">
                        <div>
                            <h3 class="text-lg font-black text-slate-800">Próximos Servicios</h3>
                            <p class="text-xs text-slate-400">Agenda operativa inmediata</p>
                        </div>
                        <div class="p-2 bg-slate-50 rounded-xl">
                            <i data-lucide="calendar" class="w-5 h-5 text-slate-400"></i>
                        </div>
                    </div>

                    <div class="space-y-4">
                        {% for service in upcoming_services %}
                            <div class="flex items-center gap-4 p-3 rounded-2xl border border-slate-50 hover:border-blue-100 hover:bg-blue-50/30 transition-all">
                                <div class="w-12 h-12 rounded-xl bg-slate-900 text-white flex flex-col items-center justify-center flex-shrink-0">
                                    <span class="text-sm font-black leading-none">{{ service.startDate|date('d') }}</span>
                                    <span class="text-[8px] font-bold uppercase">{{ service.startDate|date('M') }}</span>
                                </div>
                                <div class="flex-1">
                                    <p class="text-sm font-bold text-slate-800">{{ service.title }}</p>
                                    <p class="text-[10px] text-slate-500">{{ service.startDate|date('H:i') }} · {{ service.maxAttendees }} voluntarios</p>
                                </div>
                            </div>
                        {% else %}
                            <div class="text-center py-8">
                                <p class="text-sm text-slate-400 font-medium italic">Sin servicios programados</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <!-- ACCIONES RÁPIDAS (BANNERS) -->
        <div class="lg:w-80 space-y-6">
            <h3 class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-500 ml-4">Acciones Rápidas</h3>

            <!-- Banner: Nuevo Servicio -->
            <a href="{{ path('app_service_new') }}" class="block group bg-blue-600 rounded-3xl p-8 text-white shadow-xl shadow-blue-600/20 hover:scale-[1.02] transition-all relative overflow-hidden">
                <div class="absolute -right-6 -bottom-6 opacity-5 group-hover:scale-110 transition-transform duration-500">
                    <i data-lucide="plus-circle" class="w-24 h-24"></i>
                </div>
                <div class="relative z-10">
                    <div class="w-10 h-10 bg-white/20 rounded-xl flex items-center justify-center mb-6">
                        <i data-lucide="plus" class="w-6 h-6"></i>
                    </div>
                    <p class="text-xl font-black leading-tight">Nuevo<br>Servicio</p>
                    <p class="text-blue-100 text-[10px] mt-2 font-medium">Planifica preventivos o emergencias</p>
                </div>
            </a>

            <!-- Banner: Invitar Voluntario -->
            <div data-controller="modal">
                <button data-action="click->modal#open" class="w-full text-left group bg-green-600 rounded-3xl p-8 text-white shadow-xl shadow-green-600/20 hover:scale-[1.02] transition-all relative overflow-hidden">
                    <div class="absolute -right-6 -bottom-6 opacity-5 group-hover:scale-110 transition-transform duration-500">
                        <i data-lucide="user-plus" class="w-24 h-24"></i>
                    </div>
                    <div class="relative z-10">
                        <div class="w-10 h-10 bg-white/20 rounded-xl flex items-center justify-center mb-6">
                            <i data-lucide="mail" class="w-6 h-6"></i>
                        </div>
                        <p class="text-xl font-black leading-tight">Invitar<br>Voluntario</p>
                        <p class="text-green-100 text-[10px] mt-2 font-medium">Enviar enlace de registro rápido</p>
                    </div>
                </button>

                <!-- Modal (reused from existing logic) -->
                <div data-modal-target="modal" data-action="click->modal#close" class="fixed inset-0 z-50 bg-slate-900/60 backdrop-blur-sm overflow-y-auto h-full w-full flex items-center justify-center hidden">
                    <div data-modal-target="content" class="relative p-10 bg-white w-full max-w-md m-auto flex-col flex rounded-2xl shadow-2xl">
                        <div data-modal-target="invitationForm">
                            <div class="flex justify-between items-center mb-8">
                                <h2 class="text-2xl font-black text-slate-800">Añadir Voluntario</h2>
                                <button data-action="click->modal#closeButton" class="w-10 h-10 flex items-center justify-center rounded-full hover:bg-slate-100 text-slate-400 hover:text-slate-800 transition-all">&times;</button>
                            </div>
                            <div class="space-y-8">
                                <div class="group">
                                    <h3 class="font-bold text-slate-800 group-hover:text-blue-600 transition-colors">Añadir manualmente</h3>
                                    <p class="text-sm text-slate-500 mt-1">Introduce los datos directamente en el sistema.</p>
                                    <a href="{{ path('app_volunteer_new') }}" class="mt-4 block w-full text-center p-4 bg-blue-600 text-white font-bold rounded-xl hover:bg-blue-700 shadow-lg shadow-blue-600/20 transition-all active:scale-95">
                                        Ir al formulario
                                    </a>
                                </div>
                                <div class="border-t border-slate-100 pt-8 group">
                                    <h3 class="font-bold text-slate-800 group-hover:text-blue-600 transition-colors">Enviar invitación</h3>
                                    <p class="text-sm text-slate-500 mt-1">Enlace de registro al correo del nuevo voluntario.</p>
                                    <div class="mt-6 space-y-3">
                                        <label for="invitation-email" class="block text-xs font-black uppercase tracking-widest text-slate-400 ml-1">Correo electrónico</label>
                                        <input type="email" data-modal-target="emailInput" placeholder="ejemplo@voluntarios.org" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-xl focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 outline-none transition-all">
                                    </div>
                                    <button data-action="click->modal#sendInvitation" class="mt-6 w-full p-4 bg-slate-800 text-white font-bold rounded-xl hover:bg-slate-900 shadow-lg transition-all active:scale-95">
                                        Enviar inscripción
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Banner: Estadísticas -->
            <a href="#" class="block group bg-slate-800 rounded-3xl p-8 text-white shadow-xl shadow-slate-800/20 hover:scale-[1.02] transition-all relative overflow-hidden">
                <div class="absolute -right-6 -bottom-6 opacity-5 group-hover:scale-110 transition-transform duration-500">
                    <i data-lucide="bar-chart-2" class="w-24 h-24"></i>
                </div>
                <div class="relative z-10">
                    <div class="w-10 h-10 bg-white/10 rounded-xl flex items-center justify-center mb-6">
                        <i data-lucide="trending-up" class="w-6 h-6 text-slate-400"></i>
                    </div>
                    <p class="text-xl font-black leading-tight">Métricas &<br>Reportes</p>
                    <p class="text-slate-400 text-[10px] mt-2 font-medium">Análisis de actividad y rendimiento</p>
                </div>
            </a>
        </div>

    </div>
</div>
{% endblock %}
