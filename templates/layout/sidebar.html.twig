            <span class="text-sm font-medium">Cerrar Sesión</span>
        </a>
    </div>
</div>

<script>
    // The existing JS for submenus should work fine without changes.
    function setupSidebar() {
        const submenuItems = document.querySelectorAll('.has-submenu');
        submenuItems.forEach((item, index) => {
            if (item.dataset.sidebarListenersAttached) return;
            item.dataset.sidebarListenersAttached = 'true';
            const link = item.querySelector('a');
            const submenu = item.querySelector('ul');
            if (!link || !submenu) return;
            link.setAttribute('aria-controls', `submenu-${index}`);
            submenu.setAttribute('id', `submenu-${index}`);
            link.addEventListener('click', function(event) {
                if (this.getAttribute('href') === '#') {
                    event.preventDefault();
                }
                const parentLi = this.parentElement;
                parentLi.classList.toggle('submenu-open');
                this.setAttribute('aria-expanded', parentLi.classList.contains('submenu-open'));
            });
        });
    }
    document.addEventListener('turbo:load', setupSidebar);
    document.addEventListener('DOMContentLoaded', setupSidebar);
</script>

<style>
    .has-submenu > ul {
        overflow: hidden;
        max-height: 0;
        transition: max-height 0.3s ease-in-out;
        background-color: rgba(0,0,0,0.15);
        border-radius: 0.25rem;
    }
    .has-submenu.submenu-open > ul {
        max-height: 1000px;
    }
    .has-submenu.submenu-open > a > [data-lucide="chevron-right"] {
        transform: rotate(90deg);
    }
</style>