<style>
    .has-submenu > ul {
        overflow: hidden;
        max-height: 0;
        transition: max-height 0.3s ease-in-out;
        background-color: rgba(0, 0, 0, 0.1); /* Slightly darker background for submenus */
    }
    .has-submenu.submenu-open > ul {
        max-height: 1000px; /* A large enough value to show all content */
    }
    .has-submenu.submenu-open > a > [data-lucide="chevron-right"] {
        transform: rotate(90deg);
    }
    .has-submenu ul a {
        color: white; /* Ensure text is white */
    }
    .has-submenu ul a:hover {
        background-color: #1e40af; /* A darker blue for hover */
    }
</style>

<script>
    function setupSidebarHover() {
        const nav = document.getElementById('main-nav');
        if (!nav) return;

        const closeSubmenu = (submenu) => {
            // Recursively close all descendant submenus that are open
            submenu.querySelectorAll('.submenu-open').forEach(openChild => {
                openChild.classList.remove('submenu-open');
                const childLink = openChild.querySelector('a[aria-expanded]');
                if (childLink) {
                    childLink.setAttribute('aria-expanded', 'false');
                }
            });

            // Close the submenu itself
            if (submenu.classList.contains('submenu-open')) {
                submenu.classList.remove('submenu-open');
                const link = submenu.querySelector('a[aria-expanded]');
                if (link) {
                    link.setAttribute('aria-expanded', 'false');
                }
            }
        };

        nav.querySelectorAll('.has-submenu').forEach(item => {
            if (item.dataset.hoverListenersAttached) {
                return;
            }
            item.dataset.hoverListenersAttached = 'true';

            let enterTimer;
            let leaveTimer;

            item.addEventListener('mouseenter', () => {
                clearTimeout(leaveTimer); // Cancel any pending close operations

                enterTimer = setTimeout(() => {
                    // Close sibling submenus
                    const parentUl = item.parentElement;
                    parentUl.querySelectorAll(':scope > .has-submenu').forEach(sibling => {
                        if (sibling !== item) {
                            closeSubmenu(sibling);
                        }
                    });

                    // Open this submenu
                    item.classList.add('submenu-open');
                    const link = item.querySelector('a[aria-expanded]');
                    if (link) {
                        link.setAttribute('aria-expanded', 'true');
                    }
                }, 100); // A small delay to prevent accidental opening
            });

            item.addEventListener('mouseleave', () => {
                clearTimeout(enterTimer); // Cancel any pending open operations

                leaveTimer = setTimeout(() => {
                    closeSubmenu(item);
                }, 200); // Delay to allow moving mouse to child submenu
            });
        });
    }

    document.addEventListener('turbo:load', setupSidebarHover);
    document.addEventListener('DOMContentLoaded', setupSidebarHover);
</script>
