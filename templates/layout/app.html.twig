{% extends 'base.html.twig' %}

{% block body %}
<div class="flex h-screen bg-gray-50">
    <!-- Sidebar -->
    {% include 'layout/sidebar.html.twig' %}
    
    <!-- Main content -->
    <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Main content area -->
        <main class="flex-1 overflow-y-auto p-6">
            <h1 class="text-3xl font-bold text-primary-dark">{% block page_title %}{% endblock %}</h1>
            {% for message in app.flashes('success') %}
                <div class="mx-6 mt-4 p-4 bg-success/10 border border-success/20 rounded-lg text-success-dark">
                    <div class="flex items-center">
                        <i data-lucide="check-circle" class="w-5 h-5 text-success mr-2"></i>
                        <span class="font-medium">{{ message }}</span>
                    </div>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                 <div class="mx-6 mt-4 p-4 bg-error/10 border border-error/20 rounded-lg text-error-dark">
                    <div class="flex items-center">
                        <i data-lucide="alert-circle" class="w-5 h-5 text-error mr-2"></i>
                        <span class="font-medium">{{ message }}</span>
                    </div>
                </div>
            {% endfor %}
            
            {% block content %}{% endblock %}
        </main>
    </div>
</div>
{% endblock %}